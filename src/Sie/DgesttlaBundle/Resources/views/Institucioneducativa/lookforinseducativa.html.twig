{% extends 'layoutDgesttla.html.twig' %}

{% block headercontent %}
<!-- Start header content -->
<div class="header-content">
    <h2><i class="fa fa-file-o"></i>Formación Técnica Tecnológica <span>Actualización de Datos Generales</span></h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Estás aquí:</span>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{path('principal_web')}}">Inicio</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li class="active">Actualizar</li>
        </ol>
    </div>
</div><!-- /.header-content -->
<!--/ End header content -->
{% endblock %}

{% block bodycontent %}

    {% for flashMessage in app.session.flashbag.get('updateOk') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Bien!</strong> {{ flashMessage }}
        </div>
    {% endfor %}

    <!-- Basic Examples -->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel rounded shadow">
                <div class="panel-body">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-primary rounded shadow">
                            <div class="panel-heading">
                                <h3 class="panel-title">1.- Datos de Identificación</h3>
                            </div><!-- /.panel-heading -->
                            <div class="body">
                                {% set iedusu = ieducativa[0] %}
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Código del Instituto:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="{{ institucioneducativa.id }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Nombre del Instituto:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="{{ institucioneducativa.institucioneducativa }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Estado del Instituto:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="{{ ubicacion['estadoinstitucion'] }}" class="form-control text-center" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Nro de Resolución:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="{{ institucioneducativa.nroResolucion }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Fecha de Resolución:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="{{ institucioneducativa.fechaResolucion|date('d-m-Y') }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Sede/Subsede:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input value="sede o subsede" class="form-control text-center" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div>
               
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-primary rounded shadow">
                            <div class="panel-heading">
                                <h3 class="panel-title">2.- Datos de Ubicación del Edificio Escolar</h3>
                            </div><!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Departamento:</strong>
                                            </div>
                                            <div class="col-md-2">
                                                <input value="{{ ubicacion['codigo_departamento'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                            <div class="col-md-7">
                                                <input value="{{ ubicacion['departamento'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Sección Municipal:</strong>
                                            </div>
                                            <div class="col-md-2">
                                                <input value="{{ ubicacion['codigo_seccion'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                            <div class="col-md-7">
                                                <input value="{{ ubicacion['seccion'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Ciudad o Localidad:</strong>
                                            </div>
                                            <div class="col-md-2">
                                                <input value="{{ ubicacion['codigo_localidad'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                            <div class="col-md-7">
                                                <input value="{{ ubicacion['localidad'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Provincia:</strong>
                                            </div>
                                            <div class="col-md-2">
                                                <input value="{{ ubicacion['codigo_provincia'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                            <div class="col-md-7">
                                                <input value="{{ ubicacion['provincia'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Cantón:</strong>
                                            </div>
                                            <div class="col-md-2">
                                                <input value="{{ ubicacion['codigo_canton'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                            <div class="col-md-7">
                                                <input value="{{ ubicacion['canton'] }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Zona:</strong>
                                            </div>
                                            <div class="col-md-9">
                                                <input value="{{ iedusu.zona }}" class="form-control" readonly="readonly" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Código de Edificio Educativo</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input class="form-control" id="disabledInput" type="text" placeholder="{{ ubicacion['codigo_le'] }}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Dirección:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input class="form-control" id="disabledInput" type="text" placeholder="{{ ubicacion['direccion'] }}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div>
                
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-primary rounded shadow">
                            <div class="panel-heading">
                                <h3 class="panel-title">3.- Carácter Jurídico</h3>
                            </div><!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Descripción:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input class="form-control" id="disabledInput" type="text" placeholder="{{ ubicacion['dependencia'] }}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>Turno:</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input class="form-control" id="disabledInput" type="text" placeholder="{{ iedusu.turnoTipo }}" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div>
                    
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-primary rounded shadow">
                            <div class="panel-heading">
                                <h3 class="panel-title">4.- Datos Referenciales</h3>
                            </div><!-- /.panel-heading -->
                            {{ form_start(form) }}
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.telefono1) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.telefono1) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.telefono2) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.telefono2) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.referenciaTelefono2) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.referenciaTelefono2) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.email) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.fax) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.fax) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <strong>{{ form_label(form.casilla) }}</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.casilla) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>                                
                            </div><!-- /.panel-body -->
                            <div class="form-footer">
                                <div class="pull-right">
                                    {{ form_widget(form.guardar,{ 'attr':{'class': 'btn btn-success'} }) }}
                                </div>
                                <div class="clearfix"></div>
                            </div><!-- /.form-footer -->
                            {{ form_end(form) }}
                        </div><!-- /.panel -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Examples -->

{% endblock %}