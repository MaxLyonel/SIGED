{% extends 'layoutDgesttla.html.twig' %}

{% block headercontent %}
<!-- Start header content -->
<div class="header-content">
    <h2><i class="fa fa-file-o"></i>Formación Técnica Tecnológica <span>Nuevo Operativo</span></h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Estás aquí:</span>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{path('principal_web')}}">Inicio</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li class="active">Registrar Operativo</li>
        </ol>
    </div>
</div><!-- /.header-content -->
<!--/ End header content -->
{% endblock %}

{% block bodycontent %}
        
    {% include 'SieHerramientaBundle:Principal:infoue.html.twig' with {'titulo': 'Calendario Académico', 'gestion': gestion,'sie': institucion.id, 'ieducativa':institucion.institucioneducativa, 'opcion': 'Registro'} %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel rounded shadow panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Operativo</h3>
                </div><!-- /.panel-heading -->
                <div class="panel-body">
                    {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form'} } )}}
                    <div class="row">
                        <div class="form-group col-lg-3 col-md-6">
                            {{ form_label(form.operativo) }}
                            {{ form_widget(form.operativo) }}
                        </div>
                        <div class="form-group col-lg-3 col-md-6">
                            {{ form_label(form.periodo) }}
                            {{ form_widget(form.periodo) }}
                        </div>
                        <div class="form-group col-lg-3 col-md-6">
                            {{ form_label(form.fechaInicio) }}
                            {{ form_widget(form.fechaInicio) }}
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-lg-3 col-md-6">
                            {{ form_label(form.fechaFin) }}
                            {{ form_widget(form.fechaFin) }}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12 text-center">
                            {{ form_widget(form.guardar ) }}
                            <a href="{{ path('dgesttla_inst_calendario') }}" class="btn btn-default">Cancelar</a>
                        </div>
                    </div>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>

{% endblock %}