<div class="row">
    <div class="col-lg-12">
        <div id="idmaterias">
            {% if materias is not empty %}
                <div id="no-more-tables">
                    <form method ="POST" action="{{path('dgesttla_malla_tecnica_prerrequisito_add')}}">
                        <input type="hidden" id="registrarPrerrequisito_idMateria" name="registrarPrerrequisito[idMateria]" value="{{materia_base}}">
                        <table class="table table-striped table-primary">
                            <thead>
                                <tr>
                                    <th>N째</th>
                                    <th>Periodo</th>
                                    <th>C처digo</th>
                                    <th>Asignatura</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for materia in materias %}
                                    <tr>
                                        <td data-title="N째">{{ loop.index }}</td>
                                        <td data-title="Periodo">{{ materia.periodo }}&nbsp;</td>
                                        <td data-title="C처digo">{{ materia.codigo_materia }}&nbsp;</td>
                                        <td data-title="Asignatura">{{ materia.asignatura }}&nbsp;</td>                                            
                                        <td data-title="Acciones">
                                            <input type="checkbox" id="registrarPrerrequisito_{{materia.materia_id}}" name="registrarPrerrequisito[{{materia.materia_id}}]" {% if materia.materia_id in arrayPrerrequisitos|keys %}checked{% endif %}>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <input type="submit" class="btn btn-md btn-success" value="Guardar">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-lg-12"><i class="fa fa-warning"></i> No hay materias en la presente carrera</div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 text-center">
        <a href="{{path('dgesttla_malla_curricular')}}" class="btn btn-default"><i class="fa fa-cancel"> </i>Cancelar</a>
    </div>
</div>