{% extends 'layoutProcesos.html.twig' %}
{% block contentoption %}
    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i> Editar proceso <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('flujotipo')}}">Procesos</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                 <li class="active">
                    <i class="fa fa-angle-right"></i>
                    Editar proceso
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
<div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title"> Datos del proceso</h3>
                        </div>
                        <div class="pull-right">                        
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
						{{ form_start(edit_form) }}
							<div class="row">
								<div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
									<label>Nombre del proceso</label>
									{{ form_widget(edit_form.flujo, {'attr':{'class':'form-control','style':'text-transform:uppercase'} }) }}
								</div>
                                <div class="clearfix"></div>
								<div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
									<label>Observaci√≥n</label>
									{{ form_widget(edit_form.obs, {'attr':{'class':'form-control','style':'text-transform:uppercase'} }) }}
								</div>
							</div>
							{{ form_widget(edit_form.submit, {'label':'Guardar cambios','attr':{'class':'btn btn-primary'}}) }}
                            <a href="{{path('flujotipo')}}" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancelar </a>
						{{ form_end(edit_form) }}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}