{% extends 'layoutProcesos.html.twig' %}
{% block contentoption %}
    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-file-text-o"></i> Registrar formulario <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqu√≠:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-file-text-o"></i>
                    <a href="{{ path('flujotipo')}}">Procesos</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">
                    <i class="fa fa-angle-right"></i>
                    Registrar formulario
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Datos del nuevo formulario</h3>
                        </div>
                        <div class="pull-right">
                            
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
						{{ form_start(form) }}
							<div class="row">
								<div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
									{{ form_label(form.ruta) }}
									{{ form_widget(form.ruta, {'attr':{'class':'form-control'} }) }}
								</div>
                                <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
									{{ form_label(form.label) }}
									{{ form_widget(form.label, {'attr':{'class':'form-control'} }) }}
								</div>
								<div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
									{{ form_label(form.nombre) }}
									{{ form_widget(form.nombre, {'attr':{'class':'form-control'} }) }}
								</div>
                                <div class="form-group col-xs-2 col-sm-2 col-md-2 col-lg-2">
									{{ form_label(form.tipo) }}
									{{ form_widget(form.tipo, {'attr':{'class':'form-control'} }) }}
								</div>
							</div>
                            {{ form_widget(form.guardar, {'attr':{'class':'btn btn-primary'} }) }}
                            <a href="{{path('flujotipo')}}" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancelar </a>
						{{ form_end(form) }}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
