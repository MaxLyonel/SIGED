<div class="modal-dialog">
    <div class="modal-content">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Modificar datos</h4>
            </div>
            <div class="panel-body">
                {{ form_start(form,{ 'attr': {'class': 'tab-content form-horizontal','id':'form_condicion_edit'} } ) }}
                    <div class="form-group">
                        <label class="col-sm-4">Tarea</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.ctarea_edit, {'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">Condición</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.condiciones_edit, {'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">Tarea siguiente a la condición</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.ctareasig_edit, {'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4">Tipo condición</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.tipocondicion_edit, {'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                {{ form_end(form) }}  
            </div>
            <div class="panel-footer">
                <div class="pull-right">
                    <button type="button" class="btn btn-primary" onclick="guardarEditCondicion()">Guardar Cambios</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>                    
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div><!-- /.modal-dialog -->
