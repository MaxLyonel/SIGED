                    $("#form_tareaant").empty();
                    $("#form_tareaant").append('<option value="">Seleccionar tarea anterior</option>');
                    $("#form_tareasig").empty();
                    $("#form_tareasig").append('<option value="">Seleccionar tarea siguiente</option>');
