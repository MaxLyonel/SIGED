                                                </a>
                                            {% endif %}
                                            {% if entity.id_estado == 3 %} {#si esta recibido #}
                                                <a href="{{ path('wf_tramite_recibido_enviar', { 'id': entity.id }) }}" class="btn btn-primary btn-xs text-primary" data-toggle="tooltip" data-placement="top" title="{{ entity.proceso_tipo }}" onclick="this.disabled='true'">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            {% endif %}
                                            </td>
                                        </tr>
                                        {% endfor %}
