                                                        <i class="glyphicon glyphicon-check"></i>
                                                    </button>
                                                </form>
                                                {# <a href="{{ path('wf_tramite_recibido_guardar', { 'id': entity.id }) }}" class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top" title="Recibir para:{{ entity.proceso_tipo }}">
