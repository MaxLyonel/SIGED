                                                    <td class="text-warning">{{ entity.fecha_vencimiento|date('d-m-Y') }}</td>
                                                {% elseif "now"|date('Y-m-d') > entity.fecha_vencimiento %}
                                                    <td class="text-danger">{{ entity.fecha_vencimiento|date('d-m-Y') }}</td>
