{% extends app.session.get('layout') %}
{% block contentoption %}
    <style type="text/css">
        label{
            font-weight: bold;
        }
    </style>
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i> Trámites <span>Solicitud de Modificaciòn y Adiciòn de Calificaciones</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('wf_tramite_index') }}">Tramites</a>
                    {# <a href={{ path('tramite_modificacion_calificaciones_index') }}>Solicitud Modificación/Adición de calificaciones</a> #}
                    <i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Index</li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <div class="body-content animated fadeIn">

        {% include 'SieProcesosBundle:TramiteModificacionCalificaciones:historial.html.twig' with { 'historial': historial} %}

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"> <i class="fa fa-file"></i> Recepción y verificación Departamento </h3>
            </div>
            <div class="panel-body">
                <form action="{{path('tramite_modificacion_calificaciones_deriva_departamento')}}" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="idTramite" value="{{idTramite}}">
                    <div class="form-group">
                        <label>¿Aprobar trámite?</label>
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="aprueba" value="SI" required id="aprueba1">
                                Si <span class="badge badge-info">{{msg}}</span>
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="aprueba" value="NO" required id="aprueba2">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Observación</label>
                        <textarea name="observacion" id="observacion" cols="30" rows="5" class="form-control" required></textarea>
                    </div>
                    <div id="divRA" class="form-group" style="display:none">
                        <label>Adjuntar Resolucion Administrativa</label>
                        <input type="file" id="resAdm" name="resAdm" required>
                        <br>
                    </div>
                    <div class="form-group">
                        <a href="{{path('wf_tramite_index', {'tipo':2})}}" type="button" class="btn btn-default">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        function validarRadio(){
            if($('#aprueba1').is(':checked')){
                $('#divRA').css('display','block');
                $('#resAdm').attr('required','required');
            }else{
                if($('#aprueba2').is(':checked')){
                    $('#divRA').css('display','none');
                    $('#resAdm').removeAttr('required');
                }
            }
        }
        $('input[name="aprueba"]').on('change', function(){
            validarRadio();
        });
        validarRadio();
    </script>
{% endblock %}