{% block javascripts %}
    {{parent()}}
    <script>
    function imprimirCertificados(){
        swal({
            title: "¿Está Segura/o de generar los certificados ?",
            text: "Se generará un documento pdf, el cual incluye todos los certificados de los participantes mostrados en la lista.",
            icon: "warning",
            buttons: true,
            dangerMode: true,
            buttons: ["Cancelar", "Continuar"],
            }).then(function(willDelete)  {
                if (willDelete) {
                    var imagen = '{{ asset("img/loading96.gif") }}';
                    $.ajax({
                        type: 'post',
                        url: "{{ path('tramite_impresion_certificado_permanente_imprimir') }}",
                        data:{sw:0},
                        dataType : 'json',
                        beforeSend: function () {
                        swal({
                            title: "Enviando...",
                            text: "Espere un momento por favor",
                            icon: imagen,
                            buttons: false
                        });
                        },
                        success: function (data) {
                            console.log(data);
                                                         
                        },
                        complete: function () {
                            swal.stopLoading();
                            swal.close();
                        }
                    });
                }
            });
    }
    </script>
