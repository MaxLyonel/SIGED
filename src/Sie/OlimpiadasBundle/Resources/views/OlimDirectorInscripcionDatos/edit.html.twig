{% extends 'layoutOlimpiadas.html.twig' %}

{% block contentoption %}

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-pencil"></i> Datos Director(a) <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-pencil"></i>
                       Actualizar datos
                    <i class="fa fa-angle-right"></i>
                </li>


            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-info shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Datos Director(a)</h3>
                        </div>
                        <div class="pull-right">
                            {{form(cancel_form, { 'attr': {'style': 'display:inline-block'} })}}
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        {{form_start(edit_form, { 'attr': {'data-toggle': 'validator','role': 'form', 'style': 'display:inline-block', 'onsubmit': 'return validarDatos();'} } )}}
                        <div class="panel-body">
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label">Teléfono 1 <span class="text-danger">(*)</span>:</label>
                                    {{ form_widget(edit_form.telefono1, { 'attr': {'class': 'form-control', 'maxlength': '8'} }) }}
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Teléfono 2:</label>
                                    {{ form_widget(edit_form.telefono2, { 'attr': {'class': 'form-control', 'maxlength': '8'} }) }}
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Correo Electrónico <span class="text-danger">(*)</span>:</label>
                                    {{ form_widget(edit_form.correoElectronico, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 text-danger">
                                    (*) Campos obligatorios
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6 col-md-6">
                                    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                                </div>
                            </div>
                        </div>
                        {{form_end(edit_form)}}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        var validarDatos = function(){
            telefono1 = $('#form_telefono1').val();
            telefono2 = $('#form_telefono2').val();
            correo = $('#form_correoElectronico').val();
            
            emailRegex = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;
            fonoRegex = /^([0-9])*$/;

            if(telefono1 == '' || correo == '' || !emailRegex.test(correo) || !fonoRegex.test(telefono1) || !fonoRegex.test(telefono2)){
                alert('Ingrese datos en los campos requeridos o ajuste a los formatos válidos');
                return false;
            }
        }
    </script>
{% endblock %}