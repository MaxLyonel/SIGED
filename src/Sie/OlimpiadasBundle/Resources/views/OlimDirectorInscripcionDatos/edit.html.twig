{% extends 'layoutOlimpiadas.html.twig' %}

{% block contentoption %}

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-pencil"></i> Datos Director(a) <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-pencil"></i>
                    <a href="{{path('infra_list_index')}}">
                       Inscripciones
                    </a>
                    <i class="fa fa-angle-right"></i>
                </li>


            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-info shadow">
                    <div class="panel-heading">
                         <h3 class="panel-title">Datos Director(a)</h3>
                        <div class="pull-right">
                           {{form(cancel_form)}}
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body no-padding">
                        {{form_start(edit_form, { 'attr': {'data-toggle': 'validator','role': 'form'} } )}}
                        <div class="panel-body">
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label">Teléfono 1:</label>
                                    {{ form_widget(edit_form.telefono1, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Teléfono 2:</label>
                                    {{ form_widget(edit_form.telefono2, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Correo Electrónico:</label>
                                    {{ form_widget(edit_form.correoElectronico, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6 col-md-6">
                                    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                                    {# <a href="{{ path('olimtutor_listTutorBySie') }}" class="btn btn-default">Cancelar</a> #}
                                </div>
                            </div>
                        </div>
                        {{form_end(edit_form)}}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}