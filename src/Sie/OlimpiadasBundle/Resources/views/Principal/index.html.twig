{% block javascripts %}
    {{parent()}}
    <script>
    $("#downloadBtn").hide();
    var reporteOlimpiada = function(){
        $.ajax({
            type: 'post',
            url: Routing.generate('build_archs_olimpiadas_txt'),
            beforeSend: function () {
                $("#buildBtn").attr('disabled', true);
                $("#build").empty();
                $("#build").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" class="loading" style="width:70px;" /></div>');  
            },
            success: function (data) {
                $("#buildBtn").removeAttr('disabled');
                $("#buildBtn").hide();
                $("#build").empty();
                $("#downloadBtn").show();
            },
            error: function (data) {
                $("#buildBtn").removeAttr('disabled');
                $("#build").empty();
                $("#build").append(data);
            }
        });
    };
    </script>
{% endblock %}