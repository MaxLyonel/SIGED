{% extends 'layoutOlimpiadas.html.twig' %}
{% block contentoption %}
    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-file-text-o"></i> Registrar modalidad <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-file-text-o"></i>
                    <a href="{{ path('olimmodalidadtipo')}}">Modalidad</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">
                    <i class="fa fa-angle-right"></i>
                    Registrar modalidad
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Datos modalidad</h3>
                        </div>
                        <div class="pull-right">
                            
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
						{{ form_start(form) }}
							<div class="row">
								<div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
									<label>Modalidad</label>
									{{ form_widget(form.modalidad, {'attr':{'class':'form-control'} }) }}
								</div>
								<div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
									<label>Observación</label>
									{{ form_widget(form.observacion, {'attr':{'class':'form-control'} }) }}
								</div>
							</div>
							{{ form_widget(form.submit, {'label':'Registrar','attr':{'class':'btn btn-primary'} }) }}
                            <a href="{{path('olimmodalidadtipo')}}" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancelar </a>
						{{ form_end(form) }}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
