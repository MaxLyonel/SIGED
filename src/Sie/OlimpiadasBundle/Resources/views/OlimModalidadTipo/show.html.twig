{% extends 'layoutOlimpiadas.html.twig' %}
{% block contentoption %}
     <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-file-text-o"></i> Eliminar modalidad <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-file-text-o"></i>
                    <a href="{{ path('olimmodalidadtipo')}}">Modalidad</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li class="active">
                    <i class="fa fa-angle-right"></i>
                    Eliminar
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title"> Datos de modalidad</h3>
                        </div>
                        <div class="pull-right">                        
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
						<div class="form-group">
                            <div class="row">
							    <div class="col-md-2">
								    <label>Modalidad:</label>
							    </div>
                                <div class="col-md-4">
								    <input class="form-control" placeholder="{{ entity.modalidad }}" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
							    <div class="col-md-2">
								    <label>Observación:</label>
                                </div>
                                <div class="col-md-6">
								    <input class="form-control" placeholder="{{ entity.observacion }}" type="text">
                                </div>
						    </div>
                        </div>
						{{ form_start(delete_form)}}
                        <div class="row">
                            {{ form_widget(delete_form.submit, {'label':'Eliminar','attr':{'class':'btn btn-primary'}}) }}
                            {{ form_end(delete_form) }}
                            <a href="{{path('olimmodalidadtipo')}}" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancelar </a>
                        </div>
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
