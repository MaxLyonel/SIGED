{{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form', 'onsubmit': 'return registrarEquipo()'} } )}}
<div class="row">
    <div class="col-lg-12">
        <div class="form-group col-lg-6 col-md-6">
            {{form_label(form.categoria)}}
            {{form_widget(form.categoria)}}
        </div>
        <div class="form-group col-lg-6 col-md-6 text-right">
            {{ form_widget(form.registrar, {'attr': {'class': 'btn btn-success'}}) }}
            <a href="" class="btn btn-default">Cancelar</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group col-lg-6 col-md-6">
            {{form_label(form.equipo)}}
            {{form_widget(form.equipo)}}
        </div>
        <div class="form-group col-lg-6 col-md-6">
            {{form_label(form.proyecto)}}
            {{form_widget(form.proyecto)}}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group col-lg-6 col-md-6">
            {{form_label(form.rude1)}}
            {{form_widget(form.rude1)}}
            <button class="btn btn-sm pull-right btn-primary">Buscar</button>
        </div>
        <div class="form-group col-lg-6 col-md-6">
            {{form_label(form.rude2)}}
            {{form_widget(form.rude2)}}
            <button class="btn btn-sm pull-right btn-primary">Buscar</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12" id="divResultado"></div>
</div>
{{form_end(form)}}
{% block javascripts %}
    <script>
        $("#form_proyecto").removeAttr('readonly');
        $("#form_proyecto").attr('readonly', true);

        var verificarCategoria = function(categoria) {
            if(categoria >= 11) {
                $("#form_proyecto").removeAttr('readonly');
            }
            else{
                $("#form_proyecto").removeAttr('readonly');
                $("#form_proyecto").attr('readonly', true);
            }
        }
    </script>
{% endblock %}
