                                            <div class="media-body">
                                                <span class="media-heading">
                                                    {{tutor.nombre}}
                                                    {{tutor.paterno}}
                                                    {{tutor.materno}}
                                                </span>
                                                <span class="media-text">
                                                    <b>Tel&eacute;fono 1:</b> {{tutor.telefono1}} </br>
                                                    <b>Tel&eacute;fono 2:</b> {{tutor.telefono2}} </br>
                                                    <b>email:</b> {{tutor.correo_electronico}}
                    
                                                </span>
                                                <!-- Start meta icon -->
                                                
                                                <!--/ End meta icon -->
                                            </div><!-- /.media-body -->
                                        </a><!-- /.media -->

                                    </div>
                                    <!--/ End list message -->

                                </div><!-- /.panel-body -->
                            </div>
            </div>
            
        </div>
    <div class="row">
          <div class="col-md-12 col-md-offset-0">
           
            <div class="panel rounded shadow">
                                <div class="panel-heading">
                                    <div class="pull-left">
                                        <h3 class="panel-title">Datos de inscripci&oacute;n</h3>
                                    </div>
                                    <div class="pull-right">
                                        
                                    </div>
                                    <div class="clearfix"></div>
                                </div><!-- /.panel-heading -->
                                <div class="panel-body no-padding">


                                       {{form_start(form, { 'attr':{'id':'idForminscriptionOlim'} })}}
                                    <div class="form-body">
                                          
                                      <div class="row">
                                          
                                          <div class="col-md-4">
                                            MATERIA:
                                              {{form_widget(form.olimMateria, {'attr': {'class':'form-control', 'onchange':'getCategory(this.value)'} } )}}
                                          </div>
                                          <div class="col-md-4">
                                            CATEGORIA:
                                              {{form_widget(form.category, {'attr': {'class':'form-control'} } )}}
                                          </div>
                                      </div>

                                    </div><!-- /.form-body -->
                                    <div class="form-footer">
                                        <div class="pull-right">
                                            <!-- <button class="btn btn-danger mr-5">Cancel</button> -->
                                             {{form_widget(form.buscar, {'attr': {'class':'btn btn-primary'} } )}}
                                        </div>
                                        <div class="clearfix"></div>
                                    </div><!-- /.form-footer -->
                                          
                                {{form_end(form)}}
    
                                

                                </div><!-- /.panel-body -->
                            </div>

          </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div id="">
            
          </div>
        </div>
        
      </div>
    </div>

{% endblock %}
{% block javascripts%}
    {{parent()}}
    <script type="text/javascript" charset="utf-8" >
  var getCategory = function(idmateria){

        $.ajax({
             type: 'post',
             url: Routing.generate('oliminscriptions_getCategory'),
             data: {idmateria: idmateria},
             beforeSend: function () {
                $("#form_category").empty();
                $("#form_category").append('<option value="">Seleccionar</option>');
             },
             success: function (data) {
                  $("#form_category").empty();
                  $("#form_category").append('<option value="">Seleccionar</option>');
                  $.each(data.arrCategory, function (i, value) {
                      $("#form_category").append('<option value="' + i + '">' + value + '</option>');
                  });
                },
             statusCode: {
                 500: function () {

                 },
                 404: function () {

                 }
             }
          });
      
    };


    </script>

    
    
{% endblock %}
