{% extends "::layoutTramites.html.twig"%}

{% block contentBread %}
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{path('tramite_homepage')}}">Perfil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        {% block contentSearchBread %}
        {% endblock %}
    </ol>
{% endblock %}

{% block contentoption %}    
    <div class="col-lg-offset-3 col-lg-6 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">
                                <i class="glyphicon glyphicon-pdf"></i>                                
                            </h3>
                        </div>
                        <div class="pull-right">
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body no-padding">
                        {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form", 'class': 'form-horizontal'} } )}}
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-lg-2 col-md-4 col-sm-6 col-xs-12 control-label">
                                        {{form_label(form.sie)}}                                    
                                    </label>
                                    <div class="col-lg-10 col-md-8 col-sm-6 col-xs-12">
                                        {{ form_widget(form.sie) }}
                                    </div>  
                                </div>        
                                <div class="form-group">   
                                    <label class="col-lg-2 col-md-4 col-sm-6 col-xs-12 control-label">
                                        {{form_label(form.gestion)}}                                    
                                    </label>     
                                    <div class="col-lg-10 col-md-8 col-sm-6 col-xs-12">
                                        {{ form_widget(form.gestion,{ 'attr':{'class':'btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12' } }) }}
                                    </div>    
                                </div>
                                <div class="form-group">       
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        {{ form_widget(form.search,{ 'attr':{'class':'btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12' } } ) }}
                                    </div>
                                </div>
                            </div>
                        {{form_end(form)}}
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>    
    </div>
{% endblock %} 