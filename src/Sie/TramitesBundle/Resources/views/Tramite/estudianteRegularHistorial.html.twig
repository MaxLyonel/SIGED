{% if listaHistorial is defined  %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="pull-left">
                <span class="media-heading block mb-0 h4 text-white"><strong>{{ listaHistorial|first[0]['nombre'] }} {{ listaHistorial|first[0]['paterno'] }} {{ listaHistorial|first[0]['materno'] }}</strong></span>
                <span class="text-white h6"> {{ listaHistorial|first[0]['codigo_rude'] }} </span>
            </div>
            <div class="pull-right text-right">
                <i class="fa fa-clipboard fa-2x"></i>
                <span class="media-heading block mb-0 h4 text-white"><strong></strong></span>
                <span class="text-white h6"> </span>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="panel panel-tab panel-tab-double rounded shadow">
        <!-- Start tabs heading -->
        <div class="panel-heading no-padding">
            <ul class="nav nav-tabs">
                {% for grado in listaHistorial|keys %}
                    <li {% if loop.index == 1 %}class="active"{% endif %}>
                        <a href="#tab{{ grado }}" data-toggle="tab">
                            <i class="fa fa-slack"></i>
                            <div>
                                <span class="text-strong">{{ grado }}° - {{ listaHistorial[grado][0]['paralelo'] }}</span>
                                <span>{{ listaHistorial[grado][0]['gestion_tipo_id'] }}</span>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div><!-- /.panel-heading -->
        <!--/ End tabs heading -->

        <!-- Start tabs content -->
        <div class="panel-body">
            <div class="tab-content">
                {% for grados in listaHistorial %}
                    <div class="tab-pane fade in {% if loop.index == 1 %}active{% endif %}" id="tab{{ grados[0]['grado_tipo_id'] }}">
                        <h4>{{ grados[0]['institucioneducativa_id'] }} - {{ grados[0]['institucioneducativa'] }}</h4>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center border-right">No.</th>
                                    {% if grados[0]['calendarioId'] == 1 %}
                                        <th class="text-center">Campos de Saberes y Conocimientos</th>
                                    {% endif %}
                                    <th class="text-center">Áreas Curriculares</th>
                                    {% if grados[0]['calendarioId'] == 1 %}
                                        <th class="width:30px; text-center">B1</th>
                                        <th class="width:30px; text-center">B2</th>
                                        <th class="width:30px; text-center">B3</th>
                                        <th class="width:30px; text-center">B4</th>
                                        <th class="width:30px; text-center">PF</th>
                                    {% else %}
                                        <th class="width:30px; text-center">T1</th>
                                        <th class="width:30px; text-center">T2</th>
                                        <th class="width:30px; text-center">T3</th>
                                        <th class="width:30px; text-center">PA</th>
                                        <th class="width:30px; text-center">R</th>
                                        <th class="width:30px; text-center">PF</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for dato in grados %}
                                    <tr>
                                        <td class="text-center border-right">{{ loop.index }}</td>
                                        {% if grados[0]['calendarioId'] == 1 %}
                                            <td class="text-center">{{ dato.area }}</td>
                                        {% endif %}
                                        <td class="text-center">{{ dato.asignatura }}</td>
                                        {% if dato.calendarioId == 1 %}
                                            <td class="text-center border-right {% if dato.n1 < 51 %}text-danger{% endif %}">{{ dato.n1 }}</td>
                                            <td class="text-center border-right {% if dato.n2 < 51 %}text-danger{% endif %}">{{ dato.n2 }}</td>
                                            <td class="text-center border-right {% if dato.n3 < 51 %}text-danger{% endif %}">{{ dato.n3 }}</td>
                                            <td class="text-center border-right {% if dato.n4 < 51 %}text-danger{% endif %}">{{ dato.n4 }}</td>
                                            <td class="text-center border-right {% if dato.n5 < 51 %}text-danger{% endif %}">{{ dato.n5 }}</td>
                                        {% else %}
                                            <td class="text-center border-right {% if dato.n1 < 36 %}text-danger{% endif %}">{{ dato.n1 }}</td>
                                            <td class="text-center border-right {% if dato.n2 < 36 %}text-danger{% endif %}">{{ dato.n2 }}</td>
                                            <td class="text-center border-right {% if dato.n3 < 36 %}text-danger{% endif %}">{{ dato.n3 }}</td>
                                            <td class="text-center border-right {% if dato.n4 < 36 %}text-danger{% endif %}">{{ dato.n4 }}</td>
                                            <td class="text-center border-right {% if dato.n5 < 36 %}text-danger{% endif %}">{{ dato.n5 }}</td>
                                            <td class="text-center border-right {% if dato.n6 < 36 %}text-danger{% endif %}">{{ dato.n6 }}</td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endfor %}
            </div>
        </div><!-- /.panel-body -->
        <!--/ End tabs content -->
    </div>
{% endif %}
