{% extends "::layoutTramites.html.twig"%}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{asset('assets/css/tablesorter.css')}}" rel="stylesheet" />
    <style>
        .higherWider {
            width: 800px;
            margin-top:100px;
        }
    </style>
{% endblock %}
{% block contentoption%}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h2>Buscar Estudiante
                    <small></small>
                </h2>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('estudiante_main')}}">Buscar</a></li>
                    <li><i class="fa fa-reddit"></i> Resultado</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('warningstudent') %}
                <div class="alert alert-danger">
                    <strong>Error!</strong> {{ flashMessage }}
                </div>                
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('successstudent') %}
                <div class="alert alert-success">
                    <strong>Correcto!</strong> {{ flashMessage }}
                </div> 
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h4>Estudiantes</h4>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-sm" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse" data-original-title="" title=""><i class="fa fa-angle-up"></i></button>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div id="pinfoestudiante" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div id="no-more-tables">
                            <table id="myTable" class="table table-bordered table-hover cf dataTable">
                                <thead class="">
                                    <tr class="">
                                        <th>No.</th>
                                        <th>Rude</th>
                                        <th>CI</th>
                                        <th>Complemento</th>
                                        <th>Paterno</th>
                                        <th>Materno</th>
                                        <th>Nombres(s)</th>
                                        <th>Fecha Nacimiento</th>
                                        <th>Opción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entity in entities %}
                                        <tr>
                                            <td data-title="No.">{{loop.index}}</td>
                                            <td data-title="Rude">{{ entity.codigoRude }}</td>
                                            <td data-title="CI">{{ entity.carnetIdentidad }} </td>
                                            <td data-title="Complemento" class="text-center"> {{entity.complemento}}</td>
                                            <td data-title="Paterno">{{ entity.paterno }}</td>
                                            <td data-title="Materno">{{ entity.materno }}</td>
                                            <td data-title="Nombre">{{ entity.nombre }}</td>
                                            <td data-title="F. Nac.">{{ entity.fechaNacimiento |date('d-m-Y') }}</td>
                                            <td data-title="Opción">
                                                <span class="glyphicon glyphicon-eye-open"></span>
                                                <a href="#" class="btn btn-link" onclick="openHistoryInsc({{entity.id}})">Historial</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
                <div class="panel-footer">
                    <a href="{{path('estudiante_main')}}" class="btn btn-link"><i class="glyphicon glyphicon-circle-arrow-left"></i>&nbsp;Volver</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-flex fade" id="historyInscriptions" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
        <div class="modal-dialog higherWider">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="flexModalLabel">Historial de Inscripción</h4>

                </div>
                <div class="modal-body">
                    <div id="idHistory"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="row">
        <div class="col-md-12">
            
        </div>
    </div>
{% endblock %}

{%block javascripts %}
    {{parent()}}
    <script>
        var openHistoryInsc = function (idStudent) {

            $('#historyInscriptions').modal('show');
            $.ajax({
                type: 'get',
                url: Routing.generate('student_main_history', {'idStudent': idStudent}),
                beforeSend: function () {
                    $("#idHistory").empty();
                    $("#idHistory").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" class="loading" width="50" height="50" /></div>');
                },
                success: function (data) {
                    $("#idHistory").empty();
                    $("#idHistory").append(data);
                },
                statusCode: {
                    500: function () {

                    },
                    404: function () {

                    }
                }
            });
        }
function openHistoryInsc(idStudent, especialidad) {
        $('#historyInscriptions').modal('show');
        $.ajax({
        type: 'POST',
                url: '{{ path('estudiante_historial_notas') }}',
                data: {'estudiante_id': idStudent, 'especialidad': especialidad},
                beforeSend: function () {
                $("#idHistory").empty();
                $("#idHistory").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" class="loading" width="50" height="50" /></div>');
                },
                success: function (data) {
                $("#idHistory").empty();
                $("#idHistory").append(data);
                },
                statusCode: {
                500: function () {

                },
                        404: function () {

                        }
                }
        });
        }
    </script>

{% endblock%}

