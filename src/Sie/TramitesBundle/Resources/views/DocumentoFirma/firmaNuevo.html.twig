{% if estado is defined  %}
    {% if estado %}
        {% if form is defined  %}
            {{form_start(form, { 'attr': {'id':'formNuevo', 'data-toggle': 'validator','role': "form", 'class': "form-horizontal form-bordered"} } )}}
                {{ form_widget(form.persona, { 'attr': {'class': 'form-control'} }) }}   
                <div class="form-group" id="formulario">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12 mb-15">
                        {{ form_widget(form.tipo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12 mb-15">
                        {{ form_widget(form.departamento, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
                        <div class="fileinput fileinput-new" style="min-width: 100%;" data-provides="fileinput">
                            <div class="fileinput-preview thumbnail col-md-12" style="min-height: 200px;" data-trigger="fileinput" ></div>
                            <div>
                                <span class="btn btn-info btn-file">
                                    <span class="fileinput-new col-sm-6">Seleccionar imagen</span>
                                    <span class="fileinput-exists col-sm-6">Cambiar</span>
                                    {{ form_widget(form.foto, { 'attr': {'class': 'col-sm-12'} }) }} 
                                </span>
                                <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Quitar</a>
                            </div>
                        </div>
                    </div>
                </div>  
                <div class="form-group text-center">
                    {{ form_widget(form.guardar,{ 'attr':{'class':'btn btn-success', 'style':'width: 100%;'} } ) }}
                </div>                 
            {{form_end(form)}}
            
        {% endif %}
    {% else %}
        <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><strong>Error:</strong> {{msg}} </div> 
    {% endif %}
{% else %}
    <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><strong>Error:</strong> no fue posible realizar la operación, intente nuevamente </div> 
{% endif %}


