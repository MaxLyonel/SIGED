{% extends 'SieRieBundle:Default:rie.html.twig' %}

{% block contentoption%}

{{ form_start(form) }}

    <div class="block-header">
        <h2>CATÁLOGO DE CARRERAS</h2>
    </div>

    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('carrera_rie_list')}}">Listado de Carreras</a></li>
        <li class="active">Editar</li>
    </ol>

    <div class="row clearfix">
        <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        Modificar denominación de Carrera
                    </h2>
                </div>
                <div class="body">

                    <div class="row">
                        <fieldset>
                            
                            <label class="form-label">{{form_label(form.carrera)}}</label>
                            <div class="form-group">
                                <div class="form-line">
                                    {{form_widget(form.carrera)}}  
                                </div>
                            </div>
                             <div class="alert alert-danger text-center">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                Nota: Se cambiará la denominación de la carrera perteneciente a las siguientes Areas.
                            </div>
                            <div class="form-group">
                            AREAS DE FORMACIÓN:
                                <ul>
                                {% for r in areas %}
                                    <div class="form-line">
                                      <li><B>{{r}}</B> </li>
                                     </div>
                                {% endfor %}   
                                </ul>
                            </div>

                        </fieldset>
                            {{ form_widget(form.guardar,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                            <a href="{{path('carrera_rie_list')}}" class="btn btn-danger btn-lg m-l-15 waves-effect">Cancelar</a>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>            

{{ form_end(form) }}
{% endblock %}


