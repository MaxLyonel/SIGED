{% extends 'SieRieBundle:Default:rie.html.twig' %}

{% block contentoption %}
	
    <div class="block-header">
        <h2>CONSULTA DE INSTITUTOS</h2>
    </div>

    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('consultains_rie')}}">Inicio</a></li>
        <li class="active">Consulta</li>
    </ol>

	{% for flashMessage in app.session.flashbag.get('msgSearch') %}
		<div class="alert alert-danger alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<strong>¡Error!</strong> {{ flashMessage }}
		</div>
	{% endfor %}

    <!-- Tabs With Icon Title -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        FORMULARIO DE BÚSQUEDA
                    </h2>
                </div>
                <div class="body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#por_codigo_rie" data-toggle="tab">
                                <i class="material-icons">domain</i> Por código RIE
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#por_nombre_ie" data-toggle="tab">
                                <i class="material-icons">domain</i> Por Denominación ITT
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#por_tipo_ie" data-toggle="tab">
                                <i class="material-icons">domain</i> Por tipo de Instituto
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#por_estado_ie" data-toggle="tab">
                                <i class="material-icons">domain</i> Por estado del Instituto
                            </a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="por_codigo_rie">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativaId) }}
                                                <label class="form-label">Ingresar código RIE</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_widget(formInstitucioneducativaId.institucioneducativaId,{ 'attr':{'class': 'form-control','pattern':'[0-9]{8,17}'} }) }}
                                                    </div>
                                                </div>
                                                {{ form_widget(formInstitucioneducativaId.buscarId,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativaId) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="por_nombre_ie">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativa) }}
                                                <label class="form-label">Ingresar Denominación del Instituto</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_widget(formInstitucioneducativa.institucioneducativa,{ 'attr':{'class': 'form-control'} }) }}
                                                    </div>
                                                </div>
                                                {{ form_widget(formInstitucioneducativa.buscar,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativa) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="por_tipo_ie">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativaTipo) }}
                                                <div class="col-sm-6">
                                                    {{ form_widget(formInstitucioneducativaTipo.departamento,{ 'attr':{'class': 'form-control show-tick'} }) }}
                                                </div>
                                                <div class="col-sm-6">
                                                    {{ form_widget(formInstitucioneducativaTipo.institucioneducativaTipo,{ 'attr':{'class': 'form-control show-tick'} }) }}
                                                </div>
                                                {{ form_widget(formInstitucioneducativaTipo.buscarTipo,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativaTipo) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="por_estado_ie">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativaEstado) }}
                                                <div class="col-sm-6">
                                                    {{ form_widget(formInstitucioneducativaEstado.departamento,{ 'attr':{'class': 'form-control show-tick'} }) }}
                                                </div>
                                                <div class="col-sm-6">
                                                    {{ form_widget(formInstitucioneducativaEstado.institucioneducativaEstado,{ 'attr':{'class': 'form-control show-tick'} }) }}
                                                </div>
                                                {{ form_widget(formInstitucioneducativaEstado.buscarEstado,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativaEstado) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Tabs With Icon Title -->

{% endblock %}
