{% extends 'SieRieBundle:Default:rie.html.twig' %}

{% block contentoption %}
    <div id="mensajes">
        {% if app.session.flashBag.has('exito') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('exito') %}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        {% if app.session.flashBag.has('error') %}
            <div class="alert alert-danger">
                {% for msg in app.session.flashBag.get('error') %}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="block-header">
        <h2></h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        Trámites Aprobados para Emitir Certificados
                    </h2>
                </div>
                <div class="body">
                    <div class="row">

                    </div>
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!--<table class="table table-bordered table-striped table-hover js-exportable dataTable">-->
                            <table class="table table-striped table-hover js-basic-example dataTable">
                                <thead>
                                <tr>

                                    <th style="width: 5%">Acciones</th>

                                    <th>Cod. RITT</th>
                                    <th>Denominación</th>
                                    <th>Nro. Trámite</th>
                                    <th>Fecha de Solicitud</th>


                                </tr>
                                </thead>

                                <tfoot>
                                <tr>

                                    <th style="width: 5%">Acciones</th>

                                    <th>Cod. RITT</th>
                                    <th>Denominación</th>
                                    <th>Nro. Trámite</th>
                                    <th>Fecha de Solicitud</th>



                                </tr>
                                </tfoot>

                                <tbody>

                                {% for listaTramites in listaTramites %}
                                    <tr>
                                        <td style="width: 5%">
                                        <a href="{{path('solicitud_ritt_guarda_tramite_imprime', {'idRie':listaTramites.codrie,'idTramite ':listaTramites.id })}}" onclick="return confirmar()" class="btn btn-default btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Imprimir Certificado">
                                            <i class="material-icons">print</i>
                                        </a>
                                        </td>
                                        <td>{{ listaTramites.codrie}}</td>
                                        <td>{{ listaTramites.institucioneducativa}}</td>
                                        <td>{{ listaTramites.id }}</td>
                                        <td class="text-center">{{ listaTramites.fecha_registro }}</td>


                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
{% block javascripts %}
    {{parent()}}

<script type="text/javascript">
    function confirmar(){
        if(confirm('¿Estas segura/o de finalizar el trámite?'))
        { setTimeout(function(){ location.reload();  },2000);
           return true;
        }
        else
            return false;

    }
    $(".alert").fadeTo(3000, 1000).slideUp(1000, function(){
        $(".alert").slideUp(1000);
    });
</script>
{% endblock %}