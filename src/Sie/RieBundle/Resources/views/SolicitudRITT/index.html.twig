{% extends 'SieRieBundle:Default:rie.html.twig' %}

{% block contentoption %}

    <div class="block-header">
        <h2></h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        Listado de Trámites
                    </h2>
                </div>
                <div class="body">
                    <div class="row">

                    </div>
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!--<table class="table table-bordered table-striped table-hover js-exportable dataTable">-->
                            <table class="table table-striped table-hover js-basic-example dataTable">
                                <thead>
                                <tr>
                                    <th>Nro. </th>
                                    <th>Nro. Trámite</th>
                                    <th>Cod. RIE</th>
                                    <th>Fecha de Registro</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>

                                </tr>
                                </thead>

                                <tfoot>
                                <tr>
                                    <th>Nro. </th>
                                    <th>Nro. Trámite</th>
                                    <th>Cod. RITT</th>
                                    <th>Fecha de Registro</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>

                                </tr>
                                </tfoot>

                                <tbody>

                                {% for listaTramites in listaTramites %}
                                    <tr>
                                        <td class="text-center">{{ loop.index }}</td>
                                        <td class="text-center">{{ listaTramites.id }}</td>
                                        <td>{{ listaTramites.fecha_registro}}</td>
                                        <td>{{ listaTramites.estado }}</td>
                                        <td>Enviado</td>
                                        <td>
                                            {#<button class="btn btn-success btn-xs"  onclick="updatesistema({{ sistema.id }})" class="btn btn-teal" data-toggle="modal" data-target=".bs-example-modal-table" title="Editar"><i class="fa fa-pencil"></i></button>#}
                                            <button class="btn btn-danger btn-xs"  title="Imprimir"><i class="glyphicon glyphicon-print"></i></button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}