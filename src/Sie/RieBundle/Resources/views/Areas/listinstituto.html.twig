{% extends 'SieRieBundle:Default:rie.html.twig' %}
{% block contentoption%}

    
    <div class="block-header">
        <h2>LISTADO DE INSTITUTOS TÉCNICOS/TÉCNOLOGICOS PARA OFERTA ACADÉMICA</h2>
    </div>

    {% for flashMessage in app.session.flashbag.get('msgSearch') %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-danger text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        Listado de Institutos Técnicos/Tecnológicos
                    </h2>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!--<table class="table table-bordered table-striped table-hover js-exportable dataTable">-->
                            <table class="table table-striped table-hover js-basic-example dataTable">
                                <thead>
                                    <tr>
                                        <th>Acciones</th>                                    
                                        <th>Depto.</th>
                                        <th>Denominación</th>
                                        <th>Resolución Ministerial</th>
                                        <th>Fecha R. M.</th>
                                        <th>Carácter Jurídico</th>
                                        <th>Tipo Institución</th>
                                        <th>RIE</th>
                                    </tr>
                                </thead>
                                
                                <tfoot>
                                    <tr>
                                        <th>Acciones</th>                                    
                                        <th>Depto.</th>
                                        <th>Denominación</th>
                                        <th>Resolución Ministerial</th>
                                        <th>Fecha R. M.</th>
                                        <th>Carácter Jurídico</th>
                                        <th>Tipo Institución</th>
                                        <th>RIE</th>
                                    </tr>
                                </tfoot>
                                
                                <tbody>
                                    {% for entity in entities %}
                                        <tr>
                                            <td>
                                                <a href="{{path('oac_list', {'idRie': entity.institucioneducativa.id})}}" class="btn btn-default btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Registrar Oferta">
                                                    <i class="material-icons">list</i>
                                                </a>
                                            </td>
                                            <td>{{ entity.institucioneducativa.leJuridicciongeografica.lugarTipoLocalidad.lugarTipo.lugarTipo.lugarTipo.lugarTipo.lugar }}</td>                                            
                                            <td>{{ entity.institucioneducativa.institucioneducativa }}</td>                                            
                                            <td>{{ entity.institucioneducativa.nroResolucion }}</td>
                                            <td>{{ entity.institucioneducativa.fechaResolucion|date('d/m/Y')}}</td>
                                            <td>{{ entity.institucioneducativa.dependenciaTipo.dependencia }}</td>
                                            <td>{{ entity.institucioneducativa.institucioneducativaTipo.descripcion }}</td>
                                            <td>{{ entity.institucioneducativa.id }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Examples -->

{% endblock %}


