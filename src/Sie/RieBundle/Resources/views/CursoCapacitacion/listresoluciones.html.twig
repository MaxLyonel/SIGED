{% extends 'SieRieBundle:Default:rie.html.twig' %}
{% block contentoption%}

    <div class="block-header">
        <h2>REGISTRO - CURSOS</h2>
    </div>
    
    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('cap_list_instituto')}}">Listado de Institutos</a></li>
        <li><a href="{{path('cap_list', {'idRie': institucion.getId()})}}">Listado de Cursos de Capacitación</a></li>
        <li class="active">Listado de Resoluciones</li>
    </ol>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-danger text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>
    {% endfor %} 

    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        {{institucion.id}}  - {{institucion.institucioneducativa}} 
                        <br>
                        CURSO DE CAPACITACIÓN : {{curso.nombre}}
                    </h2>
                </div>
                <div class="body">
                    {% if app.session.get('roluser') == 7 and esAcreditado == false and institucion.leJuridicciongeografica.lugarTipoLocalidad.lugarTipo.lugarTipo.lugarTipo.lugarTipo.codigo == lugarUsuario %}
                    <div class="row">
                        <div class="col-lg-12 col-md-6 col-sm-12 col-xs-12 text-right">
                            <form action="{{path('cap_new_resolucion')}}" method="post" style="display:inline-block">
                                <input type="hidden" name="idRie" value="{{institucion.id}}">
                                <input type="hidden" name="idAutorizado" value="{{datAutorizado.id}}">
                                <button type="submit" class="btn btn-md bg-orange waves-effect"><i class="material-icons">add_box</i>Nuevo</button>
                            </form>                            
                        </div>
                    </div>
                    {% endif %}
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!--<table class="table table-bordered table-striped table-hover js-exportable dataTable">-->
                            <table  id="miexample" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th colspan="2">Acciones</th>                                    
                                        <th>R.M.</th>  
                                        <th>Fecha R.M.</th>  
                                        <th>Nivel de Formación</th>
                                        <th>Tiempo de Estudios</th>
                                        <th>Régimen de Estudios</th>
                                        <th>Carga Horaria</th>
                                        <th>Tipo Trámite</th>
                                    </tr>
                                </thead>
                                
                                <tbody>
                                    {% for dato in resoluciones %}
                                        <tr>
                                            {% if app.session.get('roluser') == 7 and esAcreditado == false and institucion.leJuridicciongeografica.lugarTipoLocalidad.lugarTipo.lugarTipo.lugarTipo.lugarTipo.codigo == lugarUsuario %}
                                            <td>
                                                <form action="{{path('cap_edit_resolucion')}}" method="post" style="display:inline-block">
                                                    <input type="hidden" name="idRie" value="{{institucion.id}}">
                                                    <input type="hidden" name="idAutorizado" value="{{datAutorizado.id}}">
                                                    <input type="hidden" name="idResolucion" value="{{dato.id}}">
                                                    <button type="submit" class="btn btn-default btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Editar"><i class="material-icons">edit</i></button>
                                                </form>     
                                            </td>
                                            <td>
                                                <a href="{{path('cap_delete_resolucion', {'idResolucion': dato.id} )}}" onclick="return confirmar('{{dato.id}}')" class="btn btn-circle waves-effect waves-circle waves-float"  data-toggle="tooltip" data-placement="top" title="Eliminar"  {% if esAcreditado == true %} disabled {% endif %}><i class="material-icons">delete_forever</i></a>
                                            </td>
                                            {% else %}
                                            <td>
                                               <button type="button" class="btn btn-danger btn-circle waves-effect waves-circle waves-float" disabled="disabled" data-toggle="tooltip" data-placement="top" title="">
                                                    <i class="material-icons">mode_edit</i></button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-circle waves-effect waves-circle waves-float" disabled="disabled" data-toggle="tooltip" data-placement="top" title="">
                                                    <i class="material-icons">delete_forever</i>
                                            </td>
                                            {% endif %}                                                    
                                            <td>{{dato.numero}}</td>
                                            <td>{{dato.fecha|date('d/m/Y')}}</td>
                                            <td>{{dato.niveltipo}}</td>
                                            <td>{{dato.tiempoestudio}}</td>
                                            <td>{{dato.ttecRegimenEstudioTipo.regimenEstudio}}</td>
                                            <td>{{dato.cargahoraria}}</td>
                                            <td>{{dato.operacion}}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
    // Para configurar tabla 
    $(document).ready(function() {
       $('#miexample').DataTable( {
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "No se encontraron resultados",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "No existen registros.",
            "infoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sSearch":         "Buscar:",
            "sEmptyTable":     "Ningún dato disponible en esta tabla",
            "sSearch":         "Buscar:",
            "oPaginate": {
                "sFirst":    "Primero",
                "sLast":     "Último",
                "sNext":     "Siguiente",
                "sPrevious": "Anterior"
            }
        }
    });
    } );

    function confirmar(id_resolucion){
        if(confirm('¿ Estas seguro de eliminar la resolución ?'))
		    return true;
	    else
		    return false;

    }

    </script>
{% endblock %}
