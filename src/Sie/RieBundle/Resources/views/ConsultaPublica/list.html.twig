{% extends 'SieRieBundle:Default:rieConsulta.html.twig' %}
{% block contentoption%}

    <div class="block-header">
        <h2>INFORMACIÓN PÚBLICA DE INSTITUTOS TÉCNICOS Y TECNOLÓGICOS</h2>
    </div>
    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('consulta_rie')}}">Inicio</a></li>
        <li class="active">Listado de Institutos</li>
    </ol>
     <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <div class="card">
                        <div class="header  bg-grey">
                            <h2>
                                Institutos
                            </h2>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <table  id="miexample" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Cod. RIE</th>
                                                <th>Denominación</th>
                                                <th>Departamento</th>
                                            </tr>
                                        </thead>
                                        
                                        <tbody>
                                            {% for entity in entities %}
                                                <tr>
                                                    <td>{{ entity.institucioneducativa.id }}</td>
                                                    <td><a href="{{path('consulta_rie_itt', {'idRie':entity.institucioneducativa.id})}}">{{ entity.institucioneducativa.institucioneducativa }}</a></td>   
                                                    <td>{{ entity.institucioneducativa.leJuridicciongeografica.lugarTipoLocalidad.lugarTipo.lugarTipo.lugarTipo.lugarTipo.lugar }}</td>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
    // Para configurar tabla 
    $(document).ready(function() {
       $('#miexample').DataTable( {
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "No se encontraron resultados",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "No existen registros.",
            "infoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sSearch":         "Buscar:",
            "sEmptyTable":     "Ningún dato disponible en esta tabla",
            "sSearch":         "Buscar:",
            "oPaginate": {
                "sFirst":    "Primero",
                "sLast":     "Último",
                "sNext":     "Siguiente",
                "sPrevious": "Anterior"
            }
        }
    });
    } );

    function confirmar(id_carrera){
        if(confirm('¿Estas seguro de visitar esta url?'))
		    return true;
	    else
		    return false;

    }

    </script>
{% endblock %}

