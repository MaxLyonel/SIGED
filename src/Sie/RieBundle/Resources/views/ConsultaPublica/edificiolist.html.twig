{% extends 'SieRieBundle:Default:rieConsulta.html.twig' %}
{% block contentoption%}

    <div class="block-header">
        <h2>LOCAL EDUCATIVO DEL INSTITUTO</h2>
    </div>
    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('consulta_rie')}}">Inicio</a></li>
        <li><a href="{{path('consulta_rie_edificio')}}">Búsqueda</a></li>
        <li class="active">Datos de Local Educativo</li>
    </ol>
    <br>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <div class="header">
                        <div class="text-right">
                            <!--
                            <a href="{{path('consulta_rie_pdf_edificio_instituto', {'idLe':local[0].id} ) }}" class="btn bg-blue-grey waves-effect">
                                <i class="material-icons">file_download</i> Descargar Formulario
                            </a>
                            -->
                        </div>
                    </div>
                    <div class="card">
                        <div class="header  bg-grey">
                            <h2>
                                Ubicación Geográfica Actual SIE
                            </h2>
                        </div>
                        <div class="body">
                            <ul class="list-group">
                                <li class="list-group-item">CÓDIGO DE LOCAL EDUCATIVO :<b> {{ local[0].id }}</b></li>
                                <li class="list-group-item">DEPARTAMENTO :<b> {{ local[0].departamento }}</b></li>
                                <li class="list-group-item">PROVINCIA :<b> {{ local[0].provincia }}</b></li>
                                <li class="list-group-item">MUNICIPIO :<b> {{ local[0].municipio }}</b></li>
                                <li class="list-group-item">CANTON :<b> {{ local[0].canton }}</b></li>
                                <li class="list-group-item">LOCALIDAD :<b> {{ local[0].localidad }}</b></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header  bg-grey">
                            <h2>
                                Listado de Institutos Técnicos y Tecnológicos
                            </h2>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <table  class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Cod. RIE</th>
                                                <th>Denominación</th>
                                                <th>Resolución</th>
                                            </tr>
                                        </thead>
                                        
                                        <tbody>
                                            {% for list in listado %}
                                                <tr>
                                                    <td>{{ list.id }}</td>
                                                    <td>{{ list.institucioneducativa }}</td>
                                                    <td>{{ list.nroResolucion }}</td>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
    // Para configurar tabla 
    $(document).ready(function() {
       $('#miexample').DataTable( {
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "No se encontraron resultados",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "No existen registros.",
            "infoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sSearch":         "Buscar:",
            "sEmptyTable":     "Ningún dato disponible en esta tabla",
            "sSearch":         "Buscar:",
            "oPaginate": {
                "sFirst":    "Primero",
                "sLast":     "Último",
                "sNext":     "Siguiente",
                "sPrevious": "Anterior"
            }
        }
    });
    } );


    </script>
{% endblock %}

