            },            
            methods: {
            	restartEvent: function(sie, uename){
                    Swal.fire({
                        title: '¿Habilitar el Registro e Estudiantes con Productos, Habilidades y Talento Extraordinario?',
                        text: "Si acepta, se habilitan las opciones de registro del evento... "+sie+' - '+uename ,
                        type: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Si, aceptar',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
	                    if (result.value) {
							axios.post(Routing.generate('adminscriptalento_restartEvent', {sie} ))
							.then(response => {
								if (response.status == 200) {
									// this.DBselectedData = response.data.selectedData;
										// console.log(response.data);

										if(response.data.swConfirmHab == true){
											$('#'+sie).addClass('restartfield');
											
										}else{
											Swal.fire(
											'Atencion !',
											'no answer...',
											'warning'
											);
										}
										
								}
								this.buscando = false;
							})
							.catch(e => {
								console.log(e);
								this.buscando = false;
							});		                    	

						}		
					 });	
            	},
             
             getMainInfo: function(userRol){
                    
                    axios.get(Routing.generate('adminscriptalento_getMainInfo',{ userRol: userRol}))
