                            // this.DBUEs = response.data.arrUEs;
                            this.answerHistory = response.data.answerHistory;
                            this.DBHistoryModalidad = response.data.historyModalidad;
                            this.DBinstitucionE = response.data.arrInstitucionE;
                            this.today = response.data.today;
                            
                        })
                        .catch(e = {

                        });   				


              },
              saveUEModality: function(DBRegisterData){ 
              	// console.log('save krlos');
                    axios.post(Routing.generate('adminscriptalento_saveUEModality', {sendDepto:this.DBRegisterData.deptoSelected, sendDistrito:this.DBRegisterData.distritoSelected, gestion:this.gestion, sie:this.sieSelected, modalidad:this.DBRegisterData.modalidadSelected}))
