              	this.DBinstitucionE ='';
              	// this.DBRegisterData.modalidadSelected = false;
              	$('#modalPerson').modal('show');
 				this.sieSelected  = sie;

                    axios.post(Routing.generate('adminscriptalento_registerUEModality', {sendDepto:this.DBRegisterData.deptoSelected, sendDistrito:this.DBRegisterData.distritoSelected, gestion:this.gestion, sie:this.sieSelected, modalidad:this.DBRegisterData.modalidadSelected}))
