{% extends app.session.get('layout') %}

{% block contentoption %}

    <div class="header-content">
        <h2><i class="fa fa-table"></i> Acceso a Internet <span>Institución Educativa</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="#">Acceso a internet</a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Registro</li>
            </ol>
        </div>
    </div>

    <div class="body-content animated fadeIn">        

        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="panel rounded shadow panel-teal">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Información actual de la Unidad Educativa</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered table-striped table-hover">
                            <tr>
                                <th>Código RUE:</th>
                                <td>{{institucion.id}}</td>
                            </tr>
                            <tr>
                                <th>Unidad Educativa:</th>
                                <td>{{institucion.institucioneducativa}}</td>
                            </tr>
                            <tr>
                                <th>Dependencia:</th>
                                <td>{{institucion.dependenciaTipo|upper}}</td>
                            </tr>
                            <tr>
                                <th>Distrito Educativo:</th>
                                <td>{{institucion.leJuridicciongeografica.distritoTipo.distrito}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="panel rounded shadow panel-primary">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Registrar información</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, { 'attr': {'data-toggle': 'validator','role': "form",'class':'form-horizontal'} } ) }}
                            <div class="form-group">
                                <label for="form_tieneAcceso" class="col-md-6 control-label"><strong>¿La Institución Educativa tiene acceso a internet?:</strong></label>
                                <div class="col-md-6">
                                    {{ form_widget(form.tieneAcceso) }}
                                </div>
                            </div>
                            <div class="form-group" id="proveedorDiv">
                                <label for="form_proveedor" class="col-sm-6 control-label"><strong>Proveedor (puede seleccionar más de una opción):</strong></label>
                                <div class="col-md-6">
                                    {{ form_widget(form.proveedor) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-6 col-md-6">
                                    {{ form_widget(form.guardar,{ 'attr':{'class':'btn btn-primary' } } ) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("#proveedorDiv").hide();
            $(".js-example-basic-multiple").select2({
                tags: "true",
                placeholder: "Seleccione una opción...",
                allowClear: true
            });
            $("input[type=radio][name='form[tieneAcceso]']").change(function() {
                if (this.value == '1') {
                    $("#proveedorDiv").show();
                    $("#form_proveedor").prop('required',true);
                } else {
                    $("#proveedorDiv").hide();
                    $("#form_proveedor option:selected").removeAttr("selected");
                    $("#form_proveedor").select2("val", "");
                    $("#form_proveedor").prop('required',false);
                }
            });
         });
    </script>
{% endblock %}