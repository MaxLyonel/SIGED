{% extends app.session.get('layout') %}

{% block contentoption %}

	{% set persona = null %}
	<!-- Modal Tutores -->
	<div class="modal fade" id="modal_listar_tutores_fer" tabindex="-1" >
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header bg-primary">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" > GENERAR FILE</h4>
				</div>
				<div class="modal-body" id="ver_conte_fer">
					
				</div>
				<div class="modal-footer">
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Start page header -->
	<div class="header-content">
		<h2><i class="fa fa-table"></i> GENERAR FILE </h2>
		<div class="breadcrumb-wrapper hidden-xs">
			<span class="label">Usted esta aquí:</span>
			<ol class="breadcrumb">
				<li>
					<i class="fa fa-home"></i>
					<a href="dashboard.html">Recibidos</a>
					<i class="fa fa-angle-right"></i>
				</li>
				<li class="active">Index</li>
			</ol>
		</div><!-- /.breadcrumb-wrapper -->
	</div><!-- /.header-content -->
	<!--/ End page header -->
	<div class="body-content animated fadeIn">
		<div class="row">
			<div class="col-sm-12">
				<div class="panel rounded shadow">
					<div class="panel panel-primary shadow">
						<div class="panel-heading">
							<div class="pull-left">
								<h3 class="panel-title">GENERAR INFORMACIÓN EN ARCHIVO DE EXCEL BONO JP {{ 'now'|date('Y') }}</h3>
							</div>
							<div class="clearfix"></div>
						</div><!-- /.panel-heading -->
						<div class="panel-body ">
							<div class="col-md-12 p-3">
								  	<div class="well">
								  	<span class="fa fa-tags" style="font-size:30px;"></span>
								  	Esta opción le permitira descargar los archivos para enviar a SINTESIS.
								  	</div>
								{# <form method="POST" id="form-search-request-tutor" onsubmit="mostrarResultadosBusqueda(this); return false;">
								  	<div style="text-align: center"><a href="{{path('boton_generar_file_bonoJP',{identificador:-1})}}" title="" class="btn btn-link btn-lg" target="_black"><img src="{{asset('alert/descarga_excel.png')}}" alt=""></a></div>
								</form> #}
							</div>
							<div class="col-md-12 p-3">
								<div class="table-responsive">
									<table class="table table-striped table-hover table-archives">
									  <thead class="thead-dark">
									    <tr>
									      <th scope="col" width="5%">#</th>
									      <th scope="col" width="10%">Identificador</th>
									      <th scope="col" width="40%">Archivos</th>
									      <th scope="col" width="7%">Cantidad de Archivos</th>
									      <th scope="col" width="5%">Descargar estos archivos</th>
									    </tr>
									  </thead>
									  <tbody>
									  	{% for i in datosArchivos %}
										    <tr>
										      <th scope="row">{{ loop.index }}</th>
										      <td><strong>{{i.identificador}}</strong></td>
										      <td>[{{i.archivos}}]</td>
										      <td class="text-right">{{i.nro_archivos}}</td>
										      <td class="text-center">
										      	<a href="{{path('boton_generar_file_bonoJP',{identificador: i.identificador})}}" target="_blank" >
										      		<i class="fa fa-3x fa-download fg-info" data-toggle="tooltip" data-placement="top" title="Descargar estos archivos"></i>
										      	</a>
										      </td>
										    </tr>
									  	{% endfor %}
									  </tbody>
									</table>
								</div>
							</div>

						</div><!-- /.panel-body --> 
					</div>
				</div>
			</div>
		</div>
		

	</div>
{% endblock %}

{% block javascripts %}
	{{parent()}}


{% endblock %}


