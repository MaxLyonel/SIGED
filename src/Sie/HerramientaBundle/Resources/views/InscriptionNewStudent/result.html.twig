          if(sie.length > 0 && nivel.length > 0 && grado.length > 0 && paralelo.length > 0 && turno.length > 0 ) {

            formInscription = $('#formInscription').serialize();
            $.ajax({
              type: 'post',
              data: formInscription,
              url: "{{ path('inscription_new_student_verificainscription') }}",
