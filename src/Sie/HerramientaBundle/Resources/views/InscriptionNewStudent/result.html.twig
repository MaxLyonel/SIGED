                  },
                  404: function () {

                  }
              }


            });
            $('#form_save').attr("disabled", true);
          }else{
            alert('Necesita SIE, NIVEL, GRADO, PARALELO y TURNO , para realizar la inscripción');
            return false;
          }

        }

