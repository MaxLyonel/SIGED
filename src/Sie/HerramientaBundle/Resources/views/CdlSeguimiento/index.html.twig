{% extends 'layoutHerramienta.html.twig' %}
{% block contentoption %}
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Seguimiento:<span> Club de lectura</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqu√≠:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{path('cdlseguimiento')}}">Seguimiento</a>
                    <i class="fa fa-angle-right"></i>
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            {% if app.session.flashBag.has('exito') %}
                <div class="alert alert-success">
                    {% for msg in app.session.flashBag.get('exito') %}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
            {% if app.session.flashBag.has('error') %}
                <div class="alert alert-danger">
                    {% for msg in app.session.flashBag.get('error') %}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div id="mensaje"></div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-icon panel-primary">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Lista de Seguimietno de Clubs de Lectura: <strong></strong> </h3>
                        </div>
                        <div class="pull-right">
                            <h3 class="panel-title">
                            </h3>
                        </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    <div class="panel-body panel-primary">
                        {% if lista is not empty %}
                            <div id="no-more-tables">
                                <table class="table" id="eventos">
                                    <thead>
                                        <tr>
                                            <th style="width: 1%;">No.</th>
                                            <th>Tipo Seguimiento</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for lista in lista %}
                                            <tr>
                                                <td data-title="No." class="text-center">{{ loop.index }}</td>
                                                <td data-title="Tipo Seguimiento"><a href="{{ path(lista.ruta) }}">{{ lista.nombre }}</a></td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay Eventos registrados
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
    </script>
{% endblock %}
