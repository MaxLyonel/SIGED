{% extends 'layoutHerramienta.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('css/chosen.css')}}" rel="stylesheet">

{% endblock %}
{% block contentoption %}

<div class="header-content">
    <h2>
        Calificaciones
        <span>Cuantitativas</span>
    </h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Estas aqui:</span>
        <ol class="breadcrumb">
            <li>
                <a href="#">Calificaciones</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li class="active">
                <i class="fa fa-search"></i>
                <a href="{{path('notas')}}">Buscar</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li><i class="fa fa-list"></i>  <a href="{{path('notas',{'op':'result'})}}">{{ app.session.get('tituloTipo') }}</a>
            </li>
        </ol>
    </div>
</div>

<div class="body-content animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div id="tour-9" class="panel panel-primary shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title">Datos Generales</h3>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-sm" data-action="collapse" data-container="body" data-toggle="tooltip" data-placement="top" data-title="Collapse" data-original-title="" title=""><i class="fa fa-angle-up"></i></button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    {% for co in areas %}
                        <div id="no-more-tables">
                        <table class="table table-bordered cf">
                            <thead class="cf">
                            <tr>
                                <th>Gestión</th>
                                <th>Institución</th>
                                <th>Turno</th>
                                <th>Nivel</th>
                                <th>Grado</th>
                                <th>Paralelo</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td data-title="Gestión"><b class="text-blue">{{gestion}}</b></td>
                                    <td data-title="Institución"><b class="text-blue">{{co.sie}} - {{co.nombre|upper}}</b></td>
                                    <td data-title="Turno"><b class="text-blue">{{co.turno|upper}}</b></td>
                                    <td data-title="Nivel"><b class="text-blue">{{co.nivel|upper}}</b></td>
                                    <td data-title="Grado"><b class="text-blue">{{co.grado|upper}}</b></td>
                                    <td data-title="Paralelo"><b class="text-blue">{{co.paralelo|upper}}</b></td>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="tour-9" class="panel panel-lilac shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title">Áreas</h3>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-sm" data-action="collapse" data-container="body" data-toggle="tooltip" data-placement="top" data-title="Collapse" data-original-title="" title=""><i class="fa fa-angle-up"></i></button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    {% for co in areas %}                                
                        <div id="no-more-tables">
                        <table class="table table-striped table-hover cf">
                            <thead>
                            <tr class="cf">
                                <th>Nro</th>
                                <th>Área</th>
                                <th>Maestro</th>
                                <th>Bimestre</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for a in co.areas %}
                                <tr>
                                    <td data-title="Nro">{{loop.index}}</td>
                                    <td data-title="Área">{{a.idAsignatura}} - {{a.asignatura}}</td>
                                    <td data-title="Maestro">{{a.maestro}}</td>
                                    <td data-title="Bimestre">
                                        <form action="{{path('notas_edit')}}" method="post" style="display:inline-block">
                                            <input type="hidden" name="idCurso" value="{{a.idCurso}}">
                                            <input type="hidden" name="idCursoOferta" value="{{a.idCursoOferta}}">
                                            <input type="hidden" name="bimestre" value="1">
                                            <input type="hidden" name="idAsignatura" value="{{a.idAsignatura}}">
                                            <input type="hidden" name="idPersonaMaestro" value="{{a.idPersonaMaestro}}">
                                            <button id="btnp{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)">1</button>
                                        </form>
                                        <form action="{{path('notas_edit')}}" method="post" style="display:inline-block">
                                            <input type="hidden" name="idCurso" value="{{a.idCurso}}">
                                            <input type="hidden" name="idCursoOferta" value="{{a.idCursoOferta}}">
                                            <input type="hidden" name="bimestre" value="2">
                                            <input type="hidden" name="idAsignatura" value="{{a.idAsignatura}}">
                                            <input type="hidden" name="idPersonaMaestro" value="{{a.idPersonaMaestro}}">
                                            <button id="btns{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)">2</button>
                                        </form>
                                        <form action="{{path('notas_edit')}}" method="post" style="display:inline-block">
                                            <input type="hidden" name="idCurso" value="{{a.idCurso}}">
                                            <input type="hidden" name="idCursoOferta" value="{{a.idCursoOferta}}">
                                            <input type="hidden" name="bimestre" value="3">
                                            <input type="hidden" name="idAsignatura" value="{{a.idAsignatura}}">
                                            <input type="hidden" name="idPersonaMaestro" value="{{a.idPersonaMaestro}}">
                                            <button id="btnt{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)">3</button>
                                        </form>
                                        <form action="{{path('notas_edit')}}" method="post" style="display:inline-block">
                                            <input type="hidden" name="idCurso" value="{{a.idCurso}}">
                                            <input type="hidden" name="idCursoOferta" value="{{a.idCursoOferta}}">
                                            <input type="hidden" name="bimestre" value="4">
                                            <input type="hidden" name="idAsignatura" value="{{a.idAsignatura}}">
                                            <input type="hidden" name="idPersonaMaestro" value="{{a.idPersonaMaestro}}">
                                            <button id="btnc{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)">4</button>
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        {% for flashMessage in app.session.flashbag.get('registroOk') %}
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('updateOk') %}
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        function disabledButton(id,valor){
            if(id){
                if(valor){
                    $('#'+id).empty();
                    $('#'+id).append(valor);
                }
                $('#'+id).addClass('disabled');
            }
        }
    </script>
{% endblock %}