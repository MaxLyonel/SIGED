{% if resultado %}
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="panel-title">
				<h4>Datos complementarios</h4>
			</div>
			<div class="clearfix"></div>
		</div>
		<div id="formDatos">
			<div class="panel-body">
				{{form_start(form_datos, {'attr': {'id': 'formDatos'}})}}
					<div class="form-group">
						<label>{{form_label(form_datos.generoTipo)}} (*):</label>
						{{form_widget(form_datos.generoTipo)}}
					</div>
					<div class="form-group">
						<label>{{form_label(form_datos.departamentoTipo)}} (*):</label>
						{{form_widget(form_datos.departamentoTipo)}}
					</div>
					<div class="form-group">
						<label>{{form_label(form_datos.direccion)}} (*):</label>
						{{form_widget(form_datos.direccion)}}
					</div>
					<div class="form-group">
						<label>{{form_label(form_datos.celular)}} (*):</label>
						{{form_widget(form_datos.celular)}}
					</div>
					<div class="form-group">
						<label>{{form_label(form_datos.correo)}} (*):</label>
						{{form_widget(form_datos.correo)}}
					</div>

					{# dcastillo 2402 aqui hay que añadir otra vez el option ...para que segunda validacion ?? quien fue el inteligente ?#}
					<input type="hidden" id="sie_persona_tipo_persona" name="sie_persona_datos[tipo_persona]" value="{{tipo_persona}}">
					
					<input type="hidden" id="sie_persona_datos_persona" name="sie_persona_datos[persona]" value="{{persona}}">
					<input type="hidden" id="sie_persona_datos_institucion" name="sie_persona_datos[institucion]" value="{{institucion}}">
					<input type="hidden" id="sie_persona_datos_gestion" name="sie_persona_datos[gestion]" value="{{gestion}}">
					<div class="form-group text-right">
						<button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
					</div>
				{{form_end(form_datos)}}
			</div>
		</div>
	</div>
{% else %}
	<div class="alert alert-info" role="alert" id="alerta1">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		Persona no encontrada, verifique la información proporcionada (Esta información se valida con SEGIP).
	</div>
{% endif %}