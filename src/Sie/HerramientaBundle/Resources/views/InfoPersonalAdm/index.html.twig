        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="modal fade in" id="myModal">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">¡Advertencia!</h4>
                            </div>
                            <div class="modal-body">
                                <p>La Unidad Educativa cuenta con más de un(a) Director(a), verifique esta información.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel rounded shadow panel-danger">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Administrativos</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="panel-body panel-primary">
                            <div class="pull-right">
                                {% if activar_acciones and (app.session.get('lastOperativo') != 5) %}
                                    {% if app.session.get('roluser') != 20 %}
                                        <a href="{{path('herramienta_info_personal_adm_find')}}" id="nuevoA" name="nuevoA" class="btn btn-primary btn-md" style="display:inline-block"><i class="fa fa-user"></i> Nueva/o Administrativa/o</a>
                                    {% endif %}
                                {% endif %}
                                {% if personal_no_idioma is empty and personal_no_genero is empty and contador == 1 and personal is not empty and app.session.get('roluser') == 9 %}
                                    <form method ="POST" action="{{path('herramienta_info_personal_adm_ddjj')}}" name="form" id="form" style="display:inline-block" onsubmit="return validaDatos()">
                                          <input type="hidden" id="ddjjMaestro_sie" name="ddjjMaestro[sie]" value="{{institucion.id}}">
                                          <input type="hidden" id="ddjjMaestro_gestion" name="ddjjMaestro[gestion]" value="{{gestion}}">
                                          <input type="submit" class="btn btn-md btn-danger" value="Finalizar / Declaración Jurada"  onclick="return confirm('¿Está segura/o de continuar? Recuerde que posteriormente no podrá realizar más cambios hasta el siguiente operativo.')">
                                    </form>
                                {% endif %}
                                {% if not activar_acciones and habilitar_ddjj and (app.session.get('roluser') == 7 or app.session.get('roluser') == 10) and (app.session.get('lastOperativo') != 5) %}
                                    <div class="pull-right">
                                        <form method ="POST" action="{{path('herramienta_info_personal_adm_habilitar_ddjj')}}" name="form" id="form" style="display:inline-block" onsubmit="return validaDatos()">
                                              <input type="hidden" id="ddjjAdmHabilitar_sie" name="ddjjAdmHabilitar[sie]" value="{{institucion.id}}">
                                              <input type="hidden" id="ddjjAdmHabilitar_gestion" name="ddjjAdmHabilitar[gestion]" value="{{gestion}}">
                                              <input type="submit" class="btn btn-md btn-danger" value="Habilitar Declaración Jurada" onclick="return confirm('¿Está segura/o de continuar? Recuerde que se podrá volver a habilitar el operativo únicamente para las U.E. que aún no descargaron el archivo IGM.')">
                                        </form>
                                    </div>
                                {% endif %}
                                {% if not activar_acciones and (app.session.get('roluser') == 8 or app.session.get('roluser') == 7 or app.session.get('roluser') == 10) %}
                                    <div class="pull-right">
                                        <form method ="POST" action="{{path('herramienta_info_personal_adm_habilitar_ddjj')}}" name="form" id="form" style="display:inline-block" onsubmit="return validaDatos()">
                                              <input type="hidden" id="ddjjAdmHabilitar_sie" name="ddjjAdmHabilitar[sie]" value="{{institucion.id}}">
                                              <input type="hidden" id="ddjjAdmHabilitar_gestion" name="ddjjAdmHabilitar[gestion]" value="{{gestion}}">
                                              <input type="submit" class="btn btn-md btn-danger" value="Habilitar Declaración Jurada" onclick="return confirm('¿Está segura/o de continuar? Recuerde que se podrá volver a habilitar el operativo únicamente para las U.E. que aún no descargaron el archivo IGM.')">
                                        </form>
                                    </div>
                                {% endif %}

                                {% if operativoSalud %}
                                    <br>
                                    <div class="pull-right div-operativo-salud" style="margin-top:1rem">
                                        <form method ="POST" action="#" name="form" id="form-end-requests" style="display:inline-block" onsubmit="finalizarOperativoSalud(this); return false;">
                                              <input type="hidden" id="request_sie" name="request_sie" value="{{institucion.id}}">
                                              <input type="hidden" id="request_gestion" name="request_gestion" value="{{gestion}}">
                                              <input type="hidden" id="request_tipo" name="request_tipo" value="0">
                                              <input type="submit" class="btn btn-md btn-lilac" value="Finalizar operativo Estado Salud" onclick="return confirm('¿Está segura/o de continuar? Recuerde que posteriormente no podrá realizar más cambios hasta el siguiente operativo.')">
                                        </form>
                                    </div>
                                {% endif %}
                                {#
                                <br>
                                <div class="pull-right" style="margin-top:1rem">
                                    <a href="{{path('herramienta_info_personal_adm_seguimientoOperativo_estadosalud')}}" class="btn btn-primary" target="_blank">Seguimiento Operativo Salud</a>
                                </div>
                                #}
                            </div>
                            <div class="callout callout-warning">
                                <strong>Recuerde que:</strong><br />
                                - Es obligatorio el registro de un Director Titular o Director Encargado.<br />
                                - La información que ingrese a través de este módulo, se reflejará en el archivo .igm cargado en la herramienta de escritorio SIGED.<br />
                                - Es obligatorio que cada administrativo cuente con al menos un idioma registrado.<br />
                                - Es obligatorio que cada administrativo se encuentre registrado con el género correcto.<br />
                                - Una vez finalizado el registro y validación, se debe generar el reporte de declaración jurada, tome en cuenta que posteriormente no podrá realizar ningun cambio.
                            </div>
                            {% if personal_no_idioma %}
                                <div class="callout callout-danger">
                                    <strong>¡Error!</strong> Debe registrar los idiomas para los administrativos resaltados en rojo. Ingese a la acción "Editar" por cada administrativo observado.
                                </div>
                            {% endif %}
                            {% if personal_no_genero %}
                                <div class="callout callout-danger">
                                    <strong>¡Error!</strong> Debe registrar el género para los administrativos resaltados en rojo. Ingese a la acción "Editar" por cada administrativo observado.
                                </div>
                            {% endif %}
                            {% if contador > 1 %}
                                <div class="callout callout-danger">
                                    <strong>¡Advertencia!</strong> La Unidad Educativa cuenta con más de un(a) Director(a), verifique esta información.
                                </div>
                            {% endif %}
                            {% if contador < 1 %}
                                <div class="callout callout-danger">
                                    <strong>¡Advertencia!</strong> La Unidad Educativa no cuenta con un(a) Director(a), verifique esta información.
                                </div>
                            {% endif %}
                            {% if not activar_acciones %}
                                <div class="callout callout-info">
                                    <strong>Bien!</strong> La Unidad Educativa finalizó el registro de la información del personal administrativo, puede generar el reporte las veces que se requiera.
                                </div>
                            {% endif %}
                            {% if not habilitar_ddjj and (app.session.get('roluser') == 7 or app.session.get('roluser') == 8 or app.session.get('roluser') == 10) %}
                                <div class="callout callout-danger">
                                    <strong>Técnicos SIE Nacionales, Departamentales y Distritales:</strong><br />
                                    - Se podrá volver a habilitar el operativo únicamente para las U.E. que aún no descargaron el archivo IGM.
                                </div>
                            {% endif %}
                            {% if personal is not empty %}
                                <div id="no-more-tables">
                                    <div class="clearfix"></div>
                                    <!--table class="table table-bordered table-hover cf dataTable" id="myTable"-->
                                    <table class="table table-primary">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Carnet de Identidad</th>
                                                <th>Paterno</th>
                                                <th>Materno</th>
                                                <th>Nombre(s)</th>
                                                <th>Función</th>
                                                <th>Formación</th>
                                                <th>Fecha Registro</th>
                                                <th>Fecha Modificación</th>
                                                <th>Salud</th>
                                                <th>Observación</th>
                                                {% if app.session.get('roluser') != 20 %}
                                                    <th>Acciones</th>
                                                    <th>Es vigente</th>
                                                {% endif %}
                                            </tr>
                                        </thead>
                                        <tbody class='tbody-data'>
                                            {% for personal in personal %}

                                                {# set salud = personal.EstadosaludTipo  %}
                                                {% set persona = personal.MaestroInscripcion.persona %}
                                                {% set formacion = personal.MaestroInscripcion.formacionTipo %}
                                                {% set personal = personal.MaestroInscripcion #}

                                                {% set persona = personal.persona %}
                                                {% set formacion = personal.formacionTipo %}

                                                <tr {% if persona.id in personal_no_idioma|keys or persona.id in personal_no_genero|keys %}class="danger text-danger"{% endif %}>
                                                    <td data-title="N°">{{ loop.index }}</td>
                                                    <td data-title="Carnet">{{ persona.carnet }}</td>
                                                    <td data-title="Paterno">{{ persona.paterno }}</td>
                                                    <td data-title="Materno">{{ persona.materno }}</td>
                                                    <td data-title="Nombre(s)">{{ persona.nombre }}</td>
                                                    <td data-title="Función">{{ personal.cargoTipo }}</td>
                                                    <td data-title="Formación">{{ formacion.formacion }}</td>
                                                    <td data-title="FechReg">{% if personal.fechaRegistro %}{{ personal.fechaRegistro|date('d-m-Y') }}{% else %}-{% endif %}</td>
                                                    <td data-title="FechMod">{% if personal.fechaModificacion %}{{ personal.fechaModificacion|date('d-m-Y') }}{% else %}-{% endif %}</td>
                                                    
                                                    <td data-title="EstadoSalud" id="salud_{{personal.id}}" class="llenar-datos" data-sie="{{institucion.id}}"  data-inscripcion="{{personal.id}}" data-gestion="{{gestion}}" ></td>
                                                    
                                                    <td data-title="Observacion" {% if persona.id in personal_no_idioma|keys or persona.id in personal_no_genero|keys %}class="text-danger"{% else %}class="text-success"{% endif %}>
                                                        {% if persona.id in personal_no_idioma|keys %}<i class="fa fa-fw fa-warning" aria-hidden="true"></i>No tiene idiomas{% else %}<i class="fa fa-fw fa-check" aria-hidden="true"></i>(Idiomas) Correcto{% endif %}<br />
                                                        {% if persona.id in personal_no_genero|keys %}<i class="fa fa-fw fa-warning" aria-hidden="true"></i>Corrija el género{% else %}<i class="fa fa-fw fa-check" aria-hidden="true"></i>(Género) Correcto{% endif %}
                                                    </td>
                                                    {% if app.session.get('roluser') != 20 %}
                                                        <td data-title="Acciones">
                                                            {% if activar_acciones and (app.session.get('lastOperativo') != 5) %}
                                                                <form action="{{path('herramienta_info_personal_adm_edit')}}" method="post" style="display:inline-block">
                                                                    <input type="hidden" name="idPersona" value="{{persona.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <input type="hidden" name="idMaestroInscripcion" value="{{personal.id}}">
                                                                    <button type="submit" class="btn-link"><i class="fa fa-edit text-warning"></i> Editar</button>
                                                                </form>
                                                                <form action="{{path('herramienta_info_personal_adm_delete')}}" method="post" style="display: inline-block" id="eliminarF" name="eliminarF">
                                                                    <input type="hidden" name="idPersona" value="{{persona.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <input type="hidden" name="idMaestroInscripcion" value="{{personal.id}}">
                                                                    <button type="submit" class="btn-link" onclick="return confirm('Se eliminara el registro!. ¿Desea continuar?');"><i class="fa fa-trash-o text-danger"></i> Eliminar</button>
                                                                </form>
                                                            {% else %}
                                                                -
                                                            {% endif %}

                                                            {% if operativoSalud %}
                                                                <div class="div-operativo-salud">
                                                                    <button type="button" class="btn-link" onclick="editarEstadoSalud('{{personal.id}}'); return false;">
                                                                        <span class="badge badge-danger parpadeo">Nuevo</span><br>
                                                                        <i class="fa fa-edit text-danger"></i> Editar <br>estado de salud
                                                                    </button>
                                                                </div>
                                                            {% endif %}

                                                        </td>
                                                        <td>
                                                        {% if (app.session.get('lastOperativo') != 5) %}
                                                            <form action="{{path('herramienta_info_personal_adm_es_vigente_administrativo')}}" method="post" style="display: inline-block">
                                                                <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                <input type="hidden" name="gestion" value="{{gestion}}">
                                                                <input type="hidden" name="idMaestroInscripcion" value="{{personal.id}}">
                                                                <input type="hidden" name="idCargo" value="{{personal.cargoTipo.id}}">
                                                                {% if personal.esVigenteAdministrativo %}
                                                                    <button type="submit" class="btn btn-success" onclick="return confirm('¿Está segura/o de continuar?');">Vigente</button>
                                                                {% else %}
                                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está segura/o de continuar?');">Definir como Vigente</button>
                                                                {% endif %}
                                                            </form>
                                                        {% endif %}
                                                        </td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay personal administrativo registrado
                            {% endif %}
                        </div>
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

