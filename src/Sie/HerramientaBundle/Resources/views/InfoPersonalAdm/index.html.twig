                    {
                        var status=data.status;
                        if(status==200)
                        {
                            $('#salud_'+inscripcion).html(data.data);
                        }
                    },
                    statusCode:
                    {
                        500: function ()
                        {
                            $('#salud_'+inscripcion).empty();
                        },
                        404: function ()
                        {
                            $('#salud_'+inscripcion).empty();
                        }
                    }
                });
            }
        });
    }

