{% extends 'layoutHerramienta.html.twig' %}

{% block contentoption%}

   <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i> Inscripción  <span> Busqueda</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="#">Inscripción - Busqueda</a>
                    <i class="fa fa-angle-right"></i>
                </li>

            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->

   <!-- the new -->
   <div class="body-content animated fadeIn">

    <div class="row">

        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('notiext') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong></strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('goodext') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Bien!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
             {% for flashMessage in app.session.flashbag.get('notiext') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Obs!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('studentObservation') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Observaci&oacute;n! {{ flashMessage }}</strong> 
                </div>
            {% endfor %}
            
            <!-- Website Stats  Widget -->
            <!-- End of Website Stats Widget -->

        </div>
    </div>

    <div class="row">
                    <div class="col-xs-12 col-lg-12">
                        <div class="panel panel-icon panel-primary">
                            <div class="panel-heading">
                                <i class="fa fa-search"></i> Inserte Rude
                            </div>
                            <div class="panel-body">

                                {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form"} } )}}
                                <div class="form-group">
                                    <label for="form_codigoRude" class="col-sm-2 control-label">
                                        {{form_label(form.codigoRude)}}
                                    </label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.codigoRude) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="form_gestion" class="col-sm-2 control-label">
                                        {{form_label(form.gestion)}}
                                    </label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.gestion) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">

                                        {{ form_widget(form.buscar,{ 'attr':{'class':'btn btn-primary' } } ) }}

                                    </div>
                                </div>
                                {{form_end(form)}}
                            </div>
                        </div>

                    </div>
                </div>

       
   </div>
   <!-- the new end -->

    


{% endblock %}
