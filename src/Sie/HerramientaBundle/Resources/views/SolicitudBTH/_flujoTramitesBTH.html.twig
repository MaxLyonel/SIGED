{% if app.session.flashBag.has('error') %}
    <div class="alert alert-danger">
        {% for msg in app.session.flashBag.get('error') %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ msg }}
        {% endfor %}
    </div>
{% endif %}
<div class="panel panel-success">
    <div class="panel-heading">
        {% if flujotipo == 7 %}
            <div><h4><strong>Unidad Educativa:</strong>  {{nombre}}</h4></div>
        {% endif %}
    </div>
    {% if (flujotipo == 7 and nombre != null) %}
    <div class="panel-body">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!--<table class="table table-bordered table-striped table-hover js-exportable dataTable">-->
                            <table class="table table-striped table-hover js-basic-example dataTable">
                                <thead>
                                <tr>
                                    <th>Pasos del tr√°mite</th>
                                    <th>Fecha de solicitud</th>
                                    <th>Estado</th>
                                    <th>Observacion</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for f in flujo %}
                                    <tr>
                                        {% if (f.es_evaluacion == true and f.condicion == f.valor_evaluacion) or (f.es_evaluacion == true and (f.condicion == "SI" and f.fecha_registro == null) or f.es_evaluacion == false)  %}
                                            <td>{{ f.proceso_tipo }}</td>
                                            <td>{{ f.fecha_registro|date('d-m-Y') }}</td>
                                            {% if f.fecha_registro %}
                                                {% if f.tarea_sig_id == null %}
                                                    <td><span class="label label-success">TRAMITE CONCLUIDO</span></td>
                                                {% else %}
                                                    <td>ENVIADO</td>
                                                {% endif %}
                                            {% else %}
                                                <td>PENDIENTE</td>
                                            {% endif %}
                                            {% if f.es_evaluacion == true  %}
                                                {% if f.valor_evaluacion == "SI" %}
                                                    <td>PROCEDENTE</td>
                                                {% else %}
                                                    <td>IMPROCEDENTE: {{f.obs}}</td>
                                                {% endif %}
                                            {% else %}
                                                <td></td>
                                            {% endif %}
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

    </div>
</div>
{% endif %}
