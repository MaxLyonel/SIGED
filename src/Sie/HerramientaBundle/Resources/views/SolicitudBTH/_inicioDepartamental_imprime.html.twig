{% extends 'layoutHerramienta.html.twig' %}
{% block contentoption %}
    <div class="header-content">
        <h2><i class="fa fa-table animated flip"></i> Lista de Solicitudes BTH <span>Solicitudes usuario</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href={{ path('solicitud_bth_index') }}>Solicitud BTH </a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Index</li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <div class="body-content animated fadeIn">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel">
                    <div class="panel-body">
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                <h3 class="panel-title">Finalizar Trámites BTH</h3>
                            </div><!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="row">
                                    <div class="table-responsive col-md-12">
                                        <table class="table table-bordered table-striped table-default" id="listaSolicitudes" >
                                            <thead>
                                            <tr >
                                                <th class="text-center border-right" style="min-width: 10px">No. Trámite</th>
                                                <th>Código RUE</th>
                                                <th>Unidad Educativa</th>
                                                <th>Tipo de Trámite</th>
                                                <th>Remitente</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>

                                            </tr>
                                            </thead>
                                            <tfoot>
                                            <tr>
                                                <th class="text-center border-right">No. Trámite</th>
                                                <th>Código Rue</th>
                                                <th>Unidad Educativa</th>
                                                <th>Tipo de Trámite</th>
                                                <th>Remitente</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>

                                            </tr>
                                            </tfoot>
                                            <tbody>
                                            {% for lista_tramites in lista_tramites %}
                                                <tr>
                                                    <td class="text-center border-right">{{ lista_tramites.id}}</td>
                                                    <td>{{ lista_tramites.cod_sie}}</td>
                                                    <td>{{ lista_tramites.institucioneducativa}}</td>
                                                    <td>{{ lista_tramites.tramite_tipo}}</td>
                                                    <td>{{ lista_tramites.nombre}}</td>
                                                    <td>{{ lista_tramites.estado}}  </td>
                                                    <td>
                                                        <button  class="btn btn-xs btn-warning" onclick="enviarSolicituDepartamentaldbthImprime({{ lista_tramites.cod_sie }},{{ lista_tramites.id}}, new String('{{ lista_tramites.institucioneducativa}}'))"  title="Finalizar Tramite"><i class="fa fa-check"></i></button>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>

                                </div>


                            </div><!-- /.panel-body -->
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}
{% block javascripts%}
{{ parent() }}
<script>

    function  enviarSolicituDepartamentaldbthImprime(codUe,id_tramite,nombreUE) {

        swal({
            title: "¿Está Segura/o de finalizar el trámite?",
            text: "Se dará por finalizado el trámite de solicitud - BTH .",
            icon: "warning",
            buttons: true,
            dangerMode: true,
            buttons: ["Cancelar", "Continuar"],
        })
            .then(function(willDelete)  {
                if (willDelete) {

                    var imagen = '{{ asset("img/loading96.gif") }}';
                    //alert(ipt);
                    $.ajax({
                        type: 'post',
                        url: "{{ path('solicitud_bth_departamental_imprime') }}",
                        data:{codUe:codUe,id_tramite:id_tramite,nombreUE:nombreUE},

                        before: function () {
                            swal({
                                title: "Enviando...",
                                text: "Espere un momento por favor",
                                icon: imagen,
                                buttons: false
                            });
                        },
                        success: function (data) {

                            if (data==1){
                                swal("Se finalizó correctamente el Trámite, con Nro:" + id_tramite );
                                location.href = "{{ path('solicitud_bth_departamental_lista_imprime') }}";
                            }
                            else{
                                swal("Su formulario no se envío correctamente");
                            }
                        },
                        complete: function () {
                            swal.stopLoading();
                            swal.close();
                        }
                    });
                }
            });
    }


    $( document ).ready(function() {
        cargatablas();
    });
    var cargatablas = function (identif){
        // Setup - add a text input to each footer cell
        $('#listaSolicitudes tfoot th').each( function () {
            var title = $(this).text();
            if(title.trim() === "" || title === "No."){
                $(this).html('');
            } else {
                $(this).html( '<input type="text" class="form-control" style="width: 100%; box-sizing: border-box;" placeholder="Buscar '+title+'" />' );
            }
        } );

        // DataTable
        var table = $('#listaSolicitudes').DataTable( {
                "order": [[ 0, "asc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": [0] }
                ],
            }
        );

        // Apply the search
        table.columns().every( function () {
            var that = this;

            $( 'input', this.footer() ).on( 'keyup change', function () {
                if ( that.search() !== this.value ) {
                    that
                        .search( this.value )
                        .draw();
                }
            } );
        } );
    };
</script>
{% endblock %}