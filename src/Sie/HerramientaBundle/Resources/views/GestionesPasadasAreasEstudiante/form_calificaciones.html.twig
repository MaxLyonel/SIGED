<form id="formCalificaciones" name="formCalificaciones">
    <input type="hidden" name="areaid" value="{{areaid}}">
    <input type="hidden" name="inscripcionid" value="{{inscripcionid}}">
    <table class="table table-primary table-striped">
        <thead class="cf">
            <tr>
                {% for nota in libreta %}
                    <th>{{nota.notaAbrev}}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            <tr>
                {% set cantidad = 0 %}
                {% for nota in libreta %}                    
                    {% if nota.notaTipoId in estudianteNotaArray|keys %}
                        {% set cuantitativa = estudianteNotaArray[nota.notaTipoId] %}
                        {% set cantidad = cantidad + 1 %}
                    {% else %}
                        {% if cantidad > 0 %}
                            {% set cuantitativa = 0 %}
                        {% else %}
                            {% set cuantitativa = '' %}
                        {% endif %}
                    {% endif %}
                    <td><input type="text" name="formCalificaciones[{{nota.notaTipoId}}_{{areaid}}_{{nota.notaAbrev}}]" class="form-control" maxlength="3" autocomplete="off" placeholder="{{nota.notaTipo}}" value="{{cuantitativa}}" {% if cantidad > 0 %}disabled{% endif %} onkeypress="return validarNumero(event);" pattern="[0-9]{1,3}" /></td>
                {% endfor %}
            </tr>
    </table>
    <div style="background: #EEEEEE; text-align: center; padding: 5px;">
        <button type="button" class="btn btn-default" onclick="cerrarFormCalificaciones({{areaid}})">Cerrar</button>        
        {% if cantidad == 0 %}
            <button type="button" class="btn btn-success" onclick="guardarCalificaciones({{areaid}});">Guardar Calificaciones</button>
        {% endif %}
    </div>
</form>