<h5 class="pull-left"><i class="fa fa-fw fa-user" aria-hidden="true"></i> Datos de la/el Estudiante</h5>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-condensed table-bordered" style="background:#EEEEEE">
                <tr>
                    <th>Codigo Rude</th><td style="color:#0086DD"><strong>{{estudiante.codigoRude}}</strong></td>
                </tr>
                <tr>
                    <th>Estudiante</th><td><strong>{{estudiante.nombre}} {{estudiante.paterno}} {{estudiante.materno}}</strong></td>
                </tr>
                <tr>
                    <th>Carnet de Identidad</th><td>{{estudiante.carnetIdentidad}}{% if estudiante.complemento %} - {{estudiante.complemento}}{% endif %}</td>
                </tr>
                <tr>
                    <th>Género</th><td>{{estudiante.generoTipo}}</td>
                </tr>
                <tr>
                    <th>Fecha de Nacimiento</th><td>{{estudiante.fechaNacimiento|date('d-m-Y')}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<hr />
<h5 class="pull-left"><i class="fa fa-fw fa-list" aria-hidden="true"></i> Áreas de la/el Estudiante</h5>
<div class="btn-group pull-right">
    <button type="button" class="btn btn-lilac dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        Agregar área <span class="caret"></span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right animated flipInX" role="menu">
        {# {% if asignaturas|length > 0 %}
            {% for a in asignaturas %}
                <li><button onclick="newArea({{a.id}},'{{infoUe}}')" class="btn-link">{{a.id}} - {{a.asignatura}}</button></li>
            {% endfor %}
        {% else %}
            <li style="margin:5px;"><span class="text-warning">No hay asignaturas disponibles</span></li>
        {% endif %} #}
        <li>Agregar</li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">        
            <table class="table table-bordered table-hover table-striped cf">
                <thead class="cf">
                    <tr class="info">
                        <th class="text-center">Código</th>
                        <th class="text-center">Área</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for areaEstudiante in areasEstudiante %}
                        <tr>
                            <td>{{areaEstudiante.atId}}</td>
                            <td>{{areaEstudiante.asignatura}}</td>
                            <td class="text-center">
                                {% set cantidad = 0 %}
                                {% for areaCurso in areasCurso %}
                                    {% if areaEstudiante.atId == areaCurso.atId %}
                                        {% set cantidad = cantidad + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if cantidad == 1 %}
                                    <button onclick="deleteArea()" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Eliminar"><i class="fa fa-fw fa-times"></i> Eliminar</button>
                                {% else %}
                                    <button onclick="deleteArea()" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Eliminar"><i class="fa fa-fw fa-times"></i> Eliminar</button>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>