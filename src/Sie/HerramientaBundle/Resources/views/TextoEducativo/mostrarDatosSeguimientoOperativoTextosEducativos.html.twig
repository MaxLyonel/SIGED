<div class="container--fuild">
	<div class="row">
		<div class="col-md-12">
			<div class="table-responsive">
				<table class="table table-striped table-condensed table-hover">
				  <thead class="thead-dark">
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">Sie</th>
				      <th scope="col">Unidad Educativa</th>
				      <th scope="col">Tipo</th>
				      <th scope="col">Total cursos</th>
				      <th scope="col">Cursos registrados</th>
				      <th scope="col" width="5%">Registro completo</th>
				    </tr>
				  </thead>
				  <tbody>
				  	{% for d in datos %}
				  		{% set periodoTipo = (periodo==1)?'Trimestre(s)':'Semestre(s) ' %}
				    <tr>
				      <th scope="row">{{loop.index}}</th>
				      <td>{{d.institucioneducativa_id_target}}</td>
				      <td>{{d.institucioneducativa}}</td>
				      <td>{{d.dependencia}}</td>
				      <td class="text-right">{{d.nro_cursos}}</td>
				      <td class="text-right">{{d.cursos_registrados}}</td>
				      <td class="text-right">
				      	{% if d.nro_cursos == d.cursos_registrados %}
				      		<i class="fa fa-check fa-2x fg-success"></i>
				      	{% else %}
				      		<i class="fa fa-times fa-2x fg-danger"></i>
				      	{% endif %}
				      </td>
				    </tr>
				  	{% endfor %}
				  	{% if datos|length<=0 %}
				  		<tr>
				  			<td>No existen datos con estos criterios de busqueda</td>
				  		</tr>
				  	{% endif %}
				  </tbody>
				</table>
			</div>
		</div>
	</div>
</div>

