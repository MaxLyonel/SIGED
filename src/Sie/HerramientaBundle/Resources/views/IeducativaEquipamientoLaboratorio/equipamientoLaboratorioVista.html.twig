                                    <div class="form-group col-sm-4">
                                        <label class="control-label text-primary">beni.lab.dges@gmail.com</label>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        <label class="control-label text-primary">santacruz.lab.dges@gmail.com</label>
