                                    <div class="form-group col-sm-4">
                                        <label class="control-label text-primary">chuquisaca.lab.dges@gmail.com</label>
                                    </div>
                                </div>                                         
                            </div>
                        </div>
                    </div>
                </div>
            </div>       
        {% endif %}
            
        {% if formPdf is defined  %}
            {{form_start(formPdf, { 'attr': {'data-toggle': 'validator', 'role': "form"} } )}}                  
                <div class="row">
                    <div class="col-md-12">
                        {{ form_widget(formPdf.download,{ 'attr':{'class':'btn btn-success col-lg-12 col-md-12 col-sm-12 col-xs-12' } } ) }}
                    </div>
                </div>            
            {{form_end(formPdf)}}
        {% endif %}
    </div> 
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        function confirmar(form){
            if(confirm('¿Esta seguro de eliminar la información reportada? \nSe recomienda NO eliminar la información reportada sin autorización del Ministerio de Educación')){
