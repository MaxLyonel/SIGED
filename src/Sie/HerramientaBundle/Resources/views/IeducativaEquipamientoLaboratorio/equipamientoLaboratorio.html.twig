                        break;
                }
            });

            $('input[type=radio][name=radio44]').on('change', function() {
                switch($(this).val()) {
                    case '1':
                        $("#form_cantidadPiletaLavadero").removeAttr("disabled"); 
                        break;
                    case '0':
