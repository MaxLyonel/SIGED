{% extends 'layoutHerramienta.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('css/chosen.css')}}" rel="stylesheet">

{% endblock %}
{% block contentoption %}

<div class="header-content">
    <h2>
        Apreciaciones
        <span>Cualitativas</span>
    </h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Estas aqui:</span>
        <ol class="breadcrumb">
            <li>
                <a href="#">A. Cualitativas</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li class="active">
                <i class="fa fa-search"></i>
                <a href="{{path('notascualitativas')}}">Buscar</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <i class="fa fa-list"></i>
                <a href="{{path('notascualitativas',{'op':'result'})}}">A. Cualitativas</a>

            </li>
        </ol>
    </div>
</div>

<div class="body-content animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div id="tour-9" class="panel panel-primary shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title">Datos Generales</h3>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-sm" data-action="collapse" data-container="body" data-toggle="tooltip" data-placement="top" data-title="Collapse" data-original-title="" title=""><i class="fa fa-angle-up"></i></button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    <div id="no-more-tables">
                        <table class="table table-bordered cf">
                            <thead class="cf">
                                <tr>
                                    <th>Código SIE</th>
                                    <th>Nombre</th>
                                    <th>Gestión</th>
                                </tr>
                            </thead>
                            <tbody>
                            <td data-title="Código SIE">{{institucion.id}}</td>
                            <td data-title="Ins.Educativa">{{institucion.institucioneducativa}}</td>
                            <td data-title="Gestión">{{gestion}}</td>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Lista de materias -->
    <div class="row">
        <div class="col-md-12">
            <div id="tour-9" class="panel panel-lilac shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title">Áreas</h3>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-sm" data-action="collapse" data-container="body" data-toggle="tooltip" data-placement="top" data-title="Collapse" data-original-title="" title=""><i class="fa fa-angle-up"></i></button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    <div id="no-more-tables">
                        <table class="table table-striped table-hover cf">
                            <thead>
                            <tr class="cf">
                                <th>Nro</th>
                                <th>Nivel</th>
                                <th>Grado</th>
                                <th>Paralelo</th>
                                <th>Turno</th>
                                <th>Asesor</th>
                                <th>Bimestre</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for co in cursos %}
                                <tr>
                                    <td data-title="Nro">{{loop.index}}</td>
                                    <td data-title="Nivel">{{co.nivel}}</td>
                                    <td data-title="Grado">{{co.grado}}</td>
                                    <td data-title="Paralelo">{{co.paralelo}}</td>
                                    <td data-title="Turno">{{co.turno}}</td>
                                    <td data-title="Asesor">{{co.asesor}}</td>
                                    <td data-title="Bimestre">
                                        {% if co.nivelId != 11 %}
                                            <form action="{{path('notascualitativas_new')}}" method="post" style="display:inline-block">
                                                <input type="hidden" name="idCurso" value="{{co.id}}">
                                                <input type="hidden" name="bimestre" value="1">
                                                <input type="hidden" name="idPersonaMaestro" value="{{co.idPersonaAsesor}}">
                                                <button id="btnp{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)" data-toggle="tooltip" data-placement="top" data-original-title="Primer Bimestre">1</button>
                                            </form>
                                            <form action="{{path('notascualitativas_new')}}" method="post" style="display:inline-block">
                                                <input type="hidden" name="idCurso" value="{{co.id}}">
                                                <input type="hidden" name="bimestre" value="2">
                                                <input type="hidden" name="idPersonaMaestro" value="{{co.idPersonaAsesor}}">
                                                <button id="btns{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)" data-toggle="tooltip" data-placement="top" data-original-title="Segundo Bimestre">2</button>
                                            </form>
                                            <form action="{{path('notascualitativas_new')}}" method="post" style="display:inline-block">
                                                <input type="hidden" name="idCurso" value="{{co.id}}">
                                                <input type="hidden" name="bimestre" value="3">
                                                <input type="hidden" name="idPersonaMaestro" value="{{co.idPersonaAsesor}}">
                                                <button id="btnt{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)" data-toggle="tooltip" data-placement="top" data-original-title="Tercer Bimestre">3</button>
                                            </form>
                                            <form action="{{path('notascualitativas_new')}}" method="post" style="display:inline-block">
                                                <input type="hidden" name="idCurso" value="{{co.id}}">
                                                <input type="hidden" name="bimestre" value="4">
                                                <input type="hidden" name="idPersonaMaestro" value="{{co.idPersonaAsesor}}">
                                                <button id="btnc{{loop.index}}" type="submit" class="btn btn-xs btn-default" onclick="disabledButton(this.id)" data-toggle="tooltip" data-placement="top" data-original-title="Cuarto Bimestre">4</button>
                                            </form>
                                        {% endif %}
                                        <form action="{{path('notascualitativas_new')}}" method="post" style="display:inline-block">
                                            <input type="hidden" name="idCurso" value="{{co.id}}">
                                            <input type="hidden" name="bimestre" value="anual">
                                            <input type="hidden" name="idPersonaMaestro" value="{{co.idPersonaAsesor}}">
                                            <button id="btna{{loop.index}}" type="submit" class="btn btn-xs btn-default disabled" onclick="disabledButton(this.id)">Anual</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- MEnsajes -->
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('registroOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        function disabledButton(id,valor){
            if(id){
                if(valor){
                    $('#'+id).empty();
                    $('#'+id).append(valor);
                }
                $('#'+id).addClass('disabled');
            }
        }
    </script>
{% endblock %}