{% if gestion is not null and gestion != '-' %}
<div class="row">
    <div class="col-md-12 col-sm-12">
        <!-- Start widget newsletter -->
        <div class="panel rounded shadow">
            <div class="panel-body rounded">
                <div class="inner-all">
                    <h4 class="text-uc text-center">{{titulo}} - <span class="label label-primary">{{gestion}}</span></h4>
                    <div class="row">
                        <div class="col-md-4 text-left">
                            <b>Código SIE:</b> {{sie}}
                        </div>
                        <div class="col-md-4 text-center">
                            <b>Centro de Educación Especial:</b> {{ieducativa}}
                        </div>
                        <div class="col-md-4 text-right">
                            <b>Opción:</b> {{opcion}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}