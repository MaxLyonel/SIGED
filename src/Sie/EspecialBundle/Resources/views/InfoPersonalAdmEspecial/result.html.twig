{% extends 'layoutEspecialSie.html.twig' %}

{% block contentoption %}

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-table"></i> Personal Administrativo <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{path('info_personal_adm_especial_index',{'op':'result'})}}">Personal Administrativo</a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Index</li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <!-- Start widget newsletter -->
                <div class="panel text-center rounded shadow">
                    <div class="panel-body bg-lilac rounded">
                        <div class="inner-all">
                            <h4 class="text-uc">Información Unidad Educativa</h4>
                            <p>SIE : {{institucion.id}}</p>
                            <p>Unidad Educativa :{{institucion.institucioneducativa}} - {{gestion}}</p>
                            <h5 class="text-uc">Opción: Información Personal Administrativo</h5>
                        </div>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End widget newsletter -->
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel rounded shadow panel-primary">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Personas</h3>
                        </div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="panel-body panel-primary">
                            {% if personas is not empty %}
                                <div id="no-more-tables">
                                    <table class="table table-striped table-default">
                                        <thead>
                                            <tr>
                                                <th>N°</th>
                                                <th>Carnet de Identidad</th>
                                                <th>Paterno</th>
                                                <th>Materno</th>
                                                <th>Nombre(s)</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for persona in personas %}
                                                <tr>
                                                    <td data-title="N°">{{ loop.index }}</td>
                                                    <td data-title="Carnet">{{ persona.carnet }}&nbsp;</td>
                                                    <td data-title="Paterno">{{ persona.paterno }}&nbsp;</td>
                                                    <td data-title="Materno">{{ persona.materno }}&nbsp;</td>
                                                    <td data-title="Nombre(s)">{{ persona.nombre }}&nbsp;</td>
                                                    <td data-title="Acciones">
                                                        <form action="{{path('info_personal_adm_especial_new')}}" method="post" style="display:inline-block">
                                                            <input type="hidden"  name="form[idPersona]" id="form_idPersona" value="{{persona.id}}">
                                                            <input type="hidden" name="form[idInstitucion]" id="form_idInstitucion"  value="{{institucion.id}}">
                                                            <input type="hidden" name="form[gestion]" id="form_gestion" value="{{gestion}}">
                                                            <button type="submit" class="btn-link"><i class="fa fa-edit text-warning"></i> Inscribir</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay Personas Registradas con el número de carnet ingresado
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    </script>
{% endblock %}

