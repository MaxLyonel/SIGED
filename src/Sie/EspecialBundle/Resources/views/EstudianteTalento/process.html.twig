{% block javascripts %}
    {{parent()}}
    {#<script src="{{asset('js/jquery-ui.min.js')}}"></script>#}
    <script>
        $(document).ready(function() {
            //$("#centro_inscripcion").select2();
        });
        $('.noedit').keydown(function() {
            //code to not allow any changes to be made to input field
            return false;
        });
        $("#fecha_solicitud").datepicker({ autoclose: true, todayHighlight: true });
        $('#rude').keypress(function (event) {
            if (event.keyCode === 10 || event.keyCode === 13) {
                event.preventDefault();
                searchEstudiante();
            }
        });
        function searchClick() {
            searchEstudiante();
        }
        function searchEstudiante() {
            var rude = $('#rude').val();
            if (rude != "") {
                $("#buscar").attr('disabled', true);
                $.ajax({
                    type: 'post',
                    url: Routing.generate('talento_extraordinario_search'),
                    data: {'rude': rude},
                    beforeSend: function () {
                        $("#carga").empty();
                        $("#carga").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" /></div>');
                        clearInput();
                    },
                    success: function (data) {
                        $("#carga").empty();
                        if (data.estado == 200) {
                            $("#nombre").val(data.estudiante.nombre);
                            $("#paterno").val(data.estudiante.paterno);
                            $("#materno").val(data.estudiante.materno);
                            $("#cedula").val(data.estudiante.cedula);
                            $("#complemento").val(data.estudiante.complemento);
                            var fechanacimiento = data.estudiante.fecha_nacimiento.date.length>0?data.estudiante.fecha_nacimiento.date.substring(0, 10):'';
                            if (fechanacimiento != '') {
                                fechanacimiento = fechanacimiento.split('-').reverse().join('/');
                            }
                            $("#fecha_nacimiento").val(fechanacimiento);
                            $("#institucion_educativa").val(data.estudiante.institucion_educativa);
                            $("#estudiante_id").val(data.estudiante.estudiante_id);
                            $("#estudiante_ins_id").val(data.estudiante.estudiante_ins_id);
                        } else if (data.msg == 'nocurso') {
                            mesage('warning', 'Notificación', 'Estudiante no está inscrito en la gestión actual.');
                        } else if (data.msg == 'noins') {
                            mesage('warning', 'Notificación', 'Estudiante no está inscrito.');
                        } else if (data.msg == 'noest') {
                            mesage('warning', 'Notificación', 'El estudiante no existe.');
                        } else if (data.msg == 'existe') {
                            mesage('warning', 'Notificación', 'El estudiante ya postuló con anterioridad.');
                        }
                        $("#buscar").attr('disabled', false);
                    },
                    error: function (error) {
                        $("#buscar").attr('disabled', false);
                    }
                });
            } else {
                mesage('info', 'Alerta', 'Ingrese código RUDE del estudiante');
            }
        }

        function mesage(tipo, titulo, msg) {
            $("#carga").append('<div class="alert alert-'+ tipo +' alert-dismissible" role="alert">\n' +
                '<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>\n' +
                '<strong>'+ titulo +'</strong> '+ msg +' </div>');
            setTimeout(function () { $("#carga").empty(); }, 3500);
        }

        function clearInput() {
            $("#nombre").val('');
            $("#paterno").val('');
            $("#materno").val('');
            $("#cedula").val('');
            $("#complemento").val('');
            $("#fecha_nacimiento").val('');
            $("#institucion_educativa").val('');
            $("#estudiante_id").val('');
            $("#estudiante_ins_id").val('');
            // $("#centro_inscripcion").val('');
            $("#fecha_solicitud").val('');
            $('#centro_inscripcion').val('').trigger('change')
        }

        $("#registro").submit( function (event) {
            event.preventDefault();
            $("#guardar").attr('disabled', true);
            $.ajax({
                type: 'post',
                url: Routing.generate('talento_extraordinario_save'),
                data: {'solicitud': {'estudiante_id': $("#estudiante_id").val(), 'estudiante_ins_id': $("#estudiante_ins_id").val(), 'flujotipo_id': $("#flujotipo_id").val(), 'centro_inscripcion': $("#centro_inscripcion").val(), 'fecha_solicitud': $("#fecha_solicitud").val()}}, //$(this).serialize()
                beforeSend: function () {
                    $("#carga").empty();
                    $("#carga").append('<div class="text-center">Guardando datos</div>');
                },
                success: function (data) {
                    $("#guardar").attr('disabled', false);
                    $("#carga").empty();
                    if (data.msg == 'exito') {
                        clearInput();
                        //location.href = "{ { path('wf_tramite_recibido') }}";
                        location.href = "{{ path('wf_tramite_index') }}";
                    } else {
                        mesage('error', 'Error', 'Error al guardar datos.');
                    }
                },
                error: function (error) {
                    $("#guardar").attr('disabled', false);
                }
            });
        });
    </script>
{% endblock %}


