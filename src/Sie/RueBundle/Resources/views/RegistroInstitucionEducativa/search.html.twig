{% extends 'SieRueBundle:Default:rue.html.twig' %}

{% block contentoption%}

    <div class="block-header">
        <h2>INICIO / BUSCAR</h2>
    </div>

    <ol class="breadcrumb breadcrumb-bg-cyan">
        <li><a href="{{path('principal_web')}}">Inicio</a></li>
        <li class="active">Registro de Local Educativo</li>
    </ol>

    {% for flashMessage in app.session.flashbag.get('msgSearch') %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-danger text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <!-- Tabs With Icon Title -->
    <div class="row clearfix">
        <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-blue-grey">
                    <h2>
                        BUSCAR INSTITUCIÓN EDUCATIVA
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">add_box</i> Nuevo <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form action="{{path('rue_new')}}" method="post">
                                            <input type="hidden" name="institucioneducativaTipoId" value="1">
                                            <button type="submit" class="btn-link"><i class="fa fa-edit"></i>Educación Regular</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="{{path('rue_new')}}" method="post">
                                            <input type="hidden" name="institucioneducativaTipoId" value="2">
                                            <button type="submit" class="btn-link"><i class="fa fa-edit"></i>Educación Alternativa</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="{{path('rue_new')}}" method="post">
                                            <input type="hidden" name="institucioneducativaTipoId" value="4">
                                            <button type="submit" class="btn-link"><i class="fa fa-edit"></i>Educación Especial</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#por_codigo_le" data-toggle="tab">
                                <i class="material-icons">domain</i> Por Código RUE
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#por_dpto" data-toggle="tab">
                                <i class="material-icons">domain</i> Por nombre de la Institución Educativa
                            </a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="por_codigo_le">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativaId) }}
                                                <label class="form-label">Código RUE:</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_widget(formInstitucioneducativaId.institucioneducativaId,{ 'attr':{'class': 'form-control','placeholder':'Ingresar código RUE...','pattern':'[0-9]{8,17}'}  }) }}
                                                    </div>
                                                </div>
                                                {{ form_widget(formInstitucioneducativaId.buscarId,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativaId) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="por_dpto">
                            <!-- Vertical Layout -->
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="card">
                                        <div class="body">
                                            {{ form_start(formInstitucioneducativa) }}
                                                <label class="form-label">Nombre de la Institución Educativa:</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_widget(formInstitucioneducativa.institucioneducativa,{ 'attr':{'class': 'form-control','placeholder':'Ingresar nombre de la Institución Educativa...'}  }) }}
                                                    </div>
                                                </div>
                                                {{ form_widget(formInstitucioneducativa.buscar,{ 'attr':{'class': 'btn btn-primary btn-lg m-l-15 waves-effect'} }) }}
                                            {{ form_end(formInstitucioneducativa) }}
                                        </div>
                                    </div>
                                </div>
                            </div>                   
                            <!-- Vertical Layout -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Tabs With Icon Title -->

{% endblock %}
