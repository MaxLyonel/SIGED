{% extends 'layoutPnp.html.twig' %}

{% block body -%}
    
 <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1 class="glyphicon glyphicon-user"> CREAR PERSONA</h1>
                <ol class="breadcrumb">
                    <li>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>   
      {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Bien!</strong> {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>¡Advertencia!</strong> {{ flashMessage }}
                    </div>
                {% endfor %}
    <div style="width: 100%;">
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger alert-dismissible" role="alert" id="result" style="display: none;">
                    <strong>¡Advertencia!</strong> <input type="text" id="errorxls" class="form-control input-sm" readonly='true'>
                </div>
            </div>
        </div>
          <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Ingrese la información de la persona a registrar.</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#pinformation"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div> 
    {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form' } } )}}
    <div class="panel-body"> 
        <div class="form-group">
            <div class="row">
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.carnetIdentidad)}}
                    {{form_widget(form.carnetIdentidad) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.paterno)}}
                    {{form_widget(form.paterno) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.materno)}}
                    {{form_widget(form.materno) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.nombre)}}
                    {{form_widget(form.nombre) }}
                    <div class="help-block with-errors"></div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.fechaNacimiento)}}
                    <div id='sandbox-container'>
                        {{form_widget(form.fechaNacimiento) }}
                    </div>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.genero)}}
                    {{form_widget(form.genero) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-6 col-md-6">
                    {{ form_label(form.direccion)}}
                    {{form_widget(form.direccion) }}
                    <div class="help-block with-errors"></div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.celular)}}
                    {{form_widget(form.celular) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.correo)}}
                    {{form_widget(form.correo) }}
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-lg-3 col-md-6">
                    {{ form_label(form.rda)}} 
                    {{form_widget(form.rda) }}
                    <div class="help-block with-errors"></div>
                </div>    
            </div>
        </div>
        <hr>

        <div class="form-group">
            <div class="col-lg-6 text-center">
                {{ form_widget(form.save ) }}                
            </div>
            
            <div class="col-lg-6 text-center">                
                <a href="{{path('sie_pnp_homepage')}}" class="btn btn-default">Cancelar</a>
            </div>
        </div>
    </div>
    {{form_end(form)}}
</div>
</div>
</div>
</div>
{% endblock %}