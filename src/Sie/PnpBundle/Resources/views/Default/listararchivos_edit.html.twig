{% extends 'layoutPnp.html.twig' %}

{% block body -%}
  <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1 class="glyphicon glyphicon-edit"> LISTA DE CURSOS PARA EDITAR</h1>
                <ol class="breadcrumb">
                    <li>
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div style="width: 100%;">
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger alert-dismissible" role="alert" id="result" style="display: none;">
                    <strong>¡Advertencia!</strong> <input type="text" id="errorxls" class="form-control input-sm" readonly='true'>
                </div>
            </div>
        </div>
          {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Bien!</strong> {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>¡Advertencia!</strong> {{ flashMessage }}
                    </div>
                {% endfor %}
         <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-blue">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Lista de Cursos (Editar)</h4>
                        </div>
                        <div class="portlet-widgets">
                            <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#pinformation"><i class="fa fa-chevron-down"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="pinformation" class="panel-collapse collapse in">
                        <div class="portlet-body" align="center">
            <div class="row">
                {% if (totales) %}
                <div class="contenedor-tabla" style="width: 100%; overflow: scroll;">
                <table id="tablaTotales" class="display" cellspacing="0" width="100%">    
                    <thead>
                        <tr>
                            <th>Id del Curso</th>
                            <th>Consolidado</th>
                            <th>Lista Participantes</th>
                            <th>Carnet</th>
                            <th>Nombre</th>
                            <th>Paterno</th>
                            <th>Materno</th>                            
                            <th>Fecha Inicio</th>                            
                            <th>Fecha Fin</th>                            
                            <th>Bloque</th>                            
                            <th>Parte</th>                            
                            <th>Departamento</th>  
                            <th>Lugar</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for fila in totales %}
                        <tr>
                            <td>{{ fila.id }}</td>
                           <td><a role="button" class="btn btn-primary btn-xs glyphicon glyphicon-print" href="{{ path('sie_pnp_imprimir_consolidado', { 'id_enc': fila.id_enc~"|"~fila.ciclo_tipo_id~"|"~fila.grado_tipo_id}) }}"  > Imprimir Consolidado</a></td>
                            <td><a role="button" class="btn btn-success btn-xs glyphicon glyphicon-arrow-right" href="{{ path('sie_pnp_curso_listado_edit', { 'id': fila.id }) }}" > Ver participantes</a></td>
                            <td>{{ fila.carnet }}</td>
                            <td>{{ fila.nombre }}</td>                            
                            <td>{{ fila.paterno }}</td>
                            <td>{{ fila.materno }}</td> 
                            <td>{{ fila.fecha_inicio|date('d-m-Y') }}</td>
                            <td>{{ fila.fecha_fin|date('d-m-Y') }}</td>                            
                            <td>{{ fila.ciclo_tipo_id }}</td>
                            <td>{{ fila.grado_tipo_id }}</td>
                            <td>{{ fila.depto }}</td>
                            <td>{{ fila.lugar }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
             {% endif %}
            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    var espanol = {"sProcessing": "Procesando...",
                     "sLengthMenu": "Mostrar _MENU_ registros",
                     "sZeroRecords": "No se encontraron resultados",
                     "sInfo": "Mostrando desde _START_ hasta _END_ de _TOTAL_ registros",
                     "sInfoEmpty": "No existen registros",
                     "sInfoFiltered": "(filtrado de un total de _MAX_ líneas)",
                     "sInfoPostFix": "",
                     "sSearch": "Buscar:",
                     "sUrl": "",
                     "oPaginate": {
                        "sFirst":    "Primero",
                        "sLast":     "Último",
                        "sNext":     "Siguiente",
                        "sPrevious": "Anterior"
                     },
                     "buttons":{
                        "copy": "Copiar",
                        "print":"Imprimir"
                     }
                    };

    var currentLang = espanol;    
        
    $(document).ready(function() {
        
        var dtable = $('#tablaTotales').dataTable( {"oLanguage": espanol,
         'dom': 'lBfrtip <"clear">',
        'buttons': [
             {   
                extend: 'colvis',
                text:'Visibilizar Columnas'
            },
            {
                extend: 'print',
                text: 'Imprimir',
                autoPrint: true,
                title: 'PNP - LISTA DE ARCHIVOS SUBIDOS RUP - 4',
                header:true,
                exportOptions: {
                    columns: ':visible'
                }
            },
            {
                extend:'pdf',
                title: 'PNP - LISTA DE ARCHIVOS SUBIDOS RUP - 4',
                filename:'Lista de archivos subidos RUP-4',
                orientation:'landscape',
                exportOptions: {
                modifier: {
                    page: 'Lista de archivos subidos RUP-4'
                    }
                }
            },
            {
            extend: 'excel',
            text: 'Excel',
            filename:'Lista de archivos subidos RUP-4',
            exportOptions: {
                modifier: {
                    page: 'Lista de archivos subidos RUP-4'
                    }
                }
            },
        ]} );
        
        $('#tablaTotales tbody').on( 'click', 'tr', function () {
            if ( $(this).hasClass('selected') ) {
                $(this).removeClass('selected');
            }
            else {
                dtable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });
        
        {#$('#btn').click(function(){
            dtable.fnDestroy();
            dtable = null;
            currentLang = (currentLang == english) ? espanol : english;
            dtable = $('#tablaTotales').dataTable( {"oLanguage": currentLang} );
        });#}
        
    });
    </script>
{% endblock %}