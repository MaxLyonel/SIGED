                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                <select name="provincia" id="provincia" class="form-control" required="required">
                                     <option value="">Provincia</option>
                                    {% for id_provincia in id_provincias %}
                                        <option {% if (id_provincia.id  == filas["lugar_prov_nac_tipo_id"]) %}selected="selected"{% endif %} value="{{ id_provincia.id }}">{{ id_provincia.lugar }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>
                                <input required="required" type="text" maxlength="40" style="text-transform:uppercase" onkeyup="javascript:this.value=this.value.toUpperCase();" class="form-control" name="localidad" value="{{ filas.localidad_nac }}">
                            </td>
                        </tr>
                        </select>          
                    {% endif %}
                    <tr align="center"><td>&nbsp;</td><td><strong>Sexo</strong></td></tr>
                    <tr><td>&nbsp;</td>
                        <td><select name="sexo" id="sexo" class="form-control" required="required">
                             <option value="">Seleccionar</option>
                             <option value="1" {% if filas["genero_tipo_id"] == 1 %}selected="selected"{% endif %}>Masculino</option>
                             <option value="2" {% if filas["genero_tipo_id"] == 2 %}selected="selected"{% endif %}>Femenino</option>
                        </select></td>
                    </tr>
            </table>
        </div>
    </div>

</div>

    <div align="center"><input type="submit" onclick="cambio()" id="boton" value="Guardar Estudiante" class="btn rounded btn-success btn-large"></div>

 </form> 
 <script type="text/javascript">
    function cambio(){
        document.getElementById("boton").style.visibility = 'hidden';
    }
    $("#departamento").change(function(){                            
            var iddep = $(this).val();            
            var route = Routing.generate('sie_pnp_buscar_provincia', { ieid: iddep });                    
            var data;
            $.ajax({
                type: 'get',     
                url: route,
                data: data,
                success: function(data) {                        
                        datos = $.parseJSON(data);
                        $("#provincia").empty();                       
                        var $province_selector = $('#provincia');

                        $province_selector.html('<option value="">Provincia</option>');
                        for (var i=0, total = datos.length; i < total; i++) {
                            $province_selector.append('<option value="' + datos[i].id + '">' + datos[i].provincia + '</option>');
                        }
                        $('#provincia').trigger("chosen:updated");
                    }
                });            
            });
</script>
