                                    <option value="NO"{% if filas.alfabetizado == "NO" %} selected="selected" {% endif %}>NO</option>
                                </select>
                            </td>
                            <td align="center">
                                <select name="idioma" class="form-control">
                                    <option {% if filas.idioma == "CASTELLANO" %} selected {% endif %} value="CASTELLANO">CASTELLANO</option>
                                    <option {% if filas.idioma == "ATAONA" %} selected {% endif %} value="ATAONA">ATAONA</option>
                                    <option {% if filas.idioma == "AIMARA" %} selected {% endif %} value="AIMARA">AIMARA</option>
                                    <option {% if filas.idioma == "AYOREO" %} selected {% endif %} value="AYOREO">AYOREO</option>
                                    <option {% if filas.idioma == "BAURE" %} selected {% endif %} value="BAURE">BAURE</option>
                                    <option {% if filas.idioma == "CAVINEÑO" %} selected {% endif %} value="CAVINEÑO">CAVINEÑO</option>
                                    <option {% if filas.idioma == "CANICHANA" %} selected {% endif %} value="CANICHANA">CANICHANA</option>
                                    <option {% if filas.idioma == "CAYUBABA" %} selected {% endif %} value="CAYUBABA">CAYUBABA</option>
                                    <option {% if filas.idioma == "CHÁCOBO" %} selected {% endif %} value="CHÁCOBO">CHÁCOBO</option>
                                    <option {% if filas.idioma == "CHIMAN" %} selected {% endif %} value="CHIMAN">CHIMAN</option>
                                    <option {% if filas.idioma == "CHIQUITANO" %} selected {% endif %} value="CHIQUITANO">CHIQUITANO</option>
                                    <option {% if filas.idioma == "SSE EJJA" %} selected {% endif %} value="ESSE EJJA">ESSE EJJA</option>
                                    <option {% if filas.idioma == "GUARANI" %} selected {% endif %} value="GUARANI">GUARANI</option>
                                    <option {% if filas.idioma == "GUARAYA" %} selected {% endif %} value="GUARAYA">GUARAYA</option>
                                    <option {% if filas.idioma == "ITONOMA" %} selected {% endif %} value="ITONOMA">ITONOMA</option>
                                    <option {% if filas.idioma == "JOAQUINIANO" %} selected {% endif %} value="JOAQUINIANO">JOAQUINIANO</option>
                                    <option {% if filas.idioma == "LECO" %} selected {% endif %} value="LECO">LECO</option>
                                    <option {% if filas.idioma == "MACHINERI" %} selected {% endif %} value="MACHINERI">MACHINERI</option>
                                    <option {% if filas.idioma == "MORÉ" %} selected {% endif %} value="MORÉ">MORÉ</option>
                                    <option {% if filas.idioma == "MOSETÉN" %} selected {% endif %} value="MOSETÉN">MOSETÉN</option>
                                    <option {% if filas.idioma == "MOVIMA" %} selected {% endif %} value="MOVIMA">MOVIMA</option>
                                    <option {% if filas.idioma == "MOXEÑO" %} selected {% endif %} value="MOXEÑO">MOXEÑO</option>
                                    <option {% if filas.idioma == "NAHUA" %} selected {% endif %} value="NAHUA">NAHUA</option>
                                    <option {% if filas.idioma == "PACAHUARA" %} selected {% endif %} value="PACAHUARA">PACAHUARA</option>
                                    <option {% if filas.idioma == "PAICONECA" %} selected {% endif %} value="PAICONECA">PAICONECA</option>
                                    <option {% if filas.idioma == "QUECHUA" %} selected {% endif %} value="QUECHUA">QUECHUA</option>
