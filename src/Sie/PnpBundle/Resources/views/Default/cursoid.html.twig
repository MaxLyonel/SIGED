                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#pinformation"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="pinformation" class="panel-collapse collapse in">
                    <div class="portlet-body">
        <div class="row">
            {{ form_start(form) }}  
            <div class="col-xs-6">
                {{ form_row(form.id, { 'id': 'id'}) }}
            </div>
            <div class="col-xs-6">
                {{ form_row(form.buscar, { 'id': 'buscar'}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>      </div>
    </div>
</div>                   
{% endblock %}