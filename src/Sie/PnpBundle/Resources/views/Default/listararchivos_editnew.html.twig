                                                <tr>
                                                    <th>Id del Curso</th>
                                                    <th>Consolidado</th>
                                                    <th>Participantes (Regsitrar)</th>
                                                    <th>Carnet</th>
                                                    <th>Nombre</th>
                                                    <th>Paterno</th>
                                                    <th>Materno</th>                            
