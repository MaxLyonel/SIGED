                                                {% else %}
                                                    <td>{{ d_c.gestion }}</td>                            
                                                    <td>{{ d_c.abierto }}</td>
                                                    <td>{{ d_c.cerrado }}</td> 
                                                    <td>{{ d_c.total_c }}</td>
                                                {% endif %}
                                            </tr>
                                        {% endfor %}
                                    </tbody>
