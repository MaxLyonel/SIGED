            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="flexModalLabel">EDITAR CURSO (FECHAS).</h4>             
                </div>
                <div class="modal-body">
                    <div id="editar-Modal">
                        <form role="form" method="post" action="{{path('sie_pnp_listar_archivos_editnew')}}">
                            <div align="center">
                            <input type="text" id="curso_id" name="curso_id" value="" required="required" style="display:none" />
                            <input type="text" id="plan" name="plan" value="" required="required" style="display:none" />
                            <input type="text" id="ciclo_tipo_id" name="ciclo_tipo_id" value="" required="required" style="display:none" />
                            <input type="text" id="grado_tipo_id" name="grado_tipo_id" value="" required="required" style="display:none" />
                            Fecha Inicio:
                            <input type="text" id="fecha_inicio" name="fecha_inicio" placeholder="Digite Fecha Inicio" required="required" value=""/>&nbsp;&nbsp;<br>
                            Fecha Fin:
                            <input type="text" id="fecha_fin" name="fecha_fin" placeholder="Digite Fecha Final" required="required" value=""/>
                            <br><br>
                            <button type="submit" class="btn btn-success btn-large glyphicon glyphicon-pencil" onclick="return validar_fecha()"> Guardar Cambios</button>
                        </form>
                    </div>
                </div>
                <div class="editar-pie">
                    <HR>
                </div>                    
            </div>                
        </div>
    </div>
    {% else %}
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet portlet-blue">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4>Reporte de Cursos Abiertos y Cerrados</h4>
                        </div>
                        <div class="portlet-widgets">
