{% extends 'layoutHerramientaAlternativa.html.twig' %}

{% block contentoption %}



                <!-- Start page header -->
                <div class="header-content">
                    <h2><i class="fa fa-tachometer"></i>Estadisticas Cierre 2do Semestre 2016<span>Cantidad de Ceas concluidos y pendientes en el operativo de cierre segundo semestre 2016</span></h2>
                    <div class="breadcrumb-wrapper hidden-xs">
                        <span class="label">Usted esta aqui:</span>
                        <ol class="breadcrumb">
                            <li class="active">Tablero de progreso</li>
                        </ol>
                    </div>
                </div><!-- /.header-content -->
                <!--/ End page header -->

                <!-- Start body content -->
                <div class="body-content animated fadeIn">
                    <div class="row">                                                
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                            <div class="mini-stat clearfix bg-bitbucket">
                                <span class="mini-stat-icon"><i class="fa fa-globe fg-primary"></i></span><!-- /.mini-stat-icon -->
                                <div class="mini-stat-info">
                                    <span class="counter">{{entitiestot[0].tottecho}}</span>
                                    Total Ceas
                                </div><!-- /.mini-stat-info -->
                            </div><!-- /.mini-stat -->
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                            <div class="mini-stat clearfix bg-bitbucket">
                                <span class="mini-stat-icon"><i class="fa fa-flag-o fg-success"></i></span><!-- /.mini-stat-icon -->
                                <div class="mini-stat-info">
                                    <span class="counter">{{entitiestot[0].totconclu}}</span>
                                    Ceas Concluidos
                                </div><!-- /.mini-stat-info -->
                            </div><!-- /.mini-stat -->
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                            <div class="mini-stat clearfix bg-bitbucket">
                                <span class="mini-stat-icon"><i class="fa fa-times-circle-o fg-danger"></i></span><!-- /.mini-stat-icon -->
                                <div class="mini-stat-info">
                                    <span class="counter">{{entitiestot[0].tottecho - entitiestot[0].totconclu}}</span>
                                    Ceas Pendientes
                                </div><!-- /.mini-stat-info -->
                            </div><!-- /.mini-stat -->
                        </div>                                  
                    </div>
                    <div class="row">                    
                        <div class="col-md-8">
                            <div class="panel">
                                <div class="panel-heading">
                                    <h3 class="panel-title text-center">Progreso de conclusi√≥n por departamento.</h3>
                                </div><!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-no-border table-middle table-lilac">
                                            <tbody>
                                                {% for data in entities %}  
                                                    <tr>
                                                        <td>
                                                            {{loop.index}}
                                                        </td>
                                                        <td>
                                                            <b class="text-block">{{data.lugar}}</b>
                                                        </td>
                                                        <td>
                                                            <b class="text-block">{{data.cantconclu}} de {{data.canttecho}}</b>
                                                            <span class="text-block text-muted">ceas concluidos</span>
                                                        </td>
                                                        <td>
                                                            <b class="text-block">{{data.canttecho - data.cantconclu}}</b>
                                                            <span class="text-block text-muted">ceas pendientes</span>
                                                        </td> 
                                                        <td>
                                                            {#<span class="text-block text-muted">total 100%</span>
                                                            <div class="progress progress-xxs no-margin">
                                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                                                            </div>#}
                                                            <span class="text-block text-muted">concluidos {{((data.cantconclu * 100) / data.canttecho)|round}}%</span>
                                                            <div class="progress progress-xxs no-margin">
                                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{((data.cantconclu * 100) / data.canttecho)|round}}%"></div>
                                                            </div>
                                                            <span class="text-block text-muted">pendiente {{(((data.canttecho - data.cantconclu) * 100) / data.canttecho)|round}}%</span>
                                                            <div class="progress progress-xxs no-margin">
                                                                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{(((data.canttecho - data.cantconclu) * 100) / data.canttecho)|round}}%"></div>
                                                            </div>                                                                    
                                                        </td>                                                                                                                       
                                                    </tr> 
                                                {% endfor %}                                                        
                                            </tbody>
                                        </table>
                                    </div>
                                </div><!-- /.panel-body -->
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-12 col-sm-6 col-xs-6">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">&nbsp;</div>
                                        <div class="panel-body text-center">
                                            <div class="easy-pie-chart easy-pie-sm">
                                                <div class="percentage" data-percent="{{ ((entitiestot[0].totconclu * 100) / entitiestot[0].tottecho)|round(1, 'floor')}}" data-size="100" data-bar-color="#00B1E1">
                                                    <span> {{ ((entitiestot[0].totconclu * 100) / entitiestot[0].tottecho)|round(1, 'floor')}} </span> %
                                                </div>
                                                <a class="title" href="javascript:void(0);">
                                                    <i class="fa fa-flag-o"></i> Concluidos
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-6 col-xs-6">
                                    <div class="panel panel-danger">
                                        <div class="panel-heading">&nbsp;</div>
                                        <div class="panel-body text-center">
                                            <div class="easy-pie-chart easy-pie-sm">
                                                <div class="percentage" data-percent="{{ (((entitiestot[0].tottecho - entitiestot[0].totconclu) * 100) / entitiestot[0].tottecho)|round(1, 'floor')}}" data-size="100" data-bar-color="#E9573F">
                                                    <span> {{ (((entitiestot[0].tottecho - entitiestot[0].totconclu) * 100) / entitiestot[0].tottecho)|round(1, 'floor')}} </span> %
                                                </div>
                                                <a class="title" href="javascript:void(0);">
                                                    <i class="fa fa-times-circle-o"></i> Pendiente
                                                </a>
                                            </div>
                                        </div>
                                    </div>          
                                </div>
                            </div>
                        </div>
                    </div>                                               
                </div><!-- /.body-content -->
                <!--/ End body content -->
{% endblock %}            