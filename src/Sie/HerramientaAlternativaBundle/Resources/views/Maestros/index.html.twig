{% extends 'layoutHerramientaAlternativa.html.twig' %}

{% block contentoption %}
    <div class="header-content">
        <h2><i class="fa fa-users"></i> Docentes <span>Lista del personal docente del centro de educación alternativa.</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                    <li>
                        <i class="glyphicon glyphicon-leaf"></i>
                            <a href="{{path('principal_web')}}">Bienvenida</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-th-large"></i>
                            <a href="{{path('herramienta_ceducativa_menu_principal')}}">Menu Principal</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-users"></i>
                            Personal docente
                        <i class="fa fa-angle-right"></i>
                    </li>                
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div>
    
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel rounded shadow panel-teal">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Docentes</h3>
                        </div>
                        {#<div class="pull-right">
                            <a href="{{path('herramienta_info_maestro_find')}}" class="btn btn-warning btn-sm"><i class="fa fa-user"></i> Nueva/o Maestra/o</a>
                        </div>#}
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="panel-body panel-primary">
                            {% if maestros is not empty %}
                                <div id="no-more-tables">
                                    <table class="table table-striped table-primary">
                                        <thead>
                                            <tr>
                                                <th>N°</th>
                                                <th>Carnet de Identidad</th>
                                                <th>Paterno</th>
                                                <th>Materno</th>
                                                <th>Nombre(s)</th>
                                                <th>Formación</th>                                                
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for maestro in maestros %}
                                                <tr>
                                                    <td data-title="N°">{{ loop.index }}</td>
                                                    <td data-title="Carnet">{{ maestro.carnet }}</td>
                                                    <td data-title="Paterno">{{ maestro.paterno }}</td>
                                                    <td data-title="Materno">{{ maestro.materno }}</td>
                                                    <td data-title="Nombre(s)">{{ maestro.nombre }}</td>
                                                    <td data-title="Formación">{{ maestro.cargo }}</td>
                                                    <td>
                                                        <form action="{{path('herramienta_alter_maestros_edit')}}" method="post" style="display:inline-block">
                                                            <input type="hidden" name="pId" value="{{maestro.pId}}">
                                                            <input type="hidden" name="miId" value="{{maestro.miId}}">
                                                            <button type="submit" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Ver a detalle"><i class="fa fa-eye"></i></button>
                                                        </form>                                                        
                                                        {#<a href="table-samples.html#" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Eliminar"><i class="fa fa-eraser"></i></a>#}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay Maestros Registrados
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}