{% extends 'layoutHerramientaAlternativa.html.twig' %}

{% block contentoption %}


<!-- Start page header -->
<div class="header-content">
    <h2><i class="fa fa-home animated flip"></i> Declaración Jurada<span></span></h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Usted esta aqui:</span>
        <ol class="breadcrumb">
                <i class="fa fa-home"></i>
                <a href="{{path('declaracion_jurada_index')}}">Buscar por código Ruedeal </a>
                <i class="fa fa-angle-right"></i>
            </li>

            <li class="active"></li>
        </ol>
    </div><!-- /.breadcrumb-wrapper -->
</div><!-- /.header-content -->
<!--/ End page header -->
  <div class="body-content animated fadeIn">
    <div class="row">
        <div class="col-md-12">

            {% for flashMessage in app.session.flashbag.get('noticeddjj') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong><i class='fa fa-linux'></i></strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('successddjj') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong><i class='fa fa-linux'></i></strong> {{ flashMessage }}
                </div>
            {% endfor %}
        </div>

    </div>

    <!-- /.row -->

    <div class="row">
        <div class="col-md-12">
            <!-- Start toggle switches -->
            <div class="panel panel-success rounded shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title">   <i class="fa fa-search"></i> Buscar por código Ruedeal</h3>
                    </div>
                    <div class="pull-right">
                    </div>
                    <div class="clearfix"></div>
                </div><!-- /.panel-heading -->
                <div class="panel-sub-heading">

                </div><!-- /.panel-sub-heading -->
                <div class="panel-body">
                  {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form"} } )}}
                  <div class="form-group">
                      <label for="form_codigoRude" class="col-sm-2 control-label">
                          {{form_label(form.sie)}}
                      </label>
                      <div class="col-sm-10">
                          {{ form_widget(form.sie) }}
                          <div class="help-block with-errors"></div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="form_codigoRude" class="col-sm-2 control-label">
                          {{form_label(form.gestion)}}
                      </label>
                      <div class="col-sm-10">
                          {{ form_widget(form.gestion) }}
                          <div class="help-block with-errors"></div>
                      </div>

                  </div>
                  <div class="form-group">
                      <div class="col-sm-offset-2 col-sm-10">

                          {{ form_widget(form.search,{ 'attr':{'class':'btn btn-primary' } } ) }}
                      </div>
                  </div>
                  {{form_end(form)}}


                </div><!-- /.panel-body -->
            </div><!-- /.panel -->
            <!-- End toggle switches -->

        </div>
    </div>

  </div>
{% endblock %}
