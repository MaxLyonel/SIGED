<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Datos del operativo</h4>
        </div>
        {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form', 'id': 'form_operativo_edit', 'onsubmit':'return confirm("Â¿Esta suguro de guardar los cambios?")'} } )}}
            <div class="modal-body">
                <div id="msg1"></div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <div class="col-md-2">
                            {{ form_label(form.operativo)}}
                        </div>
                        <div class="col-md-6">
                            {{form_widget(form.operativo) }}
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-2">
                            {{ form_label(form.distrito)}}
                        </div>
                        <div class="col-md-6">
                            {{form_widget(form.distrito) }}
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-2">
                            {{ form_label(form.fechainicio)}}
                        </div>
                        <div class="col-md-6">
                            {{form_widget(form.fechainicio) }}
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-2">
                            {{ form_label(form.fechafin)}}
                        </div>
                        <div class="col-md-6">
                            {{form_widget(form.fechafin) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-4">
                        {{ form_widget(form.guardar ) }}
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        {{form_end(form)}}
    </div>
</div>