{% extends 'layoutHerramientaAlternativa.html.twig' %}
{% block contentoption %}

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-user-secret"></i> Administrativos <span>Lista del personal administrativo del centro de educación alternativa.</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                    <li>
                        <i class="glyphicon glyphicon-leaf"></i>
                            <a href="{{path('principal_web')}}">Bienvenida</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-th-large"></i>
                            <a href="{{path('herramienta_ceducativa_menu_principal')}}">Menu Principal</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-user-secret"></i>
                            Personal administrativo
                        <i class="fa fa-angle-right"></i>
                    </li>                
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        {#<div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="modal fade in" id="myModal">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">¡Advertencia!</h4>
                            </div>
                            <div class="modal-body">
                                <p>La Unidad Educativa cuenta con más de un(a) Director(a), verifique esta información.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                {% if contador > 1 %}
                    <div class="callout callout-danger">
                        <strong>¡Advertencia!</strong> La Unidad Educativa cuenta con más de un(a) Director(a), verifique esta información.
                    </div>
                {% endif %}
            </div>
        </div>#}

        <div class="row">
            <div class="col-lg-12">
                <div class="panel rounded shadow panel-teal">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Administrativos</h3>
                        </div>
                        {#<div class="pull-right">
                            <a href="{{path('herramienta_info_personal_adm_find')}}" class="btn btn-warning btn-md"><i class="fa fa-user"></i> Nueva/o Administrativa/o</a>
                        </div>#}
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="panel-body panel-primary">
                            {% if personal is not empty %}
                                <div id="no-more-tables">
                                    <!--table class="table table-bordered table-hover cf dataTable" id="myTable"-->
                                    <table class="table table-striped table-primary">
                                        <thead>
                                            <tr>
                                                <th>N°</th>
                                                <th>Carnet de Identidad</th>
                                                <th>Paterno</th>
                                                <th>Materno</th>
                                                <th>Nombre(s)</th>
                                                <th>Cargo</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for persona in personal %}
                                                {#{% set persona = personal.persona %}
                                                {% set formacion = personal.formacionTipo %} #}
                                                <tr>
                                                    <td data-title="N°">{{ loop.index }}</td>
                                                    <td data-title="Carnet">{{ persona.carnet }}</td>
                                                    <td data-title="Paterno">{{ persona.paterno }}</td>
                                                    <td data-title="Materno">{{ persona.materno }}</td>
                                                    <td data-title="Nombre(s)">{{ persona.nombre }}</td>
                                                    <td data-title="Función">{{ persona.cargo }}</td>                                                                                                        
                                                    <td>
                                                        <form action="{{path('herramienta_alter_administrativos_edit')}}" method="post" style="display:inline-block">
                                                            <input type="hidden" name="pId" value="{{persona.pId}}">
                                                            <input type="hidden" name="miId" value="{{persona.miId}}">
                                                            <button type="submit" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Ver a detalle"><i class="fa fa-eye"></i></button>
                                                        </form>                                                        
                                                        {#<a href="table-samples.html#" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Eliminar"><i class="fa fa-eraser"></i></a>#}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay personal administrativo registrado
                            {% endif %}
                        </div>
                    </div><!-- /.panel-body -->
                </div>
            </div>
        </div>        
    </div>
{% endblock %}

