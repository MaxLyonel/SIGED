{% extends 'layoutHerramientaAlternativa.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <style>
        .higherWider {
            width:800px;
            margin-top:100px;
        }
    </style>

{% endblock %}
{% block contentoption %}

    <div class="header-content">
        <h2><i class="fa fa-users"></i> Historial Inscripción Estudiante <span> Nivel, Grado, Paralelo, Turno.</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aqui:</span>
            <ol class="breadcrumb">
                    <li>
                        <i class="glyphicon glyphicon-leaf"></i>
                            <a href="{{path('principal_web')}}">Bienvenida</a>
                        <i class="fa fa-angle-right"></i>
                    </li>                    
                    <li>
                        <i class="fa fa-th-large"></i>
                            <a href="{{path('herramienta_ceducativa_menu_principal')}}">Menu Principal</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-users"></i>
                            Historial
                        <i class="fa fa-angle-right"></i>
                    <li>                                 
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div>
    <!--/ End page header -->
    <div class="body-content animated fadeIn">

    <div class="row">

        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('notihistory') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>¡Advertencia!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('goodhistory') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Bien!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            <!-- Website Stats  Widget -->
        </div>
            {% if sw  %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel rounded shadow panel-teal">
                            <div class="panel-heading">
                                <div class="pull-left">
                                    <h3 class="panel-title">Estudiante</h3>
                                </div>
                                <div class="clearfix"></div>
                            </div><!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="panel-body panel-primary">
                                    <div id="no-more-tables">
                                        <table class="table table-bordered table-hover cf">
                                            <thead class="cf">
                                                <tr class="info">
                                                    <th class="text-center">Rude</th>
                                                    <th class="text-center">Nombre(s)</th>
                                                    <th class="text-center">Paterno</th>
                                                    <th class="text-center">Materno</th>
                                                    <th class="text-center">CI</th>
                                                    <th class="text-center">Complemento</th>
                                                    <th class="text-center">Genero</th>
                                                    <th class="text-center">F. Nacimiento</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td data-title="Rude">{{datastudent.codigoRude}}</td>
                                                    <td data-title="Nombre">{{ datastudent.nombre|e }} </td>
                                                    <td data-title="Paterno">{{datastudent.paterno|e}}</td>
                                                    <td data-title="Materno">{{datastudent.materno|e}}</td>
                                                    <td data-title="CI">{{datastudent.carnetIdentidad}} </td>
                                                    <td data-title="Complemento" class="text-center">{{datastudent.complemento}}</td>
                                                    <td data-title="Genero" class="text-center">{{datastudent.generoTipo}} </td>
                                                    <td data-title="F. Nacimiento" class="text-center">{{datastudent.fechaNacimiento|date('d-m-Y')}}</td>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                            <div class="col-lg-12">

                                <div class="panel rounded shadow panel-teal">
                                    <div class="panel-heading">
                                        <div class="pull-left">
                                            <h3 class="panel-title">Historial Inscripción</h3>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div><!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div class="panel-body panel-primary">
                                            <div class="table-responsive">
                                                <div id="example-table_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                                  <table id="example-table" class="table table-striped table-bordered table-hover table-green dataTable" aria-describedby="example-table_info">
                                                    <thead>
                                                        <tr role="row">
                                                          <th class="text-center">Gestión-Semestre(Alt)</th>
                                                          <th class="text-center">Sie-Sub Centro(Alt)</th>
                                                          <th class="text-center">Institución Educativa</th>
                                                          <th class="text-center">Nivel-Area-Especialidad(Alt)</th>
                                                          <th class="text-center">Grado-Acreditación(Alt)</th>
                                                          <th class="text-center">Paralelo</th>
                                                          <th class="text-center">Turno</th>
                                                          <th class="text-center">Estado Matricula</th>
                                                          <th class="text-center">Inscripcion</th>
                                                          <th class="text-center">Opciones</th>
                                                        </tr>
                                                    </thead>

                                                <tbody role="alert" aria-live="polite" aria-relevant="all">
                                                  {% for data in dataInscription%}

                                                          <tr class = "success">
                                                              <td data-title="Rude">{{data.gestion_titulo}}</td> 
                                                              <td data-title="Rude">{{data.institucioneducativa_titulo}}</td>
                                                              <td data-title="Rude">{{data.institucioneducativa}}</td>
                                                              <td data-title="Nombre">{{ data.nivel|e }} </td>
                                                              <td data-title="Paterno">{{data.grado|e}}</td>
                                                              <td data-title="Materno">{{data.paralelo|e}}</td>
                                                              <td data-title="Turno">{{data.turno}} </td>
                                                              <td data-title="Est. Matricula" class="text-center">{{data.em}}</td>
                                                              <td data-title="Est. Matricula" class="text-center">{{data.emi}}</td>
                                                              <td data-title="VerNota" class="text-center">
                                                                   <a href="#" onclick="seeNotaNew('{{data.eiid}}', '{{data.eid}}', '{{data.nivel_tipo_id}}', '{{data.grado_tipo_id}}', '{{data.pid}}', '{{data.turno_tipo_id}}', '{{data.gestion_tipo_id}}', '{{data.institucioneducativa_id}}')" ><span class="glyphicon glyphicon-eye-open"></span> Ver Calificaciones</a>
                                                              </td>
                                                          </tr>
                                                  {% endfor %}
                                                      </tbody>
                                                    </table>

                                              </div>
                                            </div>
                                            <!-- /.table-responsive -->
                                        </div>
                                        <!-- /.portlet-body -->
                                    </div>
                                    <!-- /.portlet -->

                                </div>
                                <!-- /.col-lg-12 -->

                            </div>

                {%else%}

            {% endif %}
            <!-- en of the result of search history -->
        </div>
    </div>
    
    </div>
    <div class="modal modal-flex fade" id="myModalNotas" tabindex="-1" role="dialog" aria-labelledby="flexModalLabel" aria-hidden="true">
        <div class="modal-dialog higherWider">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="flexModalLabel">Calificaciones</h4>

                </div>
                <div class="modal-body">
                    <div id="idNotas"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

                </div>
            </div>

        </div>
    </div>






{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        var seeNotaNew = function (inscripcionid, idstudent, nivel, grado, paralelo, turno, gestion, sie) {

            $('#myModalNotas').modal('show');
            $.ajax({
                type: 'get',
                url: Routing.generate('note_consultation_parents_sie_nota_new', {'inscripcionid': inscripcionid,'idstudent': idstudent, 'nivel': nivel, 'grado': grado, 'paralelo': paralelo, 'turno': turno, 'gestion': gestion, 'sie': sie}),
                beforeSend: function () {
                    $("#idNotas").empty();
                    $("#idNotas").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" class="loading" /></div>');
                },
                success: function (data) {
                    $("#idNotas").empty();
                    $("#idNotas").append(data);
                },
                statusCode: {
                    500: function () {

                    },
                    404: function () {

                    }
                }
            });
        }
    </script>
{% endblock %}
