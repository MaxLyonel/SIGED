{% extends 'layoutHerramientaAlternativa.html.twig' %}

{% block contentoption%}

<!-- Start page header -->
<div class="header-content">
    <h2><i class="fa fa-table"></i> Inscripcion Excepcional<span>Sin Rude</span></h2>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">Usted esta aqui:</span>
        <ol class="breadcrumb">
                <i class="fa fa-home"></i>
                <a href="dashboard.html">Inscripcion Excepcional</a>
                <i class="fa fa-angle-right"></i>
            </li>

            <li class="active">Sin Rude</li>
        </ol>
    </div><!-- /.breadcrumb-wrapper -->
</div><!-- /.header-content -->
<!--/ End page header -->

<div class="body-content animated fadeIn">

<!-- Start mail page -->
<!--div class="container" style="margin-top:30px;"-->



<div class="row">
<div class="body-content animated fadeIn">
            <div class='row'>
              <div class='col-md-12'>
              {% for flashMessage in app.session.flashbag.get('goodinscription') %}
                  <div class="alert alert-success alert-dismissible" >
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                      <strong>Alerta!</strong> {{ flashMessage }}
                  </div>
              {% endfor %}
              </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- Start toggle switches -->
                    <div class="panel panel-success rounded shadow">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <h3 class="panel-title">   <i class="fa fa-search"></i> Inserte Datos para la Busqueda</h3>
                            </div>
                            <div class="pull-right">
                            </div>
                            <div class="clearfix"></div>
                        </div><!-- /.panel-heading -->
                        <div class="panel-sub-heading">

                        </div><!-- /.panel-sub-heading -->
                        <div class="panel-body">
                        {{form_start(form, { 'attr':{'data-toggle':'validator','role':'form'  } } )}}

                        <div class="row">
                            <div class="col-md-4">
                                {{form_label(form.pais)}}
                                {{form_widget(form.pais)}}
                                <div class="help-block without-errors"></div>
                            </div>
                            <div class="col-md-4 form-group">
                                {{form_label(form.ueprocedencia)}}
                                {{form_widget(form.ueprocedencia)}}
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="col-md-4 form-group">
                                {{form_label(form.gestion)}}
                                {{form_widget(form.gestion)}}
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-3 form-group">
                                {{form_label(form.paterno)}}
                                {{form_widget(form.paterno)}}
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.materno)}}
                                {{form_widget(form.materno)}}
                                <div class="help-block with-errors "></div>
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.nombre)}}
                                {{form_widget(form.nombre)}}
                                <div class="help-block with-errors"></div>
                            </div>

                            <div class="col-md-3">
                                {{form_label(form.fnac)}}
                                <div id="sandbox-container">
                                    {{form_widget(form.fnac )}}
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-3 form-group">
                                {{form_label(form.ci)}}
                                {{form_widget(form.ci)}}
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="col-md-2 form-group">
                                {{form_label(form.complemento)}}
                                {{form_widget(form.complemento)}}
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="col-md-3 ">
                                {{form_label(form.genero)}}
                                {{form_widget(form.genero)}}
                            </div>
                        </div>


                        </br>

                        {{form_widget(form.save, {'attr':{'class':'btn btn-success'} }) }}
                        {{form_end(form)}}

                        </div><!-- /.panel-body -->
                    </div><!-- /.panel -->
                    <!-- End toggle switches -->

                </div>
          </div>

          <div class="row">
            <div class="col-md-12">
            <div id='idinscriptionsStudent'></div>
            </div>
          </div>
        <!-- End of Website Stats Widget -->
    </div>
</div>
<!--/div-->
<!--/ End mail page -->
</div>
<!-- Start body content -->
<!--/ End body content -->
<div class="modal fade bs-example-modal-table" tabindex="-1" role="dialog" aria-hidden="true" id="modal">

</div><!-- /.modal -->
<!--/ End body content -->

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>

        $('#form_save').click(function (e) {
            if (($('#form_paterno').val().length) == 0 && $('#form_materno').val().length == 0) {
                alert('Necesita Apellido Paterno o Materno');
                return false;
            }
        });


        $('#form').validator().on('submit', function (e) {
            if (e.isDefaultPrevented()) {
                return false;
                // handle the invalid form...
            } else {
                return false;
                // everything looks good!
            }

        })


    </script>


{% endblock %}
