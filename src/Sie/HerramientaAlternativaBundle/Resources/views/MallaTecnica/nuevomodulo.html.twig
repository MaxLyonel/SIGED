                    data:formData,
                    beforeSend: function () {
                        //$("#listamodulos").empty();
                        //$("#listamodulos").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" /></div>');
                    },
                    success: function ( data ) {
                        if( data.statusCode ){
                            if( data.statusCode == 401 ){
                                Swal.fire( 'Atencion', data.message, 'info' );
                            }
                        }else{
                            Swal.fire({
                                icon: 'success',
