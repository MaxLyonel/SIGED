                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if ( result.isConfirmed ) {

                    Swal.fire({
                        title: 'Agregando...',
                        html: 'Espere un momento porfavor',
                        timerProgressBar: true,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        allowEnterKey: false,
                        didOpen: () => {
                            Swal.showLoading()
                        },
                    });

                    var formData = $('#formNivelMalla').serialize();
                    $.ajax({
                        type: 'post',
                        url: "{{ path('herramienta_add_nivel_malla') }}",
                        data:   formData,
                        beforeSend: function () {
                            
                        },
                        success: function (data) {

                            Swal.fire({
                                icon: 'success',
                                title: 'Correcto',
                                text: 'Se agrego exitosamente',
                                showConfirmButton: false,
                                timer: 1500
                            });

                            $('#listamodulos').empty();
                            $('#listamodulos').html(data);

                        },
                        complete: function () {

                        },
                        error: function(data){
                            Swal.fire("Opps", "Ocurrio un error, vuelva a intentarlo", "error");
                        }
                    });
                
                }
            })

        }

        var nuevoModulo= function (idsip,idesp,totalhoras,idacred) {
            if((idacred==1)||(idacred==20)){
                if(totalhoras<=420){
                    $.ajax({
                        type: 'post',
                        url: "{{ path('herramienta_show_modulo_nuevo') }}",
                        data: ({idsip:idsip, idesp:idesp,totalhoras:totalhoras,idacred:idacred}),

                        beforeSend: function () {
                            $('#modal').empty();
                        },
                        success: function (data) {
                            $('#modal').empty();

                            $('#modal').append(data);
                            $('#modal').modal('show');
                        },

                        statusCode: {
                            500: function () {
                            },
                            404: function () {
                            }
                        }
                    });
                }else{
                    alert('Las horas de los Modulos Ingresados no deben Exceder las 500 hrs, por lo que antes de proceder y añadir uno Nuevo, debera editar y cambiar las horas de los modulos anteriormente guardados...');
                }
            }else {
                if(totalhoras<=920){
                    $.ajax({
                        type: 'post',
                        url: "{{ path('herramienta_show_modulo_nuevo') }}",
                        data: ({idsip:idsip, idesp:idesp,totalhoras:totalhoras,idacred:idacred}),

                        beforeSend: function () {
                            $('#modal').empty();
                        },
                        success: function (data) {
                            $('#modal').empty();

                            $('#modal').append(data);
                            $('#modal').modal('show');
                        },

                        statusCode: {
                            500: function () {
                            },
                            404: function () {
                            }
                        }
                    });
                }else{
                    alert('Las horas de los Modulos Ingresados no deben Exceder las 1000 hrs, por lo que antes de proceder y añadir uno Nuevo, debera editar y cambiar las horas de los modulos anteriormente guardados...');
                }
            }

        };
    
        var checkConsolidate = function(idmodulo,idspm,modulo,horas,idesp,totalhoras,mallaModuloPeriodo,idacred,mallaModuloPeriodoId,tipo, idsip){

            Swal.fire({
                title: 'Verificando...',
                html: 'Espere un momento porfavor',
                timerProgressBar: true,
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                    Swal.showLoading()
                },
            });

            $.ajax({
                type: "get",
                url: "{{ path('herramienta_check_consolidate') }}",
                data: ({idspm:idspm}),
                success: function(res){
                    Swal.close();
                    if( res.data ){
                        if( tipo == 'edit' ){
                            editarModulo(idmodulo,idspm,modulo,horas,idesp,totalhoras,mallaModuloPeriodo,mallaModuloPeriodoId,idacred,idsip);
                        }else{
                            eliminarModuloCL(idmodulo,idspm,modulo,horas,idesp,idsip);
                        }
                    }else{
                        Swal.fire('Atención','No puede realizar esta accion porque el modulo se encuentra consolidado','info');
                    }
                }
            })
        };

        var editarModulo= function (idmodulo,idspm,modulo,horas,idesp,totalhoras,mallaModuloPeriodo,mallaModuloPeriodoId,idacred,idsip) {

            Swal.fire({
                title: 'Obteniendo información...',
                html: 'Espere un momento porfavor',
                timerProgressBar: true,
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                didOpen: () => {
                    Swal.showLoading()
                },
            });

            $.ajax({
                type: 'post',
                url: "{{ path('herramienta_show_modulo_edit') }}",
                data: ({
                    idmodulo:idmodulo,
                    idspm:idspm,
                    modulo:modulo,
                    horas:horas,
                    idesp:idesp,
                    totalhoras:totalhoras,
                    totalhoras:totalhoras,
                    periodoTecnicoMedio:mallaModuloPeriodo,
                    mallaModuloPeriodoId: mallaModuloPeriodoId,
                    idacred:idacred,
                    idsip: idsip
                }),
                beforeSend: function () {
                    $('#modal').empty();
                },
                success: function (data) {
                    Swal.close();
                    $('#modal').empty();
                    $('#modal').modal('show');
                    $('#modal').append(data);
                },

                statusCode: {
                    500: function () {
                    },
                    404: function () {
                    }
                }
            });
        };

        var eliminarModuloCL= function (idmodulo,idspm,modulo,horas,idesp,idsip) {

            Swal.fire({
                title: '¿Esta seguro?',
                text: 'Esta a punto de eliminar el modulo',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if( result.isConfirmed ){
                    
                    Swal.fire({
                        title: 'Eliminando...',
                        html: 'Espere un momento porfavor',
                        timerProgressBar: true,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        allowEnterKey: false,
                        didOpen: () => {
                            Swal.showLoading()
                        },
                    });

                    $.ajax({
                        type: 'post',
                        url: "{{ path('herramienta_show_modulo_delete') }}",
                        data: ({idmodulo:idmodulo,idspm:idspm,modulo:modulo,horas:horas,idesp:idesp}),
                        beforeSend: function () {
                            $('#modal').empty();
                        },
                        success: function (data) {

                            Swal.fire({
                                icon: 'success',
                                title: 'Correcto',
                                text: 'Se elimino exitosamente',
                                showConfirmButton: false,
                                timer: 1500
                            });

                            $("#listamodulos").empty();
                            $('#mengestionmod').empty();
                            //    $('#mengestioncurso').empty();
                            $("#listamodulos").append(data);
        //                $('#modal').modal('show');
        //                $('#modal').append(data);
                        },
                        error: function(data){
                            $('#mengestionmod').empty();
                            Swal.fire('Atención','Si desea borrar el modulo antes debe eliminar lo siguiente:  modulo asignado al curso, participantes y notas','warning');
                            //window.location.href =  Routing.generate('herramienta_per_cursos_cortos_index');
                        }
                    });
                    
                }
            });

        };

        var deleteModuleTecnico = function( smpid, sestId ){

            Swal.fire({
                title: '¿Esta seguro?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No'
            }).then((result) => {
                if ( result.isConfirmed ) {

                    Swal.fire({
                        title: 'Verificando...',
                        html: 'Espere un momento porfavor',
                        timerProgressBar: true,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        allowEnterKey: false,
                        didOpen: () => {
                            Swal.showLoading()
                        },
                    });

                    $.ajax({
                        type: 'post',
                        url: "{{ path('herramienta_delete_module_tecnico') }}",
                        data: ({ smpid: smpid, sestId: sestId }),
                        success: function (res) {

                            if( res.statusCode == 401 ){
                                Swal.fire('Atención', res.message, 'warning');
                            }else{
                                $("#listamodulos").empty();
                                $("#listamodulos").append(res);
                                
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Correcto',
                                    text: 'Se elimino exitosamente',
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            }

                            $('#mengestionmod').empty();
                        },
                        error: function(data){
                            $('#mengestionmod').empty();
                            Swal.fire('Atención','Los datos no fueron eliminados, asegurese de que el modulo no esta siendo utilizado','warning');
                        }
                    });
                }
            })


        }

    </script>

