{% extends 'layoutHerramientaAlternativa.html.twig' %}
{% block fechaReporte %}
    {% if fechaEstadisticaRegular is defined  %}
        {{ fechaEstadisticaRegular }}
    {% endif %}
{% endblock %}
{% block contentoption %}
    {% set ingresa = 0 %}
    {% set ingresaAdmin = 0 %}
    {% for item in app.session.get('roluser') %} 
        {% if item.id == 8 or item.id == 11 or item.id == 32 or item.id == 33 or item.id == 39 %} 
             {% set ingresa = 1 %}
             {% if item.id == 8 or item.id == 39 %} 
                {% set ingresaAdmin = 1 %}
             {% endif %} 
        {% endif %} 
    {% endfor %} 
    <!-- Start page header -->
    <div id="tour-6" class="header-content">
        <h2><i class="fa fa-th-large"></i>Unidad Educativa<span>Subsistema de Educaci칩n Regular</span></h2>
        <div" class="breadcrumb-wrapper hidden-xs">
            <!--<span class="label">Info.:</span>-->
            <ol class="breadcrumb">
                <li class="active">Gesti칩n: {{gestion}}</li>
                <!--<li><i class="fa fa-ellipsis-v" aria-hidden="true"></i></li>-->
            </ol>
        </div>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">
        {% if infoEntidad is defined  %}
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <!-- Start widget newsletter -->
                    <div class="panel text-center rounded shadow">
                        <div class="panel-body bg-lilac rounded">
                            <!--<div class="inner-all">-->
                                <h5 class="text-uc"><b>{{infoEntidad.nombre}}</b></h5>
                            <!--</div>-->
                        </div><!-- /.panel-body -->
                    </div><!-- /.panel -->
                    <!--/ End widget newsletter -->
                </div>
            </div><!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="page-content">
                        {% for type, flashMessage in app.session.flashbag.all() %}
                            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                {% if flashMessage.title is defined %}
                                <strong><i class='fa fa-envelope'></i> {{ flashMessage.title }}: </strong>
                                    {{ flashMessage.message }}
                                {% else %}
                                    {{ type }}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>        
            </div>
        {% endif %}
        <div class="row">
            {% if infoSubEntidad is defined %}
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="panel">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <h3 class="panel-title"><i class='fa fa-cloud-download' aria-hidden="true"></i></h3>
                            </div>  
                            <div class="pull-right">
                            {% if 1 == 2 %}
                                {% if ingresaAdmin == 1 %}
                                    <button id="tour-13" onclick="document.forms['formEstadisticaRegularPdfTemp'].submit();" title="Descargar en formato PDF" class="btn btn-primary">
                                        <i class="fa fa-file-pdf-o"></i>
                                    </button>
                                {% endif %} 
                                <button id="tour-13" onclick="document.forms['formEstadisticaRegularPdf'].submit();" title="Descargar en formato PDF" class="btn btn-googleplus">
                                    <i class="fa fa-file-pdf-o"></i>
                                </button>
                                <button id="tour-14" onclick="document.forms['formEstadisticaRegularXls'].submit();" title="Descargar en formato EXCEL" class="btn btn-success">
                                    <i class="fa fa-file-excel-o"></i>
                                </button>
                            {% endif %}
                            <button id="tour-14" onclick="document.forms['formEstadisticaRegularInstitucionEducativaListaXls'].submit();" title="Descargar Instituciones Educativas en formato EXCEL" class="btn btn-lilac">
                                <i class="fa fa-file-excel-o"></i>
                            </button>
                            
                            </div>     
                            <div class="clearfix"></div>
                        </div>
                    </div>                    
                    <div id="tour-8" class="panel shadow">
                        <div class="panel-heading">
                            <div id="tour-12" class="pull-left">
                                <h3 class="panel-title"><i class='fa fa-tasks'></i> Unidades Educativas {% if infoSubEntidad is defined and link %}por {{infoSubEntidad[0]['nombrearea']}}{%endif%}</h3>
                            </div>   
                            <div class="pull-right"> 
                            </div>                          
                            <div class="clearfix"></div>
                        </div><!-- /.panel-heading -->
                        <div id="tour-15" style="display: block; min-height: 500px;" class="panel-body"> 
                            {% if infoEstadistica is defined %}
                                <span class="text-primary pull-right"><b>{{(infoEstadistica['cant_total'])|number_format(0, ',', '.')}}</b></span><span class="text-primary"><b>Total</b></span>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div><!-- /.progress -->   
                            {% endif %}       
                            {% set contadorColor = 0 %}      
                            {% for data in infoSubEntidad%}
                                {% set cantidad = data.cantidad %}  
                                {% set total = infoEstadistica['cant_total'] %} 
                                {% set porcentaje = (cantidad*100)/(total)%} 
                                {% set id = data.codigo %}
                                {% set nombre = data.nombre %} 
                                {% set rol = data.rolusuario %}  
                                {% if link %}                               
                                    <form name="form" role="form" action="{{ path('reporte_regular_informacion_general_unidad_educativa') }}" method="POST"> 
                                        <input type="hidden" name="codigo" value="{{id}}" />
                                        <input type="hidden" name="rol" value="{{rol}}" />
                                        <button type="submit" id="submit{{id}}" style="display:none;"></button>
                                        <a href="javascript:;" class="text-inverse" style="text-decoration:none;" onclick="$('#submit{{id}}').click();">
                                             <span class="pull-right" style="width:50px; text-align:right"><b>{{cantidad|number_format(0, ',', '.')}}</b></span><span class="">{{nombre}}</span>
                                        </a>    
                                        <div class="progress progress-xs">
                                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{porcentaje}}" aria-valuemin="0" aria-valuemax="100" style="width: {{porcentaje}}%">
                                                    
                                                </div>
                                            </div><!-- /.progress -->
                                    </form>
                                {% else %} 
                                    <a class="text-inverse" style="text-decoration:none;">
                                        <span class="pull-right" style="width:50px; text-align:right"><b></b></span><span class="">{{nombre}}</span>
                                    </a>    
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{porcentaje}}" aria-valuemin="0" aria-valuemax="100" style="width: {{porcentaje}}%">
                                            
                                        </div>
                                    </div><!-- /.progress -->
                                {% endif %}
                            {% endfor %}
                        </div><!-- /.panel-body -->
                        <div class="panel-footer">
                        </div>
                    </div>
                </div>  

                <form name="formEstadisticaRegularInstitucionEducativaListaXls" id="formEstadisticaRegularXls" role="form" action="{{ path('reporte_regular_informacion_general_unidad_educativa_lista_print_xls') }}" method="POST">  
                    <input type="hidden" name="gestion" value="{{ gestion }}" />
                    <input type="hidden" name="codigo" value="{{ infoEntidad.id }}" />  
                    <input type="hidden" name="rol" value="{{ infoEntidad.rolactual  }}" />   
                </form>   


                <form name="formEstadisticaRegularPdf" id="formEstadisticaRegularPdf" role="form" action="{{ path('reporte_regular_informacion_general_print_pdf') }}" method="POST">  
                    <input type="hidden" name="gestion" value="{{ gestion }}" />
                    <input type="hidden" name="codigo" value="{{ infoEntidad.id }}" />  
                    <input type="hidden" name="rol" value="{{ infoEntidad.rolactual  }}" />     
                </form> 
                {% if ingresaAdmin == 1 %} 
                    <form name="formEstadisticaRegularPdfTemp" id="formEstadisticaRegularPdfTemp" role="form" action="{{ path('reporte_regular_informacion_general_print_pdf_temp') }}" method="POST">  
                        <input type="hidden" name="gestion" value="{{ gestion }}" />
                        <input type="hidden" name="codigo" value="{{ infoEntidad.id }}" />  
                        <input type="hidden" name="rol" value="{{ infoEntidad.rolactual  }}" />     
                    </form>                     
                {% endif %}                    
            {% endif %}
            
            <div id="tour-7" class="col-lg-8 col-md-8 col-sm-12 col-xs-12">     
                <div class="row">                                       
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-default shadow">
                            <!--<div class="panel-heading">
                                <div class="pull-left">
                                    <h3 class="panel-title"><i class='fa fa-sort-amount-asc'></i> Unidades Educativas- Nivel de Estudio</h3>
                                </div>
                                <div class="pull-right">
                                    <button title="" data-original-title="" class="btn btn-sm" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse">
                                        <i class="fa fa-angle-up"></i>
                                    </button>
                                    <button type="button" class="btn btn-inverse" onclick="seeGraphic(2,{{infoEntidad.id}},{{infoEntidad.rolactual}});">
                                        <i class='fa fa-circle-o'></i>
                                    </button>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            -->
                            <div class="panel-body">
                                <!-- Start project overview -->
                                <div class="row">         

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div id="chartContainerInstitucionNivel" style="height:300px;"> </div> 
                                    </div>   
                                    
                                </div>                            
                            </div><!-- /.panel-body -->
                        </div>
                    </div>
                </div>
                <div class="row">                   
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-default shadow">
                            <!--
                            <div class="panel-heading">
                                <div class="pull-left">
                                    <h3 class="panel-title"><i class='fa fa-map'></i> Unidades Educativas - Dependencia</h3>
                                </div>
                                <div class="pull-right">
                                    <button title="" data-original-title="" class="btn btn-sm" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse">
                                        <i class="fa fa-angle-up"></i>
                                    </button>
                                    <button type="button" class="btn btn-inverse" onclick="seeGraphic(5,{{infoEntidad.id}},{{infoEntidad.rolactual}});">
                                        <i class='fa fa-bar-chart'></i>
                                    </button>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            -->
                            <div class="panel-body">
                                <!-- Start project overview -->
                                <div class="row">    
                                    <div id="chartContainerInstitucionDependencia" style="height: 300px;"> </div> 
                                </div>
                            </div><!-- /.panel-body -->
                        </div>
                    </div>
                </div> 
            </div>        
        </div>
        <div class="row">
            <div class="alert alert-info">
                <span class="alert-icon"><i class="fa fa-info"></i></span>
                <div class="notification-info">
                    <ul class="clearfix notification-meta">
                        
                        <li class="pull-left notification-sender"><span><a>Nivel educativo: </a></span> Se refiere a la estructura del subsistema de educaci칩n regular, que comprende a los niveles: i) Inicial en familia comunitaria; ii) Primaria comunitaria vocacional; y, iii) Secundaria comunitaria productiva. </li>
                        <li class="pull-right notification-time"></li>
                        
                        <li class="pull-left notification-sender"><span><a>Unidad Educativa Fiscal o Estatal: </a></span> Instituciones financiadas y administradas por el Estado. Por tanto, son gratuitas. </li>
                        <li class="pull-right notification-time"></li>
                        
                        <li class="pull-left notification-sender"><span><a>Unidad Educativa de Convenio: </a></span> Instituciones financiadas por privados y el Estado, pero administradas por privados. Por lo tanto, no son necesariamente gratuitas. </li>
                        <li class="pull-right notification-time"></li>
                        
                        <li class="pull-left notification-sender"><span><a>Unidad Educativa Privada: </a></span> Instituciones financiadas y administradas por privados. Por tanto, no son de car치cter gratuito.&emsp; </li>
                        <li class="pull-right notification-time"></li>
                        
                    </ul>
                </div>
            </div> 
        </div>
    </div>
    <!--/ END ADDITIONAL ELEMENT -->
    <script>
        $(document).ready(function() {

            Highcharts.setOptions({
                lang: {
                    decimalPoint: ',',
                    thousandsSep: '.'
                }
            });

            
            {% autoescape %}
                {% if mensaje is defined %}
                    {{ mensaje|raw }}   
                {% endif %} 
            {% endautoescape %}            

            {% autoescape %}
                {{ datoGraficoNivel|raw }}
            {% endautoescape %}

            {% autoescape %}
                {{ datoGraficoDependencia|raw }}
            {% endautoescape %}


            $(function () {
                chartContainerInstitucionNivelLoad();                 
                chartContainerInstitucionDependenciaLoad(); 
            });  

            function seeGraphic (infoTipo,infoCodigo,infoRol) {
                $("#modal-page").modal(
                    {
                        show: true,
                        backdrop: 'static',
                        keyboard: false
                    }
                ); 
                if(infoTipo == 2){
                    $("#modal-page-header").empty().append("<i class='fa fa-circle-o'></i>");    
                    chartContainerInstitucionNivelLoad(); 
                }
                if(infoTipo == 5){
                    $("#modal-page-header").empty().append("<i class='fa fa-bar-chart'></i>");  
                    chartContainerInstitucionDependenciaLoad(); 
                }
                
            };

        });
    </script>
{% endblock %}


