                            {% endif %}
                        </ul>
                    </div>
                    
                </div>
                {% if app.session.get('ie_id') != -1 %}
                <div class="col-xs-12 col-sm-9 col-md-9">
                    <a href="{{path('herramienta_ceducativa_seleccionar_cea')}}" class="btn btn-success" ><i class="fa fa-history"></i> <span>Gestionar C.E.A.</span></a>
                    <a href="{{path('herramienta_alter_galeria_fotos_centro')}}" class="btn btn-lilac" ><i class="fa fa-fw fa-photo"></i> <span>Galeria de Fotos</span></a>
                    <a href="{{path('herramienta_alter_galeria_fotos_centro_editar_foto')}}" class="btn btn-warning" ><i class="fa fa-pencil"></i> <span>Editar Fotos</span></a>
                </div>
                <img data-no-retina height="50" width="150" src="/uploads/institutoseducativos/{{app.session.get('ie_id')}}_Fondo" class="img-responsive full-width" alt="                ">
                {% endif %}
