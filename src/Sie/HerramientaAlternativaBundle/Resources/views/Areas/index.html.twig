<style>
    .arrow-before {
        width:0px;
        height:0px;
        border-left: 6px solid transparent;  /* izquierda flecha */
        border-right: 6px solid transparent; /* derecha flecha */
        border-bottom: 6px solid #906094; /* base flecha y color*/
        font-size:0px;
        line-height:0px;
        top: 6px;
        left: 3px;
        position: relative;
    }
    .arrow-after {
        width:0px;
        height:0px;
        border-left: 6px solid transparent;  /* izquierda flecha */
        border-right: 6px solid transparent; /* derecha flecha */
        border-bottom: 6px solid #906094; /* base flecha y color*/
        font-size:0px;
        line-height:0px;
        top: 1px;
        left: 3px;
        position: relative;
    }
    #popover-head{
        width: 300px;
        background-color: #6E89FF;
    }
</style>
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="pull-left">
                    <h3 class="panel-title">Adición y Eliminación de Áreas / Asignación de Maestros</h3>
                </div>
                <div class="pull-right">
                    <button class="btn btn-sm" data-action="collapse" data-toggle="tooltip" data-placement="top" data-title="Collapse"><i class="fa fa-angle-up"></i></button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <div class="alert alert-info">
                    <span class="alert-icon"><i class="glyphicon glyphicon-list-alt"></i></span>
                    <div class="notification-info">
                        <ul class="clearfix notification-meta">
                            <li class="pull-left notification-sender"><span><a href="javascript:void()">{{nivelCurso}}</a></span></li>
                            <li class="pull-right notification-time">
                                
                            </li>
                        </ul>
                        <p>{{gradoParaleloCurso}}</p>
                    </div>
                </div>
                    {% if (app.session.get('ie_per_estado') == '3') or (app.session.get('ie_per_estado') == '1') or (app.session.get('ie_per_estado') == '2') %}
                        {% if primaria %}
                            <button type="button" class="btn btn-default" style="float:right" onclick="newEmergente('{{infoUe}}')">
                                Agregar M.I.E.
                            </button>
                        {% endif %}
                        <div class="btn-group" style="width:650px; float:right;">

                            <button type="button" class="btn btn-wordpress dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="float:right">
                                Agregar Área <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right animated flipInX" role="menu">
                                {% if asignaturas|length > 0 %}
                                    {% for a in asignaturas %}                                    
                                        <li><button onclick="newArea({{a.smpId}},'{{infoUe}}')" class="btn-link">{% if a.esvigente == true %}<span class="text-primary"> - {{a.modulo}} (nuevo)</span>{% else %}{{a.codigo}} - {{a.modulo}}{% endif %}</button></li>
                                    {% endfor %}
                                {% else %}
                                    <li style="margin:5px;"><span class="text-warning">No hay asignaturas disponibles</span></li>
                                {% endif %}
                            </ul>
                        </div>
                    {% endif %}    
                    <br>
                <h4>Áreas actuales del curso</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="text-center border-right">No.</th>
                                <th>Código</th>
                                <th>Área</th>
                                <th>Maestro(s)</th>
                                {% if (app.session.get('ie_per_estado') == '3') or (app.session.get('ie_per_estado') == '1') or (app.session.get('ie_per_estado') == '2')%}
                                    <th class="text-center">Eliminar</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% if tieneCursoOferta is defined %}
                                {% if tieneCursoOferta == false %}
                                    <tr id="mallaDiv">
                                        <td colspan="5">
                                            <div class="col-md-12 alert alert-warning">
                                                El curso no tiene módulos asignados, seleccione la malla (Nueva o antigua)
                                            </div>
                                            <div class="col-md-12 text-center">
                                                <form id="mallaForm" name="mallaForm">
                                                    <div class="col-md-2 col-md-offset-3">
                                                        Nueva <input type="radio" id="mallaNueva" name="malla" value="1" {% if (mallaActual == 1) %}checked{% endif %} />
                                                    </div>
                                                    <div class="col-md-2">
                                                        Antigua <input type="radio" id="mallaAntigua" name="malla" value="0" {% if (mallaActual == 0 or mallaActual == null) %}checked{% endif %} />
                                                    </div>
                                                    <div class="col-md-2">
                                                        <button type="button" onclick="guardarMalla('{{infoUe}}')" class="btn btn-success">Guardar Cambios</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endif %}
                            {% for co in cursoOferta %}
                                <tr>
                                    <td class="text-center border-right">{{loop.index}}</td>
                                    <td>{{co.codigo}}</td>
                                    <td>
                                        <span id="modulo_{{co.smpid}}" {% if co.esvigente == true %}class="text-strong text-primary"{% endif %}>
                                            {{co.modulo}} {% if co.esvigente == true %}(nuevo){% endif %}
                                        </span>
                                        {% if co.codigo == '415' %}
                                            <button class="btn" onclick="addpopEmergente({{co.smpid}})"><i class="fa fa-edit text-lilac"></i></button>
                                            <div class="arrow-before" style="display:none; margin-left:10px;" id="emergente_before_{{co.smpid}}"></div><div class="arrow-after" style="display:none;margin-left:10px;" id="emergente_after_{{co.smpid}}"></div>
                                            <div id="emergente_{{co.smpid}}" style="display:none; position:absolute; z-index:5; width:500px; margin-left:-350px; border:2px solid #906094; box-shadow: 7px 7px 4px #929292;" class="divEmergente">
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <button class="btn" onclick="addpop('{{co.iecoid}}', '{{ infoUe }}')"><i class="fa fa-users text-lilac"></i></button>
                                        <div class="arrow-before" style="display:none; margin-left:10px;" id=""></div><div class="arrow-after" style="display:none;margin-left:10px;" id=""></div>
                                        <div id="{{co.iecoid}}" style="display:none; position:absolute; z-index:5; width:500px; margin-left:-250px; border:2px solid #906094; box-shadow: 7px 7px 4px #929292;" class="divMaestros">
                                        </div>
                                    </td>
                                    {% if (app.session.get('ie_per_estado') == '3') or (app.session.get('ie_per_estado') == '1') or (app.session.get('ie_per_estado') == '2')%}
                                        <td class="text-center">
                                            {% if (primaria == true and co.codigo == '408') or primaria == false %}
                                                <button onclick="deleteArea({{co.iecoid}},'{{infoUe}}',new String('{{co.modulo}}'),{{co.smpid}})" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Delete"><i class="fa fa-times"></i></button>
                                            {% endif %}
                                        </td> 
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div id="mensajeModal">
                    {% if mensaje is defined %}<div style='text-align:center; color:#5C9FFB'>{{mensaje}}</div>{% endif %}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            {#<button type="button" class="btn btn-theme" data-dismiss="modal">Guardar Cambios</button>#}
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<script>
    var newArea = function(ida, infoUe){
    
        if(confirm('¿Realmente desea adicionar el área?\nPresione aceptar para confirmar.')){
            $.ajax({
                type: 'post',
                data: ({ida:ida, infoUe: infoUe}),
                url: "{{ path('herramienta_alter_areas_add') }}",
                beforeSend: function () {
                    $('#mensajeModal').empty();
                    $('#mensajeModal').append("<div style='text-align:center; color:#5C9FFB'>Agregando área... <img src='{{asset('img/loading-sm.gif')}}'></div>");
                },
                success: function (data) {
                    $('#mensajeModal').empty();
                    $('#modal').empty();
                    $('#modal').append(data);
                },
                statusCode: {
                    500: function () {
                        $('#mensajeModal').empty();
                        $('#mensajeModal').append("<div class='alert alert-danger'>Ocurrió un error al agregar el área.</div>");
                    },
                    404: function () {

                    }
                }
            });
        }
    };

    var guardarMalla = function(infoUe){
        if(confirm('¿Está segura/o de cambiar el tipo de malla para este curso?\nPresione aceptar para confirmar.')){
            mallaId = $('input:radio[name=malla]:checked').val();
            $.ajax({
                type: 'post',
                data: ({infoUe: infoUe, mallaId: mallaId}),
                url: "{{ path('herramienta_alter_curso_malla') }}",
                beforeSend: function () {
                    $('#mensajeModal').empty();
                    $('#mensajeModal').append("<div style='text-align:center; color:#5C9FFB'>Asignando malla... <img src='{{asset('img/loading-sm.gif')}}'></div>");
                },
                success: function (data) {
                    $('#mensajeModal').empty();
                    $('#modal').empty();
                    $('#mallaDiv').empty();
                    $('#modal').append(data);
                },
                statusCode: {
                    500: function (data) {
                        $('#mensajeModal').empty();
                        $('#mensajeModal').append("<div style='text-align:center; color:#5C9FFB'>"+data.mensaje+"</div>");
                    },
                },
                error: function(error) {
                    $('#mensajeModal').empty();
                    $('#mensajeModal').append("<div class='alert alert-danger'>Ocurrió un error al agregar la malla.</div>");
                },
            });
        }
    };

    var newEmergente = function(infoUe) {
        if(confirm('¿Realmente desea adicionar el área emergente?\nPresione aceptar para confirmar.')){
            $.ajax({
                type: 'post',
                data: ({infoUe: infoUe}),
                url: "{{ path('herramienta_alter_area_emergente_add') }}",
                beforeSend: function () {
                    $('#mensajeModal').empty();
                    $('#mensajeModal').append("<div style='text-align:center; color:#5C9FFB'>Agregando área... <img src='{{asset('img/loading-sm.gif')}}'></div>");
                },
                success: function (data) {
                    $('#mensajeModal').empty();
                    $('#modal').empty();
                    $('#modal').append(data);
                },
                statusCode: {
                    500: function () {
                        $('#mensajeModal').empty();
                        $('#mensajeModal').append("<div class='alert alert-danger'>Ocurrió un error al agregar el área.</div>");
                    },
                    404: function () {

                    }
                }
            });
        }
    };

    var deleteArea = function(idco, infoUe, asignatura, smpId){
        if(confirm('¿Está segura(o) de eliminar el área de '+ asignatura +'?\nTenga en cuenta que también se eliminarán las calificaciones de los estudiantes.')){
            $.ajax({
                type: 'post',
                data: ({idco:idco, infoUe: infoUe, smpId: smpId}),
                url: "{{ path('herramienta_alter_areas_delete') }}",
                beforeSend: function () {
                    $('#mensajeModal').empty();
                    $('#mensajeModal').append("<div style='text-align:center; color:#FB3A6D'>Eliminando área... <img src='{{asset('img/loading-sm.gif')}}'></div>");
                },
                success: function (data) {
                    $('#mensajeModal').empty();
                    $('#modal').empty();
                    $('#modal').append(data);
                },
                statusCode: {
                    500: function () {  
                        $('#mensajeModal').empty();
                        $('#mensajeModal').append("<div class='alert alert-danger'>Ocurrió un error al eliminar el área.</div>");
                        //setTimeout("$('#mensajeModal').empty()",5000);
                    },
                    404: function () {

                    }
                }
            });
        }
    };

    var addpop = function(idco){
        if ($('#'+idco).is(':hidden')){
            $.ajax({
                type: 'post',
                data: ({idco: idco}),
                url: "{{ path('herramienta_alter_areas_maestros') }}",
                beforeSend: function () {
                    $('.divMaestros').hide();
                    $('.arrow-before').hide();
                    $('.arrow-after').hide();
                    $("#"+idco).empty();
                    $('#before'+idco).fadeIn();
                    $('#after'+idco).fadeIn();
                    $('#'+idco).fadeIn();
                    $('#'+idco).append("<div style='background:#906094; text-align:center; color:#FFFFFF'><div style='padding:10px 0px 10px 0px;'>Cargando maestros<br><img src='{{asset('img/loading-sm.gif')}}' style='margin-top:10px'></div></div>");
                },
                success: function (data) {
                    $("#"+idco).empty();
                    $("#"+idco).append(data);
                    $('.chosen-select').chosen({allow_single_deselect: false});
                    $('#'+idco).fadeIn();
                },
                statusCode: {
                    500: function () {

                    },
                    404: function () {

                    }
                }
            });
        }else{
            $('#'+idco).fadeOut();
            $('#before'+idco).fadeOut();
            $('#after'+idco).fadeOut();
        }
    };

    var cerrarMaestros = function(idco){
        $('#'+idco).fadeOut();
        $('#before'+idco).fadeOut();
        $('#after'+idco).fadeOut();
    };

    var asignarMaestro = function(){
        var formData = $('#formMaestros').serialize();
        $.ajax({
            type: 'post',
            data: formData,
            url: "{{ path('herramienta_alter_infoEstudianteAreas_maestros_asignar') }}",
            beforeSend: function () {

            },
            success: function (data) {
                var idco = data.ieco;
                $('#'+idco).empty();
                $('#'+idco).append("<div style='background:#906094; color:#FFFFFF; padding:5px; text-align:center;'>Cambios guardados</div>");
                setTimeout("cerrarMaestros('"+idco+"')",2000)
                
            },
            statusCode: {
                500: function () {

                },
                404: function () {

                }
            }
        });
    };

    var validarNumero = function(e){
        var key = e || window.event;
        var k = key.charCode || key.keyCode;
        if ((k < 48 || k > 57) //NUmeros
            && (k != 13) //ENTER
            && (k != 8) //retroceso
            && (k != 9) //tab
        )            
        return false;
    };

    var addpopEmergente = function(smpid){
        if ($('#emergente_'+smpid).is(':hidden')){
            $.ajax({
                type: 'post',
                data: ({smpid: smpid}),
                url: "{{ path('herramienta_alter_areas_emergente') }}",
                beforeSend: function () {
                    $('.divEmergente').hide();
                    $('.arrow-before').hide();
                    $('.arrow-after').hide();
                    $("#emergente_"+smpid).empty();
                    $('#emergente_before_'+smpid).fadeIn();
                    $('#emergente_after_'+smpid).fadeIn();
                    $('#emergente_'+smpid).fadeIn();
                    $('#emergente_'+smpid).append("<div style='background:#906094; text-align:center; color:#FFFFFF'><div style='padding:10px 0px 10px 0px;'>Cargando materia emergente...<br><img src='{{asset('img/loading-sm.gif')}}' style='margin-top:10px'></div></div>");
                },
                success: function (data) {
                    $("#emergente_"+smpid).empty();
                    $("#emergente_"+smpid).append(data);
                    $('.chosen-select').chosen({allow_single_deselect: false});
                    $('#emergente_'+smpid).fadeIn();
                },
                statusCode: {
                    500: function () {

                    },
                    404: function () {

                    }
                }
            });
        }else{
            $('#emergente_'+smpid).fadeOut();
            $('#emergente_before_'+smpid).fadeOut();
            $('#emergente_after_'+smpid).fadeOut();
        }
    };

    var asignarEmergente = function(){
        var formData = $('#formEmergente').serialize();
        $.ajax({
            type: 'post',
            data: formData,
            url: "{{ path('herramienta_alter_infoEstudianteAreas_emergente_asignar') }}",
            beforeSend: function () {

            },
            success: function (data) {
                var smpid = data.smpid;
                $('#emergente_'+smpid).empty();
                $('#modulo_'+smpid).empty();
                $('#emergente_'+smpid).append("<div style='background:#906094; color:#FFFFFF; padding:5px; text-align:center;'>Cambios guardados</div>");
                setTimeout("cerrarEmergente('"+smpid+"')",2000)
                $('#modulo_'+smpid).append(data.emergente);
            },
            error: {
            },
        });
    };

    var cerrarEmergente = function(smpid){
        $('#emergente_'+smpid).fadeOut();
        $('#emergente_before_'+smpid).fadeOut();
        $('#emergente_after_'+smpid).fadeOut();
    };
</script>