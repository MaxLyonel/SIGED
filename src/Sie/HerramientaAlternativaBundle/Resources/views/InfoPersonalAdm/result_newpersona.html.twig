{% extends 'layoutHerramientaAlternativa.html.twig' %}

{% block contentoption %}
    <div class="header-content">
        <h2><i class="fa fa-user-secret"></i> Datos del personal administrativo <span> Datos personales, cargo, financiamiento, idiomas.</span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                    <li>
                        <i class="glyphicon glyphicon-leaf"></i>
                            <a href="{{path('principal_web')}}">Bienvenida</a>
                        <i class="fa fa-angle-right"></i>
                    </li>                    
                    <li>
                        <i class="fa fa-th-large"></i>
                            <a href="{{path('herramienta_ceducativa_menu_principal')}}">Menu Principal</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <i class="fa fa-user-secret-secret"></i>
                            <a href="{{path('herramientalt_info_personal_adm_index')}}">Personal administrativo</a>
                        <i class="fa fa-angle-right"></i>
                    <li>    
                    <li>
                        <i class="fa fa-user-secret"></i>
                            Resultado de la búsqueda
                        <i class="fa fa-angle-right"></i>
                    </li>                
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div>
    <!--/ End page header -->
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel rounded shadow panel-teal">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Personas</h3>
                        </div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                            {% if persona is not empty %}
                                <div id="no-more-tables">
                                    <table class="table table-striped table-primary">
                                        <thead>
                                            <tr>
                                                <th>Carnet de Identidad</th>
                                                <th>Complemento</th>
                                                <th>Paterno</th>
                                                <th>Materno</th>
                                                <th>Nombre(s)</th>
                                                <th>Fecha Nac.</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><span class="label label-success">Nuevo</span> {{ persona.carnet }}</td>
                                                <td>{{ persona.complemento }}</td>
                                                <td>{{ persona.paterno }}</td>
                                                <td>{{ persona.materno }}</td>
                                                <td>{{ persona.nombre }}</td>
                                                <td>{{ persona.fechaNacimiento|date('d-m-Y') }}</td>
                                                <td>
                                                    <form action="{{path('herramientalt_info_personal_adm_new')}}" method="post" style="display:inline-block">
                                                        <input type="hidden"  name="form[idPersona]" id="form_idPersona" value="{{persona.id}}">
                                                        <input type="hidden" name="form[idInstitucion]" id="form_idInstitucion"  value="{{institucion.id}}">
                                                        <input type="hidden" name="form[gestion]" id="form_gestion" value="{{gestion}}">
                                                        <button type="submit" class="btn-link"><i class="fa fa-edit text-warning"></i> Registrar</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-danger" role="alert" id="alerta1">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    Debe registrar a la persona (la información será validada por SEGIP).
                                </div>
                            {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}