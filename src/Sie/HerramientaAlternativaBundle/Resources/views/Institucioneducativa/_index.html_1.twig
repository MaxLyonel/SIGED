                                                            <div class="col-md-12">
                                                                <strong>C.I. Directora ó Director Encargada/o</strong>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <input value="{{ director.carnet }}" class="form-control" readonly="readonly" type="text">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <strong>{{ form_label(form.telefono2) }}</strong>
                                                            </div>
                                                        </div>
