                                                        <div class="col-md-6">
                                                            {{form_widget(form.email) }}
                                                        </div>
                                                        <div class="col-md-3">
                                                            {{form_widget(form.telefono1) }}
                                                        </div>
                                                        <div class="col-md-3">
                                                            {{form_widget(form.casilla) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div><!-- /.panel-body -->
                                    </div><!-- /.panel -->
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
