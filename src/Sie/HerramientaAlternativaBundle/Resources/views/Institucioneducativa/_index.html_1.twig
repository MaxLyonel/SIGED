                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="panel-collapse collapse in" id="panel{{turno}}">
                                                        <div class="panel-body">
                                                            <div id="no-more-tables">
                                                                <table class="table table bordered cf dataTable">
                                                                    <thead class="cf">
                                                                        <tr>

                                                                            <th>Nivel</th>
                                                                            <th>Grado</th>
                                                                            <th>Paralelo</th>
                                                                            <th>Turno</th>
                                                                            <th>Acciones</th>
                                                                        </tr>
                                                                    </thead>
