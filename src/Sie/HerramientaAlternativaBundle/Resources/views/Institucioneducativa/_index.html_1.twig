                                                            <input value="{{ ubicacion['codigo_seccion'] }}" class="form-control" readonly="readonly" type="text">
                                                        </div>
                                                        <div class="col-md-7">
                                                            <input value="{{ ubicacion['seccion'] }}" class="form-control" readonly="readonly" type="text">
                                                        </div>
                                                    </div>
