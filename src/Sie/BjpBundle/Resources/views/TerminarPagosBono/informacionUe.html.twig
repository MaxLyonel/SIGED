{% block javascripts %}    
    <script>
    function cambiarestado(id){
        var formData = $('#myModalNotas').serialize();
        $.ajax({
            type: 'get',
            url: Routing.generate('sie_bono_cambiar_estado', {'id': id}),
            data: formData,
            beforeSend: function () {

            },
            success: function (data) { 
                $("#divCambioEstadoButton").empty();
                $("#divAlertUser").empty();
                $("#divAlertUser").html('<div class="alert alert-success" role="alert">' + data.mensaje + '</div>');
            },
            error: function(){

            }
        });
    } 
    </script>    
