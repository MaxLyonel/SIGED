                                                               <td>
                                                                   {{form_widget(formCursoForm.buscar)}} <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">Cerrar</button>
                                                               </td>
                                                           </tr>


                                                       </tbody>
                                                     </table>

