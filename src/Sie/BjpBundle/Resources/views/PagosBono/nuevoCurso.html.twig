                                                <table class="table">
                                                       <tbody>
                                                           <tr>
                                                               <td>Rude</td>
                                                               <td colspan="3">{{form_widget(formCursoForm.rude)}}</td>
                                                           </tr>
                                                           <tr>
                                                               <td>Paterno</td>
                                                               <td>{{form_widget(formCursoForm.paterno)}}</td>
                                                               <td>Materno</td>
                                                               <td>{{form_widget(formCursoForm.materno)}}</td>                                                               
                                                           </tr>
                                                           <tr>                                                               
                                                               <td>Nombre</td>
                                                               <td>{{form_widget(formCursoForm.nombre)}}</td>
                                                               <td>Fecha Nacimiento<br/>(dd-mm-aaaa)</td>
                                                               <td>{{form_widget(formCursoForm.fnac)}}</td>
                                                           </tr>
                                                           <tr>
                                                               <td>Genero</td>
                                                               <td>{{form_widget(formCursoForm.generoTipo)}}</td>
                                                               <td>Observación</td>
                                                               <td>{{form_widget(formCursoForm.observacion)}}</td>                                                               
                                                           </tr>
