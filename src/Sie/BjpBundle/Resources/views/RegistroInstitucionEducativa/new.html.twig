                                                <div class="form-group col-lg-12 col-md-6">
                                                    {{form_label(form.areaEspecialTipo)}}
                                                    <ul>
                                                        {% for r in form.areaEspecialTipo %}
                                                            <div>
                                                                {{ form_widget(r) }}
                                                                {{ form_label(r) }}
                                                            </div>
                                                        {% endfor %}    
                                                    </ul>

                                                    <div class="help-block with-errors"></div>
                                                </div>
                                                <div class="form-group col-lg-12 col-md-6">
                                                    {{form_label(form.nivelTipo)}}
                                                    <ul>
                                                        {% for r in form.nivelTipo %}
                                                            <div>
                                                                {{ form_widget(r) }}
                                                                {{ form_label(r) }}
                                                            </div>
                                                        {% endfor %}    
                                                    </ul>
                                                    <div class="help-block with-errors"></div>
                                                </div>

                                            {% elseif app.session.get('institucioneducativaTipoId') == 1 or app.session.get('institucioneducativaTipoId') == 2  %}
                                                <div class="form-group col-lg-12 col-md-6">
                                                    {{form_label(form.nivelTipo)}}
                                                    <ul>
                                                        {% for r in form.nivelTipo %}
                                                            <div>
                                                                {{ form_widget(r) }}
                                                                {{ form_label(r) }}
                                                            </div>
                                                        {% endfor %}    
                                                    </ul>
                                                    <div class="help-block with-errors"></div>
                                                </div>
                                            {% endif %}

                                        </div>


                                    </fieldset>


                                </div>
                            </div>


                            <hr>
                            <div class="form-group">
                                <div class="col-lg-12 text-center">
                                    {{ form_widget(form.guardar ) }}
                                    <a href="{{path('bjp_rue')}}" class="btn btn-default">Cancelar</a>
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
