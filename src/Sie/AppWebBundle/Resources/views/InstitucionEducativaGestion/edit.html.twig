{% extends app.session.get('layout') %}
{% block contentoption %}
    <style>
        .loading{
            background-image: url("{{asset('img/loading.gif')}}}");
        }
    </style>
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Información {{ app.session.get('tituloTipo') }}
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i> <a href="{{path('institucioneducativagestion',{'op':'search'})}}">Buscar</a></li>
                    <li><i class="fa fa-home"></i>  <a href="{{path('institucioneducativagestion')}}"> {{ app.session.get('tituloTipo') }}</a>
                    </li>
                    <li>Editar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('noSearch') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Datos {{ app.session.get('tituloTipo') }}</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form'} } )}}
                            <div class="panel-body">
                                <fieldset><legend>Datos</legend>
                                    <div class="row">
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.codigo)}}
                                            {{form_widget(form.codigo) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.nombre)}}
                                            {{form_widget(form.nombre) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.esabierta)}}
                                            {{form_widget(form.esabierta) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset><legend>Datos de ubicación del edificio escolar</legend>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.departamento)}}
                                            {{form_widget(form.departamento) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.provincia)}}
                                            {{form_widget(form.provincia) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.municipio)}}
                                            {{form_widget(form.municipio) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.canton)}}
                                            {{form_widget(form.canton) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.localidad)}}
                                            {{form_widget(form.localidad) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.zona)}}
                                            {{form_widget(form.zona) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-lg-4 col-md-5">
                                            {{ form_label(form.codigoEdificio)}}
                                            {{form_widget(form.codigoEdificio) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-7">
                                            {{ form_label(form.direccion)}}
                                            {{form_widget(form.direccion) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-2 col-md-4">
                                            {{ form_label(form.area)}}
                                            {{form_widget(form.area) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </fieldset>       
                                <fieldset><legend>Datos de referencia</legend>
                                    <div class="row">
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.telefono)}}
                                            {{form_widget(form.telefono) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.fax)}}
                                            {{form_widget(form.fax) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.correo)}}
                                            {{form_widget(form.correo) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.casillaPostal)}}
                                            {{form_widget(form.casillaPostal) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <p>Otro telefono para comunicarse con {{ app.session.get('tituloTipo') }}</p>
                                    <div class="row">
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.telefonoRef)}}
                                            {{form_widget(form.telefonoRef) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-3 col-md-6">
                                            {{ form_label(form.pertenece)}}
                                            {{form_widget(form.pertenece) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset><legend>Jurisdicción Administrativa</legend>
                                    <div class="row">
                                        <div class="form-group col-lg-12 col-md-12">
                                            {{ form_label(form.distrito)}}
                                            {{form_widget(form.distrito) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset><legend>Dependencia</legend>
                                    <div class="row">
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.dependencia)}}
                                            {{form_widget(form.dependencia) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-12">
                                            {{ form_label(form.turno)}}
                                            {{form_widget(form.turno) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="form-group">
                                    <div class="col-lg-12 text-center">
                                        {{ form_widget(form.guardar ) }}
                                        <a href="{{path('institucioneducativagestion')}}" class="btn btn-default">Cancelar</a>
                                    </div>
                                </div>
                                

                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
