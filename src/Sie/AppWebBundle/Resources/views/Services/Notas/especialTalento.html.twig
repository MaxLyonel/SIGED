<input type="hidden" name="tipoNota" value="{{notas.tipoNota}}">
<input type="hidden" name="nivel" value="{{notas.nivel}}">
<input type="hidden" name="idInscripcion" value="{{notas.idInscripcion}}">

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered" id="tbl_nota">
            <thead>
                <tr>
                    <th><b>Periodo</b></th>
                    <th><b>Actividades o Contenido desarrollados (Area Talento)</b></th>
                    <th><b>Desempeño</b></th>
                    
                </tr>
            </thead>
            {% if notas.enota == 1 %}
            
            <tbody>
                {% for item in notas.cualitativas %}
                <tr>
                    <td>{{ item.inter }}</td>
                    <td>{{ item.desc }}</td>
                </tr>
                {% endfor %}
            </tbody>
            {% else %}
            <tbody>
            {% for tn in notas.tiposNotasArray %}
                <input type="hidden" name="id_nota[]" class="form-control jnumbersletters noresize ids" value="{{tn.id}}">
                <input type="hidden" name="tipo{{tn.id}}" id="tipo{{tn.id}}"  value="{{tn.nota}}">
                <tr>
                    <td>
                        {{tn.nota}}
                    </td>
                    <td>
                        <textarea class="form-control jnumbersletters noresize actividad" name="actividad{{tn.id}}" id="actividad{{tn.id}}" maxlength="80" >{{tn.actividad}}</textarea>
                    </td>
                    <td>
                    <select class="form-control" name="valoracion{{tn.id}}" id="valoracion{{tn.id}}" >
                        <option value="">Seleccionar....</option>
                        {% for valor in notas.valoraciones %}
                        <option value="{{valor.id}}" {% if valor.id == tn.valoracion %} selected {% endif %}  >{{valor.nivelTalento}}</option>
                        {% endfor %}
                    </select>
                    </td>
                </tr>
             {% endfor %}
               
            </tbody>
            {% endif %}
        </table>
    </div>
    <br/>
    
    <div class="col-lg-12" {% if notas.enota == 1 %} style="display: none" {% endif %}>
        <div class="form-group">
            <label for="nuevoEstadomatricula">Estado</label>
            <select class="form-control" name="nuevoEstadomatricula" id="nuevoEstadomatricula" >
                <option value="">Seleccionar....</option>
                {% for estadoF in notas.estadosFinales %}
                <option value="{{estadoF.id}}">{{estadoF.estadomatricula}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
