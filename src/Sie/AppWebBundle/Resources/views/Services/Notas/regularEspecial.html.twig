                            {% else %}
                                {{ a.asignatura }}
                            {% endif %}
                        </td>
                        {% if a.notas is defined and a.notas|length > 0 %}
                        
                        {% for n in a.notas %}

                            {% if (notas.estadoMatricula in notas.estadosPermitidos) and vista != 0 %}
                            
                                {% if (n.idNotaTipo != 9 and ((notas.nivel in [1,11,403] and n.nota == "") or (notas.nivel not in [1,11,403] and n.nota == 0))) or (vista == 2 and n.idNotaTipo != 8) or (n.idNotaTipo != 9 and n.idNotaTipo == notas.operativo+5 ) %} {# and notas.gestion == notas.gestionActual #}
                                    <td data-title="{{n.idNotaTipo}} Bimestre">
