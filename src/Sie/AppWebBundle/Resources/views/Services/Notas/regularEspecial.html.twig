                                <p class="text-justify">
                                    <textarea class="form-control jnumbersletters notaCualitativa" name="notaCualitativa[]" rows="5" cols="30" style="resize:vertical; max-height: 200px; text-transform:uppercase" maxlength="200" minlength="16">{{c.notaCualitativa}}</textarea>
                                </p>
                            {% else %}
                                <p><b>{{c.notaTipo}}</b></p>
                                <p class="text-justify">
                                    <textarea class="form-control jnumbersletters" rows="5" cols="30" style="resize:vertical; max-height: 200px; text-transform:uppercase" maxlength="200" disabled="disabled">{{c.notaCualitativa}}</textarea>
                                </p>
                            {% endif %}
                        {% else %}
                            <p><b>{{c.notaTipo}}</b></p>
                            <p class="text-justify">
                                <textarea class="form-control jnumbersletters" rows="5" cols="30" style="resize:vertical; max-height: 200px; text-transform:uppercase" maxlength="200" disabled="disabled">{{c.notaCualitativa}}</textarea>
                            </p>
                        {% endif %}
                        </td></tr>
                    {% endfor %}
                {% else %}
                    <thead>
                        <tr><th>Notas cualitativas</th></tr>
                    </thead>
                    <tr><td><em><spam style="color:#9DB2B9">No hay notas cualitativas</spam></em></td></tr>
                {% endif %}
            </table>

        {% endif %}
        </div>
        </div>

    {% endif %}

{% else %}
    <div class="alert alert-warning">
        <i class="fa fa-warning"></i> El curso no tiene materias registradas, debe registrar las materias del curso para poder realizar el registro de notas.
    </div>
{% endif %}

<script>
    var promedio = function(control,clase){
        
        //if(control.value == ""){ control.value = 0; }
        if(control.value < 0){ control.value = 0; }
        if(control.value > 100){ control.value = 100; }
        
        if(control.value != "" && control.value != 0){
            control.value = Math.round(control.value);
        }

        var suma = 0;
        $("."+clase).each(function (index) {
            suma = suma + parseInt($(this).val());
        })
        var promedio = Math.round(suma/3);
        if(isNaN(promedio)){
            promedio = 0;
        }
        $('.p'+clase).val(promedio);

        promedioAnual();
    }

    var notaVacia = function(control,clase){
        if(control.value == ""){ control.value = 0; }
        if(control.value < 0){ control.value = 0; }
        if(control.value > 100){ control.value = 100; }

        if(control.value != "" && control.value != 0){
            control.value = Math.round(control.value);
        }
        
        var suma = 0;
        $("."+clase).each(function (index) {
            suma = suma + parseInt($(this).val());
        })
        var promedio = Math.round(suma/3);
        if(isNaN(promedio)){
            promedio = 0;
        }
        $('.p'+clase).val(promedio);

        promedioAnual();
    }

    var promedioAnual = function(){
        var suma = 0;
        var contador = 0;
        $(".promedio").each(function (index) {
            suma = suma + parseInt($(this).val());
            contador = contador + 1;
        })
        var promedio = Math.round(suma/contador);
        if(isNaN(promedio)){
            promedio = 0;
        }
        $('.p5').val(promedio);
    }

    var validarNota = function(e){
        var key = e || window.event;
        var k = key.charCode || key.keyCode;
        if ((k < 48 || k > 57) //NUmeros
            && (k != 13) //ENTER
            && (k != 8) //retroceso
            && (k != 9) //tab
        )
        return false;
    }

    var validarEnvioNotas = function(){
        var enviar = true;
        var mensaje = "";
        $(".nota").each(function (index) {
            if($(this).val() == 0){
                enviar = false;
                mensaje = 'Las notas registradas no pueden ser cero';
            }
        });
        if(enviar == true){
            $(".notaCualitativa").each(function (index) {
                if($(this).val().length < 16){
                    mensaje = 'Las notas cualitativas deben tener al menos 16 dígitos';
                    enviar = false;
                }
            });
        }
        if(enviar == false){
            alert(mensaje);
            return false;
        }else{
            return true;
        }
    }

    $(".jnumbersletters").keypress(function (key) {
        var key = key || window.event;
        var k = key.charCode || key.keyCode;
        if ((k < 97 || k > 122)//letras minusculas
            && (k < 65 || k > 90) //letras mayusculas
            && (k < 48 || k > 57) //NUmeros
            && (k != 13) //ENTER
            && (k != 8) //retroceso
            && (k != 9) //tab
            && (k != 241) //ñ
             && (k != 209) //Ñ
             && (k != 32) //espacio
             && (k != 225) //á
             && (k != 233) //é
             && (k != 237) //í
             && (k != 243) //ó
             && (k != 250) //ú
             && (k != 193) //Á
             && (k != 201) //É
             && (k != 205) //Í
             && (k != 211) //Ó
             && (k != 218) //Ú
             && (k != 44) //coma ,
             && (k != 46) //punto .
            )
            return false;
    });
</script>