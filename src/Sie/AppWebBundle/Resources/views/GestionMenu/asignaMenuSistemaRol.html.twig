{% extends 'layoutGestmenu.html.twig' %}
{% block contentoption %}
    <div class="header-content">
        <h2><i class="fa fa-pencil"></i> <strong>Asignación de Menús a Roles</strong>  <span></span></h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <span class="label">Usted esta aquí:</span>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-pencil"></i>
                    <a href="#">

                    </a>
                    <i class="fa fa-angle-right"></i>
                </li>
            </ol>
        </div><!-- /.breadcrumb-wrapper -->
    </div><!-- /.header-content -->
    <!--/ End page header -->
    <div class="panel-heading">
        <div class="pull-left" >
        </div>
        <div class="pull-right">
            <div class="btn-group tooltips" data-toggle="tooltip" data-container="body" title="" data-original-title="Nuevo">
                {#algun boton#}
            </div>
        </div>
        <div class="clearfix"></div>
    </div><!-- /.panel-heading -->
    {% if app.session.flashBag.has('exito') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashBag.get('exito') %}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
            {% for msg in app.session.flashBag.get('error') %}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}

<div class="body-content animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
            {#<a class="btn btn-info btn-xs" href="{{path('gestionmenu_sistema_menu_rol')}}"  ><i class="fa fa-eye"></i>  Ver Lista</a>#}
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="container-fluid">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h5><strong>Asignar</strong></h5>
                </div>
                <div class="panel-body">
                  {{form_start(form,{'attr':{'id':'formMenuRol','class':'form-horizontal form-group has-primary'} })}}
                    <div class="row">
                        <div class="col-md-4">
                             <h5><strong>Sistema</strong></h5>
                        </div>
                        <div class="col-md-4">
                            <h5><strong>Menú</strong></h5>
                        </div>
                        <div class="col-md-4">
                            <h5><strong>Rol</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            {{form_widget(form.sistema)}}
                        </div>
                        <div class="col-md-4">
                            {{form_widget(form.menu)}}
                        </div>
                        <div class="col-md-4">
                            {{form_widget(form.rol)}}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-2">
                        </div>

                        <div class="col-md-2">
                            <div>
                                {{form_widget(form.create)}}
                                <label><strong>Crear</strong></label>
                                <i class="glyphicon glyphicon-question-sign" title="Permite Crear registros"></i>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div >
                            {{form_widget(form.read)}}
                            <label><strong>Leer</strong></label>
                            <i class="glyphicon glyphicon-question-sign" title="Permite Leer registros"></i>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div >
                            {{form_widget(form.update)}}
                            <label><strong>Editar</strong></label>
                            <i class="glyphicon glyphicon-question-sign" title="Permite Actualizar registros"></i>
                            </div>

                        </div>
                        <div class="col-md-2">
                            <div>
                                {{form_widget(form.delete)}}
                            <label><strong>Eliminar</strong></label>
                            <i class="glyphicon glyphicon-question-sign" title="Permite Borrar registros"></i>
                            </div>
                        </div>

                    </div>


                    <br>


                    <div class="row">
                        <div class="col-lg-3 col-md-6 ">
                            <h5><strong></strong></h5>
                        </div>
                        <div class="col-lg-3 col-md-6 ">
                            <h5><strong>Fecha  Inicio</strong></h5>
                        </div>
                        <div class="col-lg-3 col-md-6 ">
                            <h5><strong>Fecha Final</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-6 ">
                            <h5><strong></strong></h5>
                        </div>
                        <div id='sandbox-container'>
                            <div class="input-daterange" id="datepicker">
                                <div class=" col-lg-3 col-md-6">
                                    {{form_widget(form.fechaInicio)}}
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class=" col-lg-3 col-md-6">

                                    {{form_widget(form.fechaFinal)}}
                                    <div class="help-block with-errors"></div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h5><strong>Observaciones</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{form_widget(form.observaciones)}}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="col-lg-3 col-md-6">
                                {{form_label(form.esactivo)}}
                                {{form_widget(form.esactivo)}}
                            </div>
                            <div class="col-lg-3 col-md-6">
                                {{form_widget(form.guardar)}}
                            </div>
                        </div>
                    </div>
                     {{form_end(form)}}
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="panel panel-warning rounded shadow">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h3 class="panel-title"><strong>Listado General de Ménus</strong></h3>
                    </div>
                    <div class="clearfix"></div>
                </div><!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="listamenuroles"></div>
                </div><!-- /.panel-body -->
            </div><!-- /.panel-body -->
        </div>
    </div>
</div>






{% endblock %}
{% block javascripts%}

{{ parent() }}
<script>

    function cargarMenuSistema() {
        var id_sistema = $('#form_sistema').val();

        var formData = {
            id_sistema:id_sistema
        };      //alert(formData);
        $.ajax({
            type: 'post',
            url: "{{ path('gestionmenu_cargar_sistema_menu') }}",
            data:formData,
            beforeSend: function () {
                $("#form_menu").empty();
                $("#form_menu").append('<option value="">Buscando...</option>');
                $("#listamenuroles").empty();
            },
            success: function (data) {
                $("#form_menu").empty();
                $("#form_menu").append('<option value="">Seleccionar...</option>');
                $.each(data.sistemamenu, function (i, value) {
                    $("#form_menu").append('<option value="' + i + '">' + value + '</option>');
                });


                $("#listamenuroles").append(data.sistemamenuroltabla);

            }
        });
    }


    function cargarMenuSistemaRol() {
        var id_sistema = $('#form_sistema').val();
        var id_menu = $('#form_menu').val();
        var formData = {id_sistema:id_sistema,id_menu:id_menu};

        $.ajax({
            type: 'post',
            url: "{{ path('gestionmenu_cargar_sistema_menu_rol') }}",
            data: formData,
            beforeSend: function () {
                $("#form_rol").empty();
                $("#form_rol").append('<option value="">Buscando...</option>');
                $("#listamenuroles").empty();
            },
            success: function (data) {
                $("#form_rol").empty();
                $("#form_rol").append('<option value="">Seleccionar...</option>');
                $.each(data.roles, function (i, value) {
                    $("#form_rol").append('<option value="' + i + '">' + value + '</option>');
                });
                listaMenuRoles();
            }
        });
    }
    //cargalistasistemamenurolesAction
    function listaMenuRoles() {
        var id_sistema = $('#form_sistema').val();
        var id_menu = $('#form_menu').val();
        var formData = {id_sistema:id_sistema,id_menu:id_menu};

        $.ajax({
            type: 'post',
            url: "{{ path('gestionmenu_cargar_sistema_menu_rol_lista') }}",
            data: formData,
            beforeSend: function () {
                $("#listamenuroles").html('Cargando...');
            },
            success: function (data) {
                $("#listamenuroles").empty();
                $("#listamenuroles").append(data);
            }
        });
    }

    function guardarMenuSisRol()  {
        var sistema = $('#form_sistema').val();
        var menu = $('#form_menu').val();
        var rol = $('#form_rol').val();
        if (sistema == '') {
            swal("Debe Seleccionar un Sistema");
            return false;
        }
        if (menu == '') {
            swal("Debe Seleccionar un Menú");
            return false;
        }
        if (rol == '') {
            swal("Debe Seleccionar un Rol");
            return false;
        }

         var formData = $('#formMenuRol').serialize();

        $('#form_guardar').prop("disabled",true);
            $.ajax({
            type: 'post',
            url: "{{ path('gestionmenu_createasignacionmenurol') }}",
            data: formData,
            beforeSend: function () {
                $("#listamenuroles").empty();
            },
            success: function (data) {
                $("#form_menu").val(0);
                $("#form_rol").val(0);
                $("#form_fechaInicio").attr("placeholder", "Fecha de Inicio");
                $("#form_fechaFinal").attr("placeholder", "Fecha Final");
                $("#form_observaciones").val();
                $("#form_create").prop("checked",false);
                $("#form_read").prop("checked",false);
                $("#form_delete").prop("checked",false);
                $("#form_update").prop("checked",false);
                $("#form_esactivo").prop("checked",false);
                $("#listamenuroles").empty();
                $("#listamenuroles").append(data);
            },
            complete: function () {
             $('#form_guardar').prop("disabled",false);
            }
        });
    }

    $('.calendario').datepicker({
        format: 'dd-mm-yyyy',
        todayBtn: 'linked'
    });
    $('#sandbox-container .input-daterange').datepicker({
        format: 'dd-mm-yyyy',
        todayBtn: 'linked'
    });
    $('#form_fechaInicio').on('change',function(){
        if($("#form_fechaFinal").val().length < 1){
            $("#form_fechaFinal").val($('#form_fechaInicio').val());
        }
    });
    $('#form_fechaFinal').on('change',function(){
        if($("#form_fechaFinal").val() < $("#form_fechaInicio").val()){
            $("#form_fechaInicio").val($('#form_fechaFinal').val());
        }
    });
</script>

{% endblock %}

