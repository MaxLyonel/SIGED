{% extends 'SieAppWebBundle:Default:sie.html.twig' %}

{% block contentoption%}
    <div id="page-wrapper">
        <div class="row">
            <div class="page-header">
                <h3 class="heading pull-left"><i class="fa fa-file-text animated flip"></i> Materia Nota <span class="sub-heading">{{app.session.get('fullname')}}</span></h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="separator bottom"></div>
        <div class="row">

            <div class="col-md-12">
                <!-- Website Stats  Widget -->
                <div class="panel" id="dashboard-tour-visits">
                    <!--h1 class="page-header">Resultado de la Busqueda</h1-->
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-icon panel-success">
                                    <div class="panel-heading">
                                        <i class="fa fa-search"></i> Informacion de la Busqueda
                                    </div>
                                    <div class="panel-body">

                                        <form class="form" action="" method="" name="formmaterianota" id="formrude">
                                            <table class="table table-bordered table-hover" >
                                                <thead>
                                                    <tr>
                                                        <th>Materia</th>
                                                        <th>1er Bimestre</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for dependencia in dependenciatipos%}
                                                        <tr class="gradeX">
                                                            <td>{{ dependencia }}</td>
                                                            <td>
                                                                <input type="text" id="{{dependencia}}" onkeydown="return validarNumero(event);" onkeyup="validarNota(this)" class="form-control span8" placeholder="100.00" placeholder="Text input" size="3" maxlength="3">
                                                                <p id="msgkrlos_{{dependencia}}"></p>
                                                            </td>

                                                        </tr>
                                                    {% endfor %}                                 
                                                </tbody>
                                            </table>
                                            <textarea class="form-control" rows="3"></textarea>

                                        </form>

                                    </div>
                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-success"><i class="fa fa-hand-o-right"></i> Registrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    {% endblock %}


    {% block javascripts %}
        {{ parent() }}
        <script src="{{asset('assets/js/validationNota.js')}}"></script>
    {% endblock %}

