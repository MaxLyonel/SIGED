{% extends "layoutRegular.html.twig" %}

{% block contentoption %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Fondo de Auxilio Educativo Anual
                    <small>Buscar Institución Educativa</small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i>  <a href="">Buscar Institución Educativa</a></li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('searchIe') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('tuicionIe') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4><i class="fa fa-info-circle"></i> Ingresa el código SIE de la Institución Educativa para realizar la búsqueda</h4>
                    </div>
                    <div class="portlet-widgets">
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelie" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator', 'role': "form", 'class':'form-horizontal'} } )}}
                            <div class="form-group">
                                <label for="form_institucioneducativa" class="col-sm-2 control-label">{{ form_label(form.institucioneducativa) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.institucioneducativa, { 'attr': {'class': 'form-control', 'placeholder': 'Introduzca el código SIE'}  }) }}
                                    <div class="help-block with-errors">{{ form_errors(form.institucioneducativa) }}</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="form_gestion" class="col-sm-2 control-label">{{ form_label(form.gestion) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.gestion, { 'attr': {'class': 'form-control', 'value': '2015'}  }) }}
                                    <div class="help-block with-errors">{{ form_errors(form.gestion) }}</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary' } } ) }}
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>                      
{% endblock %}