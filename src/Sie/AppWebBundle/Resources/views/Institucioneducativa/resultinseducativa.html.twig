{% extends 'SieAppWebBundle:Default:sie.html.twig' %}

{% block contentoption%}
    <div id="page-wrapper">
        <div class="row">
            <div class="page-header">
                <h3 class="heading pull-left"><i class="fa fa-home animated flip"></i> Buscar Instituci√≥n Educativa <span class="sub-heading">{{app.session.get('fullname')}}</span></h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="separator bottom"></div>
        <div class="row">

            <div class="col-md-12">
                <!-- Website Stats  Widget -->
                <div class="panel panel-icon panel-success">
                    <div class="panel-heading">
                        <i class="fa fa-search"></i> Resultado de la Busqueda
                    </div>
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-xs-4 col-md-4"><p class="text-center"><strong>Institucion Educativa</strong></p></div>
                            <div class="col-xs-4 col-md-4"><p class="text-center"><strong>Institucion Educativa Rue</strong> </p></div>
                            <div class="col-xs-4 col-md-4"><p class="text-center"><strong>Fecha Creacion</strong></p></div>
                        </div>
                        {% for entity in pagination %}
                            <div class="row borderRadius">
                                <div class="col-xs-4 col-md-4"><p class="text-left">{{ entity.institucioneducativa }}</p></div>
                                <div class='clear-fix'></div>
                                <div class="col-xs-4 col-md-4"><p class="text-left">{{ entity.id }}</p></div>
                                <div class="col-xs-4 col-md-4"><p class="text-left">{% if entity.fechaResolucion %}{{ entity.fechaResolucion|date('Y-m-d H:i:s') }}{% endif %}</p></div>
                            </div>
                        {% endfor %}
                        <div class="panel-footer">
                            <div class="paginacion">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Website Stats Widget -->

            </div>
        </div>

    </div>
{% endblock %}
