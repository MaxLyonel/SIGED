{% extends 'layoutRegular.html.twig' %}

{% block contentoption %}
    <!-- begin PAGE TITLE AREA -->
    <!-- Use this section for each page's title and breadcrumb layout. In this example a date range picker is included within the breadcrumb. -->

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Mensajer√≠a
                    <small>Redactar</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-edit"></i> Redactar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Nuevo Mensaje</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.receptor) }}</span>
                            {{ form_widget(form.receptor, { 'attr': {'class': 'form-control js-example-basic-multiple'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.emisor) }}</span>
                            {{ form_widget(form.emisor, { 'attr': {'class': 'form-control', 'value': app.session.get('lastname') ~' '~ app.session.get('lastname2') ~' '~ app.session.get('name') } }) }}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.asunto) }}</span>
                            {{ form_widget(form.asunto, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            {{ form_widget(form.mensaje, { 'attr': {'class': 'summernote'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.adjunto1) }}</span>
                            {{ form_widget(form.adjunto1, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.adjunto2) }}</span>
                            {{ form_widget(form.adjunto2, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">{{ form_label(form.fecha) }}</span>
                            {{ form_widget(form.fecha, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <hr>
                    <div class="btn-toolbar" role="toolbar">
                        {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-default'} }) }}
                        <a href="{{ path('mensaje') }}" class="btn btn-red pull-right" ><i class="fa fa-times"></i> Descartar</a>
                    </div>
                    {{ form_end(form) }}
                </div>                    
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}

{% block autocompletar %}
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 300,
                lang: 'es-ES'
            });

            $(".js-example-basic-multiple").select2();
        });
    </script>
{% endblock %}
