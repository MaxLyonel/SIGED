{% extends 'SieAppWebBundle:Default:sie.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{asset('assets/css/tablesorter.css')}}" rel="stylesheet" />
{% endblock %}
{% block contentoption%}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Buscar Estudiante
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('estudiante_main')}}">Buscar</a></li>
                    <li><i class="fa fa-reddit"></i> Resultado</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag().get('warning') %}
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Warning!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag().get('success') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Bien!</strong> {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Estudiantes</h4>
                    </div>
                    <div class="portlet-widgets">

                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#pinfoestudiante"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="pinfoestudiante" class="panel-collapse collapse in">
                    <div class="portlet-body">

                        <div id="no-more-tables">

                            <table id="myTable" class="table table-bordered table-hover cf dataTable">

                                <thead class="">
                                    <tr class="">
                                        <th>Rude</th>
                                        <th>CI</th>
                                        <th>Compelemento</th>
                                        <th>Paterno</th>
                                        <th>Materno</th>
                                        <th>Nombres(s)</th>
                                        <th>Fecha Nacimiento</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entity in entities %}
                                        <tr>

                                            <td data-title="Rude">{{ entity.codigoRude }}</td>
                                            <td data-title="CI">{{ entity.carnetIdentidad }} </td>
                                            <td data-title="Complemento" class="text-center"> {{entity.complemento}}</td>
                                            <td data-title="Paterno">{{ entity.paterno }}</td>
                                            <td data-title="Materno">{{ entity.materno }}</td>
                                            <td data-title="Nombre">{{ entity.nombre }}</td>
                                            <td data-title="F. Nac.">{{ entity.fechaNacimiento |date('d-m-Y') }}</td>

                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="{{path('estudiante_main')}}" class="btn btn-link"><i class="glyphicon glyphicon-circle-arrow-left"></i>&nbsp;Volver</a>
        </div>
    </div>
{% endblock %}

