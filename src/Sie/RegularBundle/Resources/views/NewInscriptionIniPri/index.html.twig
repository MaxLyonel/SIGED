    Vue.filter('uppercase', function (value) {
    	if (typeof value === "undefined") 
			return '';
		else
			return value.toUpperCase()
	})

        var app = new Vue({
            delimiters: ['${', '}'],
            el: '#app',

            /*components: {
			  	vuejsDatepicker
			  },*/

            data: {
            	dataNewStudent: {'withoutcifind':false},
            	dataNewStudent: {},
            	dataNewStudent: {},
            	responseprocess:false,
            	swprocessue:false,
            	swinscription:false,
            	nombreue:true,
            	buscando:false,
                buscandoue:false,
            	message:'',           	
