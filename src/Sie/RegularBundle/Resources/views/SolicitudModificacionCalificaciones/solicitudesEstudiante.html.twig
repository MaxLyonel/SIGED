{% extends 'layoutRegular.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Solicitud
                    <small>Adición/Modificación de Calificaciones</small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-list-alt"></i>  <a href="{{path('solicitudModificacionCalificaciones')}}">Solicitudes</a></li>
                    <li><i class="fa fa-search"></i> Buscar Solicitudes
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('solicitudEstudianteError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Buscar Solicitud</h4>
                    </div>
                    <div class="portlet-widgets">
                        {% if app.session.get('roluser') == 5 or app.session.get('roluser') == 8 or app.session.get('roluser') == 9 %}
                        <a href="{{path('solicitudModificacionCalificaciones_search',{'op':'search'})}}" class="btn btn-xs btn-red"><i class="fa fa-pencil"></i> Nueva Solicitud </a>
                        {% endif %}
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form",'class':'form-horizontal'} } )}}
                            <div class="panel-body">

                                <div class="form-group">
                                    <label for="form_codigoRude" class="col-sm-3 control-label">{{ form_label(form.rudeOSolicitud) }}</label>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.rudeOSolicitud ) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">

                                        {{ form_widget(form.buscar,{ 'attr':{'class':'btn btn-primary' } } ) }}
                                    </div>
                                </div>

                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
