                      type: 'post',
                      url: Routing.generate('traslado_web_verificartraslado'),
                      data: formTralado,
                      beforeSend: function () {
                          $("#answerTrasladoId").empty();
                          $("#answerTrasladoId").append('<div style="text-align:center"><img src="{{asset('img/loading.gif')}}" /></div>');
                      },
                      success: function (data) {
                          $("#answerTrasladoId").empty();
                          $("#answerTrasladoId").append(data);
                      },
