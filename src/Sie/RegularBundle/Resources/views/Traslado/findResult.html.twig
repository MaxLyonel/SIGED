                       type: 'post',
                       url: Routing.generate('traslado_web_savetraslado_student'),
                       data: formData,
                       beforeSend: function () {
                           $("#answerTrasladoId").empty();
                           $("#answerTrasladoId").append('<div class="text-center"><img src="{{asset('img/loading.gif')}}" class="loading img-responsive" /></div>');
                       },
                       success: function (data) {
                           $("#answerTrasladoId").empty();
                           $("#answerTrasladoId").append(data);
                           //location.reload(true);
                       },
                       statusCode: {
                           500: function () {

