{% extends 'layoutRegular.html.twig' %}

{% block contentoption%}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Inscripción Inicial Primaria
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('inicial_primaria_index')}}">Buscar</a></li>
                    <li class="active">Resultado</li>

                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            {{form_start(formninguno)}}
            {{form_widget(formninguno.ninguno)}}
            {{form_end(formninguno)}}
        </div>
    </div>


    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Resultado</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">

                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered table-hover table-green dataTable">
                            <thead>
                                <tr>
                                    <th>N.</th>
                                    <th>Rude</th>
                                    <th>Nombre</th>
                                    <th>Paterno</th>
                                    <th>Materno</th>
                                    <th>Fecha Nacimiento</th>

                                    <th>CI</th>
                                    <th>Complemento</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for student in samestudents %}
                                    <tr class="gradeU">
                                        <td>{{loop.index}}</td>
                                        <td class="center">{{student.codigoRude}}</td>
                                        <td>{{student.nombre}}</td>
                                        <td>{{student.paterno}}</td>
                                        <td>{{student.materno}}</td>
                                        <td>{{student.fechaNacimiento|date('d-m-Y')}}</td>
                                        <td class="center">{{student.carnetIdentidad}}</td>
                                        <td class="center">{{student.complemento}}</td>
                                        <td class="center">
                                            <form id='form' name='form' action="{{path('inicial_primaria_exist')}}" method="post">
                                                <input type="hidden" name="id" value="{{student.id}}">
                                                <input type="hidden" name="codigoRude" id="codigoRude" value="{{ student.codigoRude }}" />


                                                <button class="btn btn-success btn-sm btn-block"> <i class="fa fa-pencil"></i> Inscribir</button>
                                            </form>
                                        </td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->


{% endblock %}
