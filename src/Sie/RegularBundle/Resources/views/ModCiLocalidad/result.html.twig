{% extends 'layoutRegular.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{asset('assets/css/tablesorter.css')}}" rel="stylesheet" />
{% endblock %}
{% block contentoption %}



    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Agregar Ci y Localidad
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('modificar_ci_localidad_index')}}">Buscar</a></li>
                    <li class="active"> Resultado</li>

                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <div class="row">

        {% for flashMessage in app.session.flashbag.get('successcilocalidad') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Bien!</strong> {{ flashMessage }}
            </div>
        {% endfor %}
    </div>




    <div class="row">
        <div class="col-lg-12">

            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Informaci√≥n  Estudiante - {{codigoRude}}</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#omitidos"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div id="omitidos" class="panel-collapse collapse in">
                    <div class="portlet-body">


                        {{form_start(form, { 'attr':{'data-toggle':'validator','role':'form', 'class':'form' } } )}}



                        <div class="row">
                            <div class="col-md-3">
                                {{form_label(form.paterno)}}
                                {{form_widget(form.paterno)}}
                            </div>
                            <div class="col-md-3">
                                {{form_label(form.materno)}}
                                {{form_widget(form.materno)}}
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.nombre)}}
                                {{form_widget(form.nombre)}}
                                <div class="help-block with-errors "></div>
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.genero)}}
                                {{form_widget(form.genero)}}
                                <div class="help-block with-errors "></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                {{form_label(form.pais)}}
                                {{form_widget(form.pais)}}
                            </div>
                            <div class="col-md-3">
                                {{form_label(form.departamento)}}
                                {{form_widget(form.departamento)}}
                            </div>
                            <div class="col-md-3">
                                {{form_label(form.provincia)}}
                                {{form_widget(form.provincia)}}
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.localidad)}}
                                {{form_widget(form.localidad)}}
                                <div class="help-block with-errors"></div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-3 form-group">
                                {{form_label(form.ci)}}
                                {{form_widget(form.ci)}}
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="col-md-3 form-group">
                                {{form_label(form.complemento)}}
                                {{form_widget(form.complemento)}}
                                <div class="help-block with-errors"></div>
                            </div>

                        </div>


                        {{form_widget(form.save, {'attr':{'class':'btn btn-default'} }) }}
                        {{form_end(form)}}

                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <a href="{{path('modificar_ci_localidad_index')}}" class="btn btn-link"><i class="glyphicon glyphicon-circle-arrow-left"></i>&nbsp;Volver</a>
        </div>
    </div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>
    </script>


{% endblock %}