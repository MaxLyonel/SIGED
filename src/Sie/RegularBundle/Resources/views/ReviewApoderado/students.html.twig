<div class="row">
    <div class="col-lg-12">
        <div class="portlet portlet-basic">
            <div class="portlet-body">

                <div class="row ">

                    <div class="col-lg-12">

                        <div class="portlet portlet-basic">
                            <div class="portlet-body">
                                <!--h3 id="grid-offsetting">Datos Estudiantes</h3-->
                                <div class="small">
                                    <div id="no-more-tables">
                                        {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form",'class':'form', 'id':'formdesuni'} } )}}
                                        <div class="row">
                                            <div class="col-md-12 ">
                                                <div class="alert alert-info alert-dismissible" role="alert">
                                                    <strong><i class='fa fa-male'></i></strong>
                                                    Listado de Estudiantes por paralelo
                                                </div>
                                            </div>


                                        </div>
                                        <table class="table table-bordered table-hover cf">
                                            <thead class="cf">
                                                <tr class="info">
                                                    <th class="text-center">No.</th>
                                                    <th class="text-center">Cod. Rude</th>
                                                    <th class="text-center">CI</th>
                                                    <th class="text-center">Paterno</th>
                                                    <th class="text-center">Materno</th>
                                                    <th class="text-center">Nombre</th>
                                                    <th class="text-center">&nbsp;</th>
                                                    <th class="text-center">&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {%for student in students %}
                                                    <tr><td>{{loop.index}}</td>
                                                        <td data-title="Rude"> {{student.codigorude}}</td>
                                                        <td data-title="Carnet"> {{student.carnetidentidad}}</td>
                                                        <td data-title="Paterno"> {{student.paterno}}</td>
                                                        <td data-title="Materno"> {{student.materno}}</td>
                                                        <td data-title="Nombre"> {{student.nombre}}</td>
                                                        {% if student.validado %}
                                                          <td data-title="opcion" class='danger'> Verificado</td>
                                                        {% else %}
                                                          <td data-title="opcion"> </td>
                                                        {% endif %}
                                                        <td data-title="Opcion" class="success" >
                                                            <strong><i class='fa fa-group'></i></strong>
                                                            <a href="#" onclick="infoApoderados('{{student.codigorude}}','{{student.studentinscid}}');">Apoderados</a>
                                                        </td>
                                                    </tr>
                                                {% endfor%}
                                            </tbody>
                                        </table>
                                        {{form_end(form)}}
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>



                </div>

            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
