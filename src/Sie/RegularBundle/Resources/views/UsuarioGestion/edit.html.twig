{% extends 'layoutRegular.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('css/jquery-ui.min.css')}}" rel="stylesheet">
{% endblock %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Gesti√≥n de Usuarios
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('usuariogestion')}}">Usuarios</a>
                    </li>
                    <li class="active">Editar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('errorEstudiante') %}
                <div class="alert alert-danger text-center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %} 
            {% for flashMessage in app.session.flashbag.get('errorInscripcion') %}
                <div class="alert alert-danger text-center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <!-- Website Stats  Widget -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Editar Usuario</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelusuario"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelusuario" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form"} } )}}
                            <fieldset><legend>1. Datos Personales</legend>
                                <div class="row">
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.ci)}}
                                        {{form_widget(form.ci) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-2 col-md-6">
                                        {{form_label(form.complemento)}}
                                        <i style="cursor:pointer" class="glyphicon glyphicon-info-sign text-info" data-container="body" data-toggle="popover" data-placement="right" data-content="
                                           Complemento no es lo mismo que la expedicion de su CI, por favor no coloque abreviaturas de departamentos"></i>
                                        {{form_widget(form.complemento) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.paterno)}}
                                        {{form_widget(form.paterno) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.materno)}}
                                        {{form_widget(form.materno) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.nombre)}}
                                        {{form_widget(form.nombre) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.genero)}}
                                        {{form_widget(form.genero) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.fechaNacimiento)}}
                                        <div id="sandbox-container">
                                            {{form_widget(form.fechaNacimiento) }}
                                        </div>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.estadoCivil)}}
                                        {{form_widget(form.estadoCivil) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.celular)}}
                                        {{form_widget(form.celular) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{form_label(form.correo)}}
                                        {{form_widget(form.correo) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            </fieldset>
                            <filedset><legend>2. Datos de Usuario</legend>
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.usuario)}}
                                        {{form_widget(form.usuario) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.password)}}
                                        {{form_widget(form.password) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.newPassword)}}
                                        <i style="cursor:pointer" class="glyphicon glyphicon-info-sign text-info" data-container="body" data-toggle="popover" data-placement="right" data-content="Llenar solo si se desea cambiar el password"></i>
                                        {{form_widget(form.newPassword) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.rol)}}
                                        {{form_widget(form.rol) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.lugar)}}
                                        {{form_widget(form.lugar) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.activo)}}
                                        {{form_widget(form.activo) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>  
                            </filedset>
                            <hr>
                            <div class="form-group">
                                <div class="col-lg-12 text-center">
                                    {{ form_widget(form.guardar ) }}
                                    <a href="{{path('usuariogestion')}}" class="btn btn-default">Cancelar</a>
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{asset('js/jquery-ui.min.js')}}"></script>
    <script>
        function gradosMostrar(nivel) {
            $.ajax({
                type: 'get',
                url: Routing.generate('listargrados', {'nivel': nivel}),
                beforeSend: function () {
                    $("#form_grado").empty();
                    $("#form_grado").append('<option value="">Buscando...</option>');
                    //$("#form_grado").attr('disabled', 'disabled');
                },
                success: function (data) {
                    $("#form_grado").empty();
                    //$("#form_grado").removeAttr('disabled');
                    $("#form_grado").append('<option value="">Seleccionar...</option>');
                    $.each(data.listagrados, function (i, value) {
                        $("#form_grado").append('<option value="' + i + '">' + value + '</option>');
                    });
                },
                statusCode: {
                    500: function () {

                    },
                    404: function () {

                    }
                }
            });
        }

    </script>
{% endblock %}



