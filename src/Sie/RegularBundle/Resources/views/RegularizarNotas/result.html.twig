{% extends 'layoutRegular.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Regularizar Calificaciones
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i>  <a href="{{path('regularizarNotas')}}">Buscar</a></li>
                    <li><i class="fa fa-file"></i> Inscripciones</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Datos del Estudiante</h4>
                    </div>
                    <div class="portlet-widgets">
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelestudiante"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelestudiante" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div id="no-more-tables">
                            <table class="table cf">
                                <thead class="cf">
                                    <tr>
                                        <th>Rude</th>
                                        <th>Carnet</th>
                                        <th>Paterno</th>
                                        <th>Materno</th>
                                        <th>Nombre(s)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td data-title="Rude">{{estudiante.codigoRude}}</td>
                                        <td data-title="Carnet">{{estudiante.carnetIdentidad}}</td>
                                        <td data-title="Paterno">{{estudiante.paterno}}</td>
                                        <td data-title="Materno">{{estudiante.materno}}</td>
                                        <td data-title="Nombre(s)">{{estudiante.nombre}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-blue">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Inscripciones</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            <table class="table table-bordered table-condensed table-hover">
                                <thead>
                                    <tr>
                                        <th>Gestion</th>
                                        <th>UE</th>
                                        <th>Nivel</th>
                                        <th>Grado</th>
                                        <th>Paralelo</th>
                                        <th>Regularizar Calificaciones</th>
                                    </tr>
                                    <tbody>
                                        {% for ins in inscripciones %}
                                            <tr>
                                                <td>{{ins.institucioneducativaCurso.gestionTipo.id}}</td>
                                                <td>{{ins.institucioneducativaCurso.institucioneducativa.id}}</td>
                                                <td>{{ins.institucioneducativaCurso.nivelTipo.nivel}}</td>
                                                <td>{{ins.institucioneducativaCurso.gradoTipo.grado}}</td>
                                                <td>{{ins.institucioneducativaCurso.paraleloTipo.paralelo}}</td>
                                                <td>
                                                    
                                                        <form action="{{path('regularizarNotas_show')}}" method="post" style="display:inline-block">
                                                            <input type="hidden" name="idInscripcion" value="{{ins.id}}">
                                                            <button type="submit" class="btn btn-xs btn-primaru"> <i class="fa fa-eye red"></i></button>
                                                        </form>
                                                    
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}