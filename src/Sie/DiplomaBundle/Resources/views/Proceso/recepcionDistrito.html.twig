{% extends 'SieDiplomaBundle:Default:registros.html.twig' %}

{% block contenttitulo %}Recepción{% endblock %}
{% block contenttitulosmall %}Ingreso trámites de diplomas{% endblock %}           
{% block contentnavegacion %}<li class="active"><i class="fa fa-dashboard"></i> Principal</li>{% endblock %}  
{% block contentbuscador %}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="portlet portlet-dpl">
                    <div class="portlet-heading">
                        <div class="portlet-title">
                            <h4><i class="fa fa-circle text-orange"></i> Búsqueda de Unidad Educativa</h4>
                        </div>
                        <div class="portlet-widgets">
                            <span class="divider"></span>
                            <a data-toggle="collapse" data-parent="#accordion" href="index.html#infouser"><i class="fa fa-chevron-down"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                        {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form"} } )}}
                            <div class="form-group">
                                <label class="col-lg-1 col-md-2 col-sm-9 col-xs-12 control-label">
                                    {{form_label(form.sie)}}
                                </label>
                                <div class="col-lg-9 col-md-7 col-sm-9 col-xs-12">
                                    {{ form_widget(form.sie) }}
                                    <div class="help-block with-errors"></div>
                                </div>                                
                                <div class="col-lg-1 col-md-7 col-sm-9 col-xs-12">
                                    {{ form_widget(form.gestion,{ 'attr':{'class':'btn btn-success col-lg-12 col-md-12 col-sm-12 col-xs-12' } }) }}
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="col-lg-1 col-md-2 col-sm-3 col-xs-12">
                                    {{ form_widget(form.search,{ 'attr':{'class':'btn btn-success col-lg-12 col-md-12 col-sm-12 col-xs-12' } } ) }}
                                </div>
                            </div>
                        {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
{% endblock %}   
{% block contentregistros %}    
    
{% endblock %}
