                                        </div>
                                        <div class="col-md-2">
                                            {{form_widget(form.complemento)}}
                                        </div>
                                        <div class="col-md-6">
                                            {{form_widget(form.find)}}
                                        </div>
                                    </div>
                                </div><!-- /.form-group -->
                                <div class="form-group no-margin">
                                    <div class="row">
                                        <div class="col-md-6">
                                            {# {{form_widget(form.disciplina)}} #}
                                        </div>
                                        <div class="col-md-6">
                                            {# {{form_widget(form.prueba)}} #}
                                        </div>
                                    </div>

                                </div><!-- /.form-group -->
                              
                            </div><!-- /.form-body -->
                            <div class="form-footer">
