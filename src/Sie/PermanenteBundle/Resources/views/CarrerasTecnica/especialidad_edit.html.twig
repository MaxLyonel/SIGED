{% extends 'layoutPermanente.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('css/jquery-ui.min.css')}}" rel="stylesheet">
{% endblock %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Cursos
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i> <a href="{{path('carrerastecnica')}}"> Programas y Cursos</a>
                    </li>
                    <li class=""><i class=" glyphicon glyphicon-list"></i> <a href="{{path('carrerastecnica_especialidades_session')}}"> Cursos</a></li>
                    <li class="active">Editar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Programa o Curso</h4>
                    </div>
                    <div class="portlet-widgets">
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelCarrera"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelCarrera" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            <div id="no-more-tables">
                            <table class="table table-bordered cf">
                                <thead class="cf">
                                    <tr>
                                        <th>Código</th>
                                        <th>Programa o Curso</th>
                                        <th>Org. Curricular</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td data-title="Código">{{carrera.codigo}}&nbsp;</td>
                                        <td data-title="Carrera">{{carrera.carrera}}&nbsp;</td>
                                        <td data-title="Org. Curricular">{{carrera.orgcurricularTipo}}&nbsp;</td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Datos Curso</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelespecialidad"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelespecialidad" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': "form"} } )}}
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.codigo)}}
                                        {{form_widget(form.codigo) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.especialidad)}}
                                        {{form_widget(form.especialidad) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.obs)}}
                                        {{form_widget(form.obs) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{form_label(form.esactivo)}}
                                        {{form_widget(form.esactivo) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 text-center">
                                    {{form_widget(form.guardar)}}
                                    <a href="{{path('carrerastecnica_especialidades_session')}}" class="btn btn-default"> Cancelar</a> 
                                    </div>
                                </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
