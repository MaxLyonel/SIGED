{% extends 'layoutPermanente.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('css/chosen.css')}}" rel="stylesheet">

{% endblock %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Cursos
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('carrerastecnica')}}">Programas y Cursos</a>
                    </li>
                    <li><i class=" glyphicon glyphicon-list"></i> Cursos
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('newOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('newError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}

        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Curso</h4>
                    </div>
                    <div class="portlet-widgets">
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelCarrera"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelCarrera" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            <div id="no-more-tables">
                            <table class="table table-bordered cf">
                                <thead class="cf">
                                    <tr>
                                        <th>Código</th>
                                        <th>Programa o Curso</th>
                                        <th>Org. Curricular</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td data-title="Código">{{carrera.codigo}}&nbsp;</td>
                                        <td data-title="Carrera">{{carrera.carrera}}&nbsp;</td>
                                        <td data-title="Org. Curricular">{{carrera.orgcurricularTipo}}&nbsp;</td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
            
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Cursos</h4>
                    </div>
                    <div class="portlet-widgets">
                        <form action="{{path('carrerastecnica_especialidades_new')}}" method="post" style="display: inline-block">
                            <input type="hidden" name="idCarrera" value="{{carrera.id}}">
                            <button type="submit" class="btn btn-default btn-xs"><i class="fa fa-plus-circle"></i> Nuevo Curso</button>
                        </form>
                        
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelmaestro"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelmaestro" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {% if especialidades is not empty %}
                                <table class="table table-bordered dataTable">
                                    <thead>
                                        <tr>
                                            <th>Codigo</th>
                                            <th>Curso</th>
                                            <th>Descripción</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for esp in especialidades %}
                                            <tr>
                                                <td>{{esp.codigo}}</td>
                                                <td>{{esp.especialidad}}</td>
                                                <td>{{esp.obs}}</td>
                                                <td>
                                                    <form action="{{path('carrerastecnica_especialidades_edit')}}" method="post" style="display: inline-block">
                                                        <input type="hidden" name="idEspecialidad" value="{{esp.id}}">
                                                        <button type="submit" class="btn-link"><i class="fa fa-edit"></i> Editar</button>
                                                    </form>
                                                    <form action="{{path('carrerastecnica_especialidades_delete')}}" method="post" style="display: inline-block">
                                                        <input type="hidden" name="idEspecialidad" value="{{esp.id}}">
                                                        <button type="submit" class="btn-link" onclick="return confirm('Se eliminara el registro!. ¿Desea continuar?');"><i class="glyphicon glyphicon-trash"></i> Eliminar</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </body>
                                </table>
                            {% else %}
                                Ninguna
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div> 
           
{% endblock %}