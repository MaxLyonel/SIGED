{% extends 'layoutPermanente.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Cursos Cortos
                    <small>Centro Educativo</small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i> <a href="{{path('institucioncursocorto',{'op':'search'})}}"> Buscar</a></li>
                    <li><i class="fa fa-dashboard"></i>  Cursos Cortos
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('newOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('newError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('closeOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('closeError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}


        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>{{ app.session.get('institucion') }}</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            <div id="no-more-tables">
                            <table class="table table-bordered cf">
                                <thead class="cf">
                                <tr>
                                    <th>Código SIE</th>
                                    <th>Nombre</th>
                                    <th>Gestión</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <td data-title="Código SIE">{{institucion.id}}</td>
                                    <td data-title="Nombre">{{institucion.institucioneducativa}}</td>
                                    <td data-title="Gestión">{{gestion}}</td>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Cursos Cortos</h4>
                    </div>
                    <div class="portlet-widgets">
                        {% if (app.session.get('roluser') != 9) and (app.session.get('roluser') != 5) %}
                        <a href="{{path('institucioncursocorto_new')}}" class="btn btn-default btn-xs"><i class="fa fa-user"></i> Habilitar Curso Corto</a>
                        {% endif %}
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelmaestro"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelmaestro" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            
                            {% if cursosCortos is not empty %}
                               
                                <div id="no-more-tables">
                                    <table class="table table-bordered table-hover cf dataTable" id="myTable">
                                        <thead class="cf">
                                            <tr>    
                                                <th>Número</th>
                                                <th>Estado</th>
                                                <th>Nombre Curso</th>
                                                <th>Duración Horas</th>
                                                
                                                <th>Fecha Inicio</th>
                                                <th>Fecha Conclusión</th>                                            
                                                <th>Lugar</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for icc in cursosCortos %}
                                                {# set persona = maestro.persona #}
                                                {# set formacion = maestro.formacionTipo #}
                                                <tr>                                                    
                                                    <td data-title="Número">{{ icc.numero }}</td>
                                                    <td data-title="Estado">
                                                        {% if icc.esabierto == true %}
                                                            <span class="label green">Abierto</span>
                                                        {% else %}
                                                            <span class="label blue">Cerrado</span>
                                                        {% endif %}
                                                    </td>
                                                    <td data-title="Curso">{{ icc.curso }}&nbsp;</td>
                                                    <td data-title="Duración">{{ icc.duracionhoras }}&nbsp;</td>
                                                    
                                                    <td data-title="Inicio">{{ icc.fechaInicio|date('d-m-Y') }}&nbsp;</td>
                                                    <td data-title="Conclusión">{{ icc.fechaConclusion|date('d-m-Y') }}&nbsp;</td>
                                                    <td data-title="Lugar">{{ icc.lugar }}&nbsp;</td>
                                                    <td data-title="Acciones">
                                                        {% if icc.esabierto == true %}
                                                            {% if (app.session.get('roluser') != 9) and (app.session.get('roluser') != 5) %}
                                                                <form action="{{path('institucioncursocorto_edit')}}" method="post" style="display:inline-block">
                                                                    <input type="hidden" name="idCursoCorto" value="{{icc.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <button type="submit" class="btn-link"><i class="fa fa-edit text-warning"></i> Editar</button>
                                                                </form>
                                                                <form action="{{path('institucioncursocorto_delete')}}" method="post" style="display: inline-block">
                                                                    <input type="hidden" name="idCursoCorto" value="{{icc.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <button type="submit" class="btn-link" onclick="return confirm('Se eliminara el registro!. ¿Desea continuar?');"><i class="fa fa-trash-o text-danger"></i> Eliminar</button>
                                                                </form>
                                                                <form action="{{path('institucioncursocorto_close')}}" method="post" style="display: inline-block">
                                                                    <input type="hidden" name="idCursoCorto" value="{{icc.id}}">
                                                                    <button type="submit" class="btn-link" onclick="return confirm('Esta seguro de cerrar el curso');"><i class="fa fa-lock"></i> Cerrar</button>
                                                                </form>
                                                            {% endif %} 
                                                        {% endif %}
                                                        <form action="{{path('institucioncursocorto_participante_index')}}" method="post" style="display: inline-block">
                                                            <input type="hidden" name="idCursoCorto" value="{{icc.id}}">
                                                            <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                            <input type="hidden" name="gestion" value="{{gestion}}">
                                                            <button type="submit" class="btn-link"><i class="fa fa-users"></i> Participantes</button>
                                                        </form>                                           
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                No hay cursos registradas
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}

