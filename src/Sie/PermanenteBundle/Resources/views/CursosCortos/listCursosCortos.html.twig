<div class="bs-example">
    <div class="row">
        <div class="col-lg-12">
            <h4>Educación para el Fortalecimiento de Organizaciones Sociales y Comunitarias</h4>
            <div class="panel rounded swadow panel-danger">
                <div class="panel-heading">
                </div>

                {% if cursocorto is not empty %}

                    <div id="no-more-tables">
                        <table class="table table-striped table-danger">
                            <thead>
                            <tr>
                                <th>N°</th>
                                {#<th>Subarea</th>#}
                                <th>Programa</th>
                                <th>Area Tematica</th>
                                <th>Curso</th>
                                <th>Turno</th>
                                <th>Duracion</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th> </th>
                            </tr>


                            </thead>
                            <tbody>
                            {% for cursocorto in cursocorto %}
                                <tr>
                                    <td data-title="N°">{{ loop.index }}</td>
                                    {#<td data-title="Carnet">{{ cursocorto.sub_area }}</td>#}
                                    <td data-title="Paterno">{{ cursocorto.programa }}</td>
                                    <td data-title="Materno">{{ cursocorto.areatematica }}</td>
                                    <td data-title="Nombre(s)">{{ cursocorto.cursocorto }}</td>
                                    <td data-title="Formación">{{ cursocorto.turno }}</td>
                                    <td data-title="Formación">{{ cursocorto.duracionhoras }}</td>
                                    <td data-title="Fecha Inicio">{{ cursocorto.fecha_inicio }}</td>
                                    <td data-title="Fecha Fin">{{ cursocorto.fecha_fin }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    No hay Cursos Registrados
                {% endif %}
            </div>
            <!-- /.portlet -->
        </div>
    </div>

</div>

