<script>

   function listarEspecialidades(idArea){

            $.ajax({
            type: 'get',
            url: Routing.generate('permanente_herramienta_listarespecialidades', {'area': idArea}),
            beforeSend: function (data) {

            },
            success: function (data) {

                $('#form_especialidad').empty();
                $.each(data.listarespecialidad, function (i,value) {
                    $('#form_especialidad').append('<option value="' + i + '">' + value + '</option>');
                });

            }
        });
    }



</script>
