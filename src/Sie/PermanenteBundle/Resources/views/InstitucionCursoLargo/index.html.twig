{% extends 'layoutPermanente.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Cursos Largos
                    <small>Centro Educativo</small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i><a href="{{path('institucioncursolargo',{'op':'search'})}}"> Buscar</a></li>
                    <li><i class="fa fa-dashboard"></i>  Cursos Largos
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('newOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('newError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('updateError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('deleteError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('closeOk') %}
                <div class="alert alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('closeError') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>{{ app.session.get('institucion') }}</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            <div id="no-more-tables">
                            <table class="table table-bordered cf">
                                <thead class="cf">
                                <tr>
                                    <th>Código SIE</th>
                                    <th>Nombre</th>
                                    <th>Gestión</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <td data-title="Código SIE">{{institucion.id}}</td>
                                    <td data-title="Nombre">{{institucion.institucioneducativa}}</td>
                                    <td data-title="Gestión">{{gestion}}</td>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Cursos Largos</h4>
                    </div>
                    <div class="portlet-widgets">
                        {% if (app.session.get('roluser') != 9) and (app.session.get('roluser') != 5) %}
                        <a href="{{path('institucioncursolargo_new')}}" class="btn btn-default btn-xs"><i class="fa fa-user"></i> Habilitar Curso Largo</a>
                        {% endif %}
                        <span class="divider"></span>
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelmaestro"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelmaestro" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            
                            {% if carreras is not empty %}
                               <div class="table-responsive">
                                <div id="no-more-tables" class="overflow">
                                    <table class="table table-bordered table-hover cf dataTable" id="myTable">
                                        <thead class="cf">
                                            <tr>
                                                <th>N°</th>
                                                <th>Estado</th>
                                                <th>Programa</th>
                                                <th>Especialidad</th>
                                                <th>Duración/Rec.</th>
                                                <th>Fecha Inicio</th>
                                                <th>Fecha Conclusión</th>
                                                <th>Nivel Acreditación</th>
                                                <th>Modalidad</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for ca in carreras %}
                                                {# set persona = maestro.persona #}
                                                {# set formacion = maestro.formacionTipo #}
                                                <tr>
                                                    <td data-title="N°">{{ ca.numeroperiodo }}&nbsp;</td>
                                                    <td data-title="Estado">
                                                        {% if ca.esabierto == true %}
                                                            <span class="label green">Abierto</span>
                                                        {% else %}
                                                            <span class="label blue">Cerrado</span>
                                                        {% endif %}
                                                    </td>
                                                    <td data-title="Carrera">{{ ca.carreraespecialidadTipo.carreraTipo.carrera }}&nbsp;</td>
                                                    <td data-title="Curso">{{ ca.carreraespecialidadTipo.especialidad }}&nbsp;</td>
                                                    <td data-title="Duración">{{ ca.duracionhoras }} / {{ ca.reconocimientoHoras }} &nbsp;</td>

                                                    <td data-title="Fecha Inicio">{{ ca.fechaInicio|date('d-m-Y') }}&nbsp;</td>
                                                    <td data-title="Fecha Fin">{{ ca.fechaFin|date('d-m-Y') }}&nbsp;</td>
                                                    <td data-title="Nivel Acr.">{{ ca.nivelacreditacionTipo.nivelacreditacion }}&nbsp;</td>
                                                    <td data-title="Modalidad">{{ ca.modalidadTipo.modalidad }}&nbsp;</td>
                                                    <td data-title="Acciones">
                                                        {% if ca.esabierto == true %}
                                                            {% if (app.session.get('roluser') != 9) and (app.session.get('roluser') != 5) %}
                                                                <form action="{{path('institucioncursolargo_edit')}}" method="post" style="display:inline-block">
                                                                    <input type="hidden" name="idCurso" value="{{ca.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <button type="submit" class="btn-link"><i class="fa fa-edit text-warning"></i> Editar</button>
                                                                </form>
                                                                <form action="{{path('institucioncursolargo_delete')}}" method="post" style="display: inline-block">
                                                                    <input type="hidden" name="idCurso" value="{{ca.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <button type="submit" class="btn-link" onclick="return confirm('Se eliminara el registro!. ¿Desea continuar?');"><i class="fa fa-trash-o text-danger"></i> Eliminar</button>
                                                                </form>
                                                                <form action="{{path('institucioncursolargo_close')}}" method="post" style="display: inline-block">
                                                                    <input type="hidden" name="idCurso" value="{{ca.id}}">
                                                                    <button type="submit" class="btn-link" onclick="return confirm('Realmente desea cerrar el curso');"><i class="fa fa-lock"></i> Cerrar</button>
                                                                </form>
                                                                <form action="{{path('asignaturas')}}" method="post" style="display:inline-block">
                                                                    <input type="hidden" name="idCurso" value="{{ca.id}}">
                                                                    <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                                    <input type="hidden" name="gestion" value="{{gestion}}">
                                                                    <button type="submit" class="btn-link"><i class="fa fa-list"></i> Módulos</button>
                                                                </form>
                                                            {% endif %}
                                                        {% endif %}
                                                        <form action="{{path('institucioncursolargo_participante_index')}}" method="post" style="display:inline-block">
                                                            <input type="hidden" name="idCurso" value="{{ca.id}}">
                                                            <input type="hidden" name="idInstitucion" value="{{institucion.id}}">
                                                            <input type="hidden" name="gestion" value="{{gestion}}">
                                                            <button type="submit" class="btn-link"><i class="fa fa-users"></i> Participantes</button>
                                                        </form>
                                                        
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                               </div>
                            {% else %}
                                No hay carreras registradas
                            {% endif %}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}

