{% extends 'layoutPermanente.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Cursos Largos
                    <small>Centro Educativo</small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-search"></i><a href="{{path('institucioncursolargo',{'op':'search'})}}"> Buscar</a></li>
                    <li><i class="fa fa-dashboard"></i><a href="{{path('institucioncursolargo')}}"> Cursos Largos</a></li>
                    <li class="">Editar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('noSearch') %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Editar Curso</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form'} } )}}
                            <div class="panel-body">
                                <div class="row">
                                    <div class="form-group col-lg-2 col-md-6">
                                        {{ form_label(form.numero)}}
                                        {{form_widget(form.numero)}}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-5 col-md-6">
                                        {{ form_label(form.carrera)}}
                                        {{form_widget(form.carrera,{'attr':{'onchange':'listarEspecialidades(this.value)'} })}}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-5 col-md-6">
                                        {{ form_label(form.especialidad)}}
                                        {{form_widget(form.especialidad) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-6">
                                        {{ form_label(form.modalidad)}}
                                        {{form_widget(form.modalidad) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-6 col-md-6">
                                        {{ form_label(form.nivelAcreditacion)}}
                                        {{form_widget(form.nivelAcreditacion) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div id='sandbox-container'>
                                        <div class="input-daterange" id="datepicker">
                                            <div class="form-group col-lg-3 col-md-6">
                                                {{ form_label(form.fechaInicio)}}
                                                {{form_widget(form.fechaInicio) }}
                                                <div class="help-block with-errors"></div>
                                            </div>
                                            <div class="form-group col-lg-3 col-md-6">
                                                {{ form_label(form.fechaFin)}}
                                                {{form_widget(form.fechaFin) }}
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{ form_label(form.duracion)}}
                                        {{form_widget(form.duracion) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6">
                                        {{ form_label(form.reconocimiento)}}
                                        {{form_widget(form.reconocimiento) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-6">
                                        {{ form_label(form.poblacion)}}
                                        {{form_widget(form.poblacion) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-6 col-md-6">
                                        {{ form_label(form.poblacionDetalle)}}
                                        {{form_widget(form.poblacionDetalle) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-12">
                                        {{ form_label(form.departamento)}}
                                        {{form_widget(form.departamento,{'attr':{'onchange':'listarDistritos(this.value)'} }) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-6 col-md-12">
                                        {{ form_label(form.distrito)}}
                                        {{form_widget(form.distrito,{'attr':{'onchange':'municipios(this.value)'} }) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-12">
                                        {{ form_label(form.municipio)}}
                                        {{form_widget(form.municipio) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-6 col-md-12">
                                        {{ form_label(form.lugar)}}
                                        {{form_widget(form.lugar) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-lg-12 text-center">
                                        {{ form_widget(form.guardar ) }}
                                        <a href="{{path('institucioncursolargo')}}" class="btn btn-default">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        function listarEspecialidades(carrera){ // por ahora provincias , modificar
            $.ajax({
                type: 'get',
                url: Routing.generate('institucioneducativaCursoHabilitacion_listar_especialidades',{'carrera':carrera}),
                beforeSend: function () {
                    $("#form_especialidad").empty();
                    $("#form_especialidad").attr('disabled','disabled');
                },
                success: function (data) {
                    $("#form_especialidad").empty();
                    $("#form_especialidad").append('<option value="">Seleccionar...</option>');
                    $.each(data.especialidades, function (i, value) {
                        $("#form_especialidad").append('<option value="' + i + '">' + value + '</option>');
                    });      
                    $("#form_especialidad").removeAttr('disabled');
                }
            });   
        }
        
        function listarDistritos(dep){ // por ahora provincias , modificar
            $.ajax({
                type: 'get',
                url: Routing.generate('search_provincias',{'departamento':dep}),
                beforeSend: function () {
                    $("#form_distrito").empty();
                    $("#form_municipio").empty();
                    $("#form_distrito").attr('readonly');
                },
                success: function (data) {
                    $("#form_distrito").empty();
                    $("#form_municipio").empty();
                    $("#form_distrito").append('<option value="">Seleccionar...</option>');
                    $("#form_municipio").append('<option value="">Seleccionar...</option>');
                    $.each(data.provincia, function (i, value) {
                        $("#form_distrito").append('<option value="' + i + '">' + value + '</option>');
                    });      
                    $("#form_distrito").removeAttr('readonly');
                }
            });   
        }
        function municipios(provincia){
            $.ajax({
                type: 'get',
                url: Routing.generate('icl_municipio',{'provincia': provincia}),
                beforeSend: function () {
                    $("#form_municipio").empty();
                },
                success: function (data) {
                    $("#form_municipio").empty();
                    $("#form_municipio").append('<option value="">Seleccionar...</option>');
                    $.each(data.municipios, function (i, value) {
                        $("#form_municipio").append('<option value="' + i + '">' + value + '</option>');
                    });
                }
            });
        }

        function mostrarProgramaOtros(programa){
            if(programa == 4){
                $('#divProgramaOtros').css('display','block');
                $('#form_programaOtros').val('');
                $('#form_programaOtros').attr('required','required');
            }else{
                $('#form_programaOtros').val('');
                $('#divProgramaOtros').css('display','none');
                $('#form_programaOtros').removeAttr('required');
            }
        }
        
    </script>
{% endblock %}
