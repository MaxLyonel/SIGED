{% extends 'layoutPermanente.html.twig' %}
{% block contentoption %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Módulos
                    <small></small>
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-dashboard"></i>  <a href="{{path('institucioncursolargo')}}">Cursos Largos</a></li>
                    <li><i class="fa fa-list"></i>  <a href="{{path('asignaturas_session')}}">Módulos</a></li>
                    <li class="active">Editar</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-{{ app.session.get('sysporlet') }}">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Editar Módulo</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="basic-form-elements.html#panelinstitucion"><i class="fa fa-chevron-down"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="panelinstitucion" class="panel-collapse collapse in">
                    <div class="portlet-body">
                        <div class="panel-body panel-primary">
                            {{form_start(form, { 'attr': {'data-toggle': 'validator','role': 'form'} } )}}
                            <div class="panel-body">
                                <div class="row">
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{ form_label(form.asignatura)}}
                                        {{form_widget(form.asignatura) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{ form_label(form.maestro)}}
                                        {{form_widget(form.maestro) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        {{ form_label(form.horasMes)}}
                                        {{form_widget(form.horasMes) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div> 
                                <div class="form-group">
                                    <div class="col-lg-12 text-center">
                                        {{ form_widget(form.guardar ) }}
                                        <a href="{{path('asignaturas_session')}}" class="btn btn-default">Cancelar</a>
                                    </div>
                                </div>


                            </div>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        function listarEspecialidades(carrera){ // por ahora provincias , modificar
            $.ajax({
                type: 'get',
                url: Routing.generate('listar_especialidades',{'carrera':carrera}),
                beforeSend: function () {
                    $("#form_especialidad").empty();
                    $("#form_especialidad").attr('disabled','disabled');
                },
                success: function (data) {
                    $("#form_especialidad").empty();
                    $("#form_especialidad").append('<option value="">Seleccionar...</option>');
                    $.each(data.especialidades, function (i, value) {
                        $("#form_especialidad").append('<option value="' + i + '">' + value + '</option>');
                    });      
                    $("#form_especialidad").removeAttr('disabled');
                }
            });   
        }
        
        function listarDistritos(dep){ // por ahora provincias , modificar
            $.ajax({
                type: 'get',
                url: Routing.generate('search_provincias',{'departamento':dep}),
                beforeSend: function () {
                    $("#form_distrito").empty();
                    $("#form_distrito").attr('readonly');
                },
                success: function (data) {
                    $("#form_distrito").empty();
                    $("#form_distrito").append('<option value="">Seleccionar...</option>');
                    $.each(data.provincia, function (i, value) {
                        $("#form_distrito").append('<option value="' + i + '">' + value + '</option>');
                    });      
                    $("#form_distrito").removeAttr('readonly');
                }
            });   
        }
    </script>
{% endblock %}
