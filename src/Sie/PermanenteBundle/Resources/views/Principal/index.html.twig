{% extends 'layoutPermanente.html.twig' %}

{% block contentoption%}

    <!-- begin PAGE TITLE AREA -->
    <!-- Use this section for each page's title and breadcrumb layout. In this example a date range picker is included within the breadcrumb. -->
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Panel Principal
                    <small>Información sobre el usuario</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active"><i class="fa fa-dashboard"></i> Principal</li>
                </ol>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


    <div class="row">

        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <div class="portlet portlet-green">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4><i class="fa fa-user"></i> Información del Usuario</h4>
                            </div>
                            <div class="portlet-widgets">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-white dropdown-toggle btn-xs" data-toggle="dropdown">
                                        <i class="fa fa-circle text-green"></i> Datos
                                        <span class="caret"></span>
                                    </button>
                                </div>
                                <span class="divider"></span>
                                <a data-toggle="collapse" data-parent="#accordion" href="index.html#infouser"><i class="fa fa-chevron-down"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="infouser" class="panel-collapse collapse in">
                            <table class="table table-bordered table-striped table-hover">

                                <tr>
                                    <td>Paterno:</td>
                                    <td>{{ app.session.get('lastname') }}</td>
                                </tr>
                                <tr>
                                    <td>Materno:</td>
                                    <td>{{ app.session.get('lastname2')}}</td>
                                </tr>
                                <tr>
                                    <td>Nombre:</td>
                                    <td>{{ app.session.get('name') }}</td>
                                </tr>
                                <tr>
                                    <td>Usuario:</td>
                                    <td>{{ app.session.get('userName') }}</td>
                                </tr>
                                <tr>
                                    <td>Cuenta:</td>
                                    <td>{{ app.session.get('cuentauser') }}</td>
                                </tr>

                            </table>

                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="portlet portlet-green">
                        <div class="portlet-heading">
                            <div class="portlet-title">
                                <h4><i class="fa fa-exchange fa-fw"></i> Cambios Recientes</h4>
                            </div>
                            <div class="portlet-widgets">
                                <a data-toggle="collapse" data-parent="#accordion" href="index.html#transactionsPortlet"><i class="fa fa-chevron-down"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div id="transactionsPortlet" class="panel-collapse collapse in">
                            <div class="portlet-body">
                                <div class="table-responsive dashboard-demo-table">
                                    <table class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Hora</th>

                                                <th>Estatus</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1/31/14</td>
                                                <td>6:14 PM</td>

                                                <td><a class="btn btn-xs btn-orange disabled"><i class="fa fa-clock-o"></i> Pending</a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>1/31/14</td>
                                                <td>6:02 PM</td>

                                                <td><a class="btn btn-xs btn-orange disabled"><i class="fa fa-clock-o"></i> Pending</a>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                                <a class="btn btn-blue">Ver todas las operaciones</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->

            </div>
        </div>

    </div>



{% endblock %}
