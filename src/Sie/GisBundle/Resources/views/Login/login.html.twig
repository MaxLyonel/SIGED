        <!-- START @THEME STYLES -->
        <link href="{{asset('webGis/css/sign-type-2.css')}}" rel="stylesheet">
        <!--/ END THEME STYLES -->

        <style type="text/css">

            .sign-header {
                background-color: #0A60FE;
                border-bottom: 10px solid #043CA3;
            }
            .sign-text:before {
                background-color: #00c5fb;
            }

            .sign-text span {
                background-color: #0A60FE;
            }
            .sign-text img {
                border: 7px solid #81b71a;
            }

            .ckbox-theme input[type=checkbox]:checked + label::after {
                border-color: #1867A2;
                background-color: #2287D0;
            }
            .ckbox-theme input[type=checkbox][disabled]:checked + label::after {
                border-color: #2287D0;
                opacity: .5;
                background-color: #EEEEEE;
            }
            .ckbox label:before {
                border: 1px solid #CCCCCC;
            }
            #sign-wrapper .ckbox label {
                color: #2287D0;
            }
            .sign-body{
                background: #eeeeee;
            }
            .sign-footer{
                background: #ffffff;
            }
            body, html{
                background: #92BFFF;
                opacity: 1;
            }
        </style>
