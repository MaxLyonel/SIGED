    <body class="page-sound page-backstretch">

        
        <div id="sign-wrapper">

            <!-- Brand -->
            <div class="brand" style="height:70px">

            </div>
            <!--/ Brand -->

            <!-- Login form -->



            <div class="sign-header">
                <div class="form-group">
                    <div class="sign-text">
                        <span><b>SIGEE</b></span>
                    </div>
                    <center>
                        <small><i class="fa fa-graduation-cap"></i> MINISTERIO DE EDUCACIÒN</small>
                    </center>

                </div><!-- /.form-group -->
            </div><!-- /.sign-header -->
            <form class="form-signin" action="{{path('login_check')}}" accept-charset="utf-8" method="post">
              <div class="sign-body">
                {% if error %}
                    <div class="alert" style="text-align:center; color:#F90000;"> <i class="fa fa-info-circle"></i> {{ error.message|trans }}</div>
                {% endif %}
                  <div class="form-group">
                      <div class="input-group input-group-lg rounded no-overflow">
                        <input type="text" class="form-control" id="username" name="_username" autocomplete="off" value="{{ last_username }}" required placeholder="Usuario">
                          <span class="input-group-addon"><i class="fa fa-user"></i></span>
                      </div>
                  </div><!-- /.form-group -->
                  <div class="form-group">
                      <div class="input-group input-group-lg rounded no-overflow">
                           <input type="password" class="form-control" id="password" name="_password" autocomplete="off" value="" placeholder="Contraseña" required>
                          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                      </div>
                  </div><!-- /.form-group -->
              </div><!-- /.sign-body -->

              <div class="sign-footer">
                <div style="padding:10px; background: #ffffff">
                    <div class="checkbox" style="margin-left: 15px">
                        <label style="color:#3174C1">
                            <input type="checkbox" required="required"> <small> Validar los datos</small>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <br>
                    <button class="btn btn-block btn-lg btn-floating-action btn-primary ink-reaction" type="submit"> <small> <i class="fa fa-unlock"></i> Ingresar</small></button>
                </div><!-- /.form-group -->
              </div><!-- /.sign-footer -->
          </form>

          <div style="padding: 10px; text-align: center">
              <a href="{{path('logout')}}" style="color:#218FFCç; font-weight: bold">Ir a la página principal</a>
          </div>
