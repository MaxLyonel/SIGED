
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Nuevo Ambiente Pedagogico</h4>
        </div>
        {{form_start(form, {'attr':{'id':'formAmbientesPedagogicosId'} })}}
        <div class="modal-body">

                <div class="row">
                    <fieldset>
                        <legend>1.1 Ambiente</legend>
                        <div class="form-group col-sm-6">
                            {{form_widget(form.ambienteTipo)}}
                        </div>
                    </fieldset>
                </div>
                <div class="row">
                    <fieldset>
                        <legend>1.2 Dimensiones del ambiente</legend>
                        <div class="form-group col-sm-4">
                            {{form_label(form.ancho)}}
                            <div class="input-group">
                                {{form_widget(form.ancho)}}
                                <div class="input-group-addon">m</div>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            {{form_label(form.largo)}}
                            <div class="input-group">
                                {{form_widget(form.largo)}}
                                <div class="input-group-addon">m</div>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            {{form_label(form.alto)}}
                            <div class="input-group">
                                {{form_widget(form.alto)}}
                                <div class="input-group-addon">m</div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="row">
                    <fieldset>
                        <legend>1.3 Estado general de los ambientes</legend>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{form_label(form.estadoGeneral)}}
                                {{form_widget(form.estadoGeneral)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.iluminacionNatural)}}
                                {{form_widget(form.iluminacionNatural)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.iluminacionElectrica)}}
                                {{form_widget(form.iluminacionElectrica)}}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{form_label(form.seguridad)}}
                                {{form_widget(form.seguridad)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.piso)}}
                                {{form_widget(form.piso)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.paredes)}}
                                {{form_widget(form.paredes)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.techo)}}
                                {{form_widget(form.techo)}}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{form_label(form.ventanas)}}
                                {{form_widget(form.ventanas)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.puertas)}}
                                {{form_widget(form.puertas)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.pintura)}}
                                {{form_widget(form.pintura)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.cieloRaso)}}
                                {{form_widget(form.cieloRaso)}}
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <fieldset>
                            <legend>1.4 Capacidad del ambiente</legend>
                            <div class="form-group">
                                <div class="input-group">
                                    {{form_widget(form.capacidad)}}
                                    <div class="input-group-addon" id="info" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="top" title="" data-content="Introducir el nÃºmero aproximado de estudiantes que puede albergar este ambiente de una forma confortable para el aprendizaje." data-original-title="Tipo de acceso"><i class="fa fa-info"></i></div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-sm-6">
                        <fieldset>
                            <legend>1.5 Uso del Ambiente</legend>
                            <div class="form-group">
                                {{form_widget(form.uso)}}
                            </div>
                        </fieldset>
                    </div>
                </div>


        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default-alt" data-dismiss="modal">Cancelar</button>
            {{form_widget(form.save, {'attr': {'data-dismiss':'modal'} })}}
        </div>

        {{form_end(form)}}
    </div>
</div>
